<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.LoginWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:conv="clr-namespace:RosalEHealthcare.UI.WPF.Converters"
                      Title="Rosal Medical Clinic - Login"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="NoResize"
                      MinWidth="960" MinHeight="600"
                      Background="White"
                      KeyDown="Window_KeyDown">

    <controls:MetroWindow.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StrNullOrEmptyToVis" />

        <!-- Green primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Role buttons -->
        <Style x:Key="ChipRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd"
                                CornerRadius="8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Background="White"
                                Padding="14,8"
                                Margin="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E7D32"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2E7D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#F8FFF8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded PasswordBox -->
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#F8FFF8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Border Grid.Column="0" Background="#2E7D32">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                <Image Source="/RosalEHealthcare.UI.WPF;component/Resources/rosal_logo.png"
                       Width="200" Height="200" Margin="0,0,0,30" Stretch="Uniform"/>
                <TextBlock Text="ROSAL MEDICAL CLINIC" Foreground="White"
                           FontSize="26" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="AND SILANG MEDICAL LABORATORY" Foreground="White"
                           FontSize="14" TextAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="Welcome to our Healthcare System" Foreground="White"
                           FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Providing quality healthcare services with modern digital solutions for better patient care and efficient clinic management."
                           Foreground="White" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Width="280" Margin="0,0,0,40"/>
                <TextBlock Text="Version 1.0" Foreground="White" FontSize="10" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <TextBlock Text="System Login" FontSize="28" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Please enter your credentials to access the system" FontSize="13" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <!-- USERNAME -->
                <Grid Margin="0,0,0,15">
                    <TextBox x:Name="txtUsername"
                             Style="{StaticResource RoundedTextBox}"
                             TabIndex="0"/>
                    <TextBlock Text="Enter your username"
                               IsHitTestVisible="False"
                               Foreground="#9E9E9E"
                               Margin="14,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Visibility="{Binding Text, ElementName=txtUsername, Converter={StaticResource StrNullOrEmptyToVis}}"/>
                </Grid>

                <!-- PASSWORD -->
                <Grid Margin="0,0,0,15">
                    <PasswordBox x:Name="txtPassword"
                                 Style="{StaticResource RoundedPasswordBox}"
                                 TabIndex="1"
                                 PasswordChanged="txtPassword_PasswordChanged"/>
                    <TextBlock x:Name="pwdPlaceholder"
                               Text="Enter your password"
                               IsHitTestVisible="False"
                               Foreground="#9E9E9E"
                               Margin="14,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="Select User Role" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <RadioButton x:Name="rbAdmin" Content="Administrator" GroupName="Role" IsChecked="True" Style="{StaticResource ChipRadio}" TabIndex="2"/>
                    <RadioButton x:Name="rbDoctor" Content="Doctor" GroupName="Role" Style="{StaticResource ChipRadio}" TabIndex="3"/>
                    <RadioButton x:Name="rbReceptionist" Content="Receptionist" GroupName="Role" Style="{StaticResource ChipRadio}" TabIndex="4"/>
                </StackPanel>

                <Button x:Name="btnSignIn" Content="SIGN IN" Style="{StaticResource PrimaryButton}" Click="SignIn_Click" TabIndex="5" Margin="0,10,0,8"/>
                <TextBlock Text="Forgot Password?" Foreground="#2E7D32" FontSize="12" HorizontalAlignment="Center" Cursor="Hand" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>
