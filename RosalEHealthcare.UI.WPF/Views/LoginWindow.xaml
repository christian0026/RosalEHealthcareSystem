<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.LoginWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:conv="clr-namespace:RosalEHealthcare.UI.WPF.Converters"
                      Title=""
                      ShowTitleBar="False"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="NoResize"
                      Width="1400" 
                      Height="800"
                      Background="Transparent"
                      BorderThickness="0"
                      GlowBrush="{x:Null}"
                      WindowStyle="None"
                      AllowsTransparency="True"
                      KeyDown="Window_KeyDown"
                      MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <controls:MetroWindow.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StrNullOrEmptyToVis" />

        <!-- Green primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D8B40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Role buttons -->
        <Style x:Key="ChipRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd"
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                Background="White"
                                Padding="28,12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label style -->
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Rounded TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded PasswordBox -->
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </controls:MetroWindow.Resources>

    <!-- Rounded window border with shadow -->
    <Border Background="White" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <!-- Close Button -->
            <Button x:Name="btnClose" 
                    Content="✕" 
                    Width="40" 
                    Height="40"
                    Background="Transparent"
                    Foreground="#666666"
                    FontSize="20"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Panel.ZIndex="1000"
                    Click="btnClose_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Foreground" Value="#D32F2F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.4*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL -->
                <Border Grid.Column="0" Background="#2E7D32" CornerRadius="20,0,0,20">
                    <Grid>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40">

                            <!-- Logo with shadow -->
                            <Border Width="180" Height="180" Margin="0,0,0,35">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                                </Border.Effect>
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/RosalEHealthcare.UI.WPF;component/Resources/rosal_logo.png" 
                                                    Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>

                            <TextBlock Text="ROSAL MEDICAL CLINIC" 
                                       Foreground="White"
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       TextAlignment="Center"
                                       Margin="0,0,0,5"/>

                            <TextBlock Text="AND SILANG MEDICAL LABORATORY" 
                                       Foreground="White"
                                       FontSize="15" 
                                       TextAlignment="Center" 
                                       Margin="0,0,0,50"/>

                            <TextBlock Text="Welcome to our Healthcare System" 
                                       Foreground="White"
                                       FontSize="19" 
                                       FontWeight="SemiBold" 
                                       TextAlignment="Center" 
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Providing quality healthcare services with modern digital solutions for better patient care and efficient clinic management."
                                       Foreground="White" 
                                       FontSize="14" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center" 
                                       LineHeight="22"
                                       Width="380" 
                                       Margin="0,0,0,0"/>
                        </StackPanel>

                        <!-- Version at bottom left -->
                        <TextBlock Text="Version 1.0" 
                                   Foreground="White" 
                                   FontSize="12" 
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   Margin="25,0,0,25"/>
                    </Grid>
                </Border>

                <!-- RIGHT PANEL -->
                <Grid Grid.Column="1" Background="White">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Margin="60,0">

                        <TextBlock Text="System Login" 
                                   FontSize="38" 
                                   FontWeight="Bold" 
                                   Foreground="#2E7D32" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Please enter your credentials to access the system" 
                                   FontSize="15" 
                                   Foreground="#666666" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,40"/>

                        <!-- USERNAME -->
                        <TextBlock Text="Username" Style="{StaticResource InputLabel}"/>
                        <Grid Margin="0,0,0,24">
                            <TextBox x:Name="txtUsername"
                                     Style="{StaticResource RoundedTextBox}"
                                     TabIndex="0"/>
                            <TextBlock Text="Enter your username"
                                       IsHitTestVisible="False"
                                       Foreground="#BDBDBD"
                                       FontSize="16"
                                       Margin="20,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Text, ElementName=txtUsername, Converter={StaticResource StrNullOrEmptyToVis}}"/>
                        </Grid>

                        <!-- PASSWORD -->
                        <TextBlock Text="Password" Style="{StaticResource InputLabel}"/>
                        <Grid Margin="0,0,0,28">
                            <PasswordBox x:Name="txtPassword"
                                         Style="{StaticResource RoundedPasswordBox}"
                                         TabIndex="1"
                                         PasswordChanged="txtPassword_PasswordChanged"/>
                            <TextBlock x:Name="pwdPlaceholder"
                                       Text="Enter your password"
                                       IsHitTestVisible="False"
                                       Foreground="#BDBDBD"
                                       FontSize="16"
                                       Margin="20,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <TextBlock Text="Select User Role" 
                                   FontSize="15" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333333"
                                   Margin="0,0,0,14"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,0,0,32">
                            <RadioButton x:Name="rbAdmin" 
                                         Content="Administrator" 
                                         GroupName="Role" 
                                         IsChecked="True" 
                                         Style="{StaticResource ChipRadio}" 
                                         TabIndex="2"/>
                            <RadioButton x:Name="rbDoctor" 
                                         Content="Doctor" 
                                         GroupName="Role" 
                                         Style="{StaticResource ChipRadio}" 
                                         TabIndex="3"/>
                            <RadioButton x:Name="rbReceptionist" 
                                         Content="Receptionist" 
                                         GroupName="Role" 
                                         Style="{StaticResource ChipRadio}" 
                                         TabIndex="4"/>
                        </StackPanel>

                        <Button x:Name="btnSignIn" 
                                Content="SIGN IN" 
                                Style="{StaticResource PrimaryButton}" 
                                Click="SignIn_Click" 
                                TabIndex="5" 
                                Margin="0,0,0,20"/>

                        <TextBlock Text="Forgot Password?" 
                                   Foreground="#4CAF50" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center" 
                                   Cursor="Hand" 
                                   Margin="0,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</controls:MetroWindow>