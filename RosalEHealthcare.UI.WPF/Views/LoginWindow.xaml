<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.LoginWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Rosal Medical Clinic - Login"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="NoResize"
                      MinWidth="960" MinHeight="600"
                      Background="White"
                      KeyDown="Window_KeyDown">

    <controls:MetroWindow.Resources>
        <!-- ✅ Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- ✅ Role Buttons -->
        <Style x:Key="ChipRadio" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd"
                                CornerRadius="8"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Background="White"
                                Padding="14,8"
                                Margin="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E7D32"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2E7D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ✅ Rounded TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#D0E6D3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F7FFF8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ✅ Rounded PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#D0E6D3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F7FFF8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="6" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- ✅ LEFT SIDE (Branding) -->
        <Border Grid.Column="0" Background="#2E7D32">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
                <Image Source="/RosalEHealthcare.UI.WPF;component/Resources/rosal_logo.png"
                       Width="200" Height="200" Margin="0,0,0,30" Stretch="Uniform"/>
                <TextBlock Text="ROSAL MEDICAL CLINIC" Foreground="White"
                           FontSize="26" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="AND SILANG MEDICAL LABORATORY" Foreground="White"
                           FontSize="14" TextAlignment="Center" Margin="0,0,0,30"/>
                <TextBlock Text="Welcome to our Healthcare System" Foreground="White"
                           FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Providing quality healthcare services with modern digital solutions for better patient care and efficient clinic management."
                           Foreground="White" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Width="280" Margin="0,0,0,40"/>
                <TextBlock Text="Version 1.0" Foreground="White" FontSize="10" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- ✅ RIGHT SIDE (Login Form) -->
        <Grid Grid.Column="1" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <TextBlock Text="System Login" FontSize="28" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Please enter your credentials to access the system" FontSize="13" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <TextBlock Text="Username" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="txtUsername" TabIndex="0" Margin="0,0,0,15" />

                <TextBlock Text="Password" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <PasswordBox x:Name="txtPassword" TabIndex="1" Margin="0,0,0,15"/>

                <TextBlock Text="Select User Role" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <RadioButton x:Name="rbAdmin" Content="Administrator" GroupName="Role" IsChecked="True" Style="{StaticResource ChipRadio}" TabIndex="2"/>
                    <RadioButton x:Name="rbDoctor" Content="Doctor" GroupName="Role" Style="{StaticResource ChipRadio}" TabIndex="3"/>
                    <RadioButton x:Name="rbReceptionist" Content="Receptionist" GroupName="Role" Style="{StaticResource ChipRadio}" TabIndex="4"/>
                </StackPanel>

                <Button x:Name="btnSignIn" Content="SIGN IN" Style="{StaticResource PrimaryButton}" Click="SignIn_Click" TabIndex="5" Margin="0,10,0,8"/>

                <TextBlock Text="Forgot Password?" Foreground="#2E7D32" FontSize="12"
                           HorizontalAlignment="Center" Cursor="Hand" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>
