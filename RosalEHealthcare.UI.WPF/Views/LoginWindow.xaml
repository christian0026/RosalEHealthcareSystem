<!-- Views/LoginWindow.xaml -->
<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.LoginWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      Title="Rosal Medical Clinic - Login"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize"
                      MinWidth="900" MinHeight="600"
                      Background="White">

    <controls:MetroWindow.Resources>
        <!-- Inline style for rounded primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chip-like radio button style -->
        <Style x:Key="ChipRadio" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd" CornerRadius="8"
                                BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Padding="10,6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E7D32"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#2E7D32"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT: Branding -->
        <Border Grid.Column="0" Background="#2E7D32">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="24">
                    <!-- Put your PNG in Resources/clinic_logo.png and set Build Action = Resource -->
                    <Image x:Name="Rosal_Logo" Source="/RosalEHealthcare.UI.WPF;component/Resources/logo.jpg"
                           Width="200" Height="200" Stretch="Uniform" Margin="0,0,0,20"/>
                    <TextBlock Text="ROSAL MEDICAL CLINIC" Foreground="White"
                               FontSize="26" FontWeight="Bold" TextAlignment="Center"/>
                    <TextBlock Text="AND SILANG MEDICAL LABORATORY" Foreground="White"
                               FontSize="14" TextAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Welcome to our Healthcare System" Foreground="White"
                               FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Providing quality healthcare services with modern digital solutions for better patient care and efficient clinic management."
                               Foreground="White" FontSize="12" TextAlignment="Center" TextWrapping="Wrap" Width="260"/>
                    <TextBlock Text="Version 1.0" Foreground="White" FontSize="10" HorizontalAlignment="Left" Margin="0,40,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- RIGHT: Login form -->
        <Grid Grid.Column="1" Background="White">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="380" Margin="20">
                    <TextBlock Text="System Login" FontSize="26" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Please enter your credentials to access the system" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Username (MaterialDesign hint if library available) -->
                    <TextBox x:Name="txtUsername" Height="42" Margin="0,0,0,12" FontSize="14">
                        <materialDesign:HintAssist.Hint>Enter your username</materialDesign:HintAssist.Hint>
                    </TextBox>

                    <!-- Password -->
                    <PasswordBox x:Name="txtPassword" Height="42" Margin="0,0,0,12" FontSize="14"/>

                    <!-- Roles -->
                    <TextBlock Text="Select User Role" FontSize="12" Margin="0,8,0,8"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12" >
                        <RadioButton x:Name="rbAdmin" Content="Administrator" GroupName="Role" IsChecked="True" Style="{StaticResource ChipRadio}" Margin="4"/>
                        <RadioButton x:Name="rbDoctor" Content="Doctor" GroupName="Role" Style="{StaticResource ChipRadio}" Margin="4"/>
                        <RadioButton x:Name="rbReceptionist" Content="Receptionist" GroupName="Role" Style="{StaticResource ChipRadio}" Margin="4"/>
                    </StackPanel>

                    <!-- Sign In -->
                    <Button x:Name="btnSignIn" Content="SIGN IN" Style="{StaticResource PrimaryButton}" Click="SignIn_Click" Margin="0,10,0,6"/>

                    <TextBlock Text="Forgot Password?" Foreground="#2E7D32" FontSize="12" HorizontalAlignment="Center" Cursor="Hand" Margin="0,6,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</controls:MetroWindow>
