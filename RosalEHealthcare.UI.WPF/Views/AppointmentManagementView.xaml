<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.AppointmentManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
             xmlns:converters="clr-namespace:RosalEHealthcare.UI.WPF.Converters"
             Background="#F5F5F5">

    <UserControl.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVis"/>
        <converters:NameInitialsConverter x:Key="NameInitialsConverter"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditButton" TargetType="Button">
            <Setter Property="Background" Value="#FFA726"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FB8C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#EF5350"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">

                <!-- Summary Cards -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <local:SummaryCard Grid.Column="0" x:Name="CardTotalAppointments" 
                                       Title="Total Appointments" Value="0" Icon="📅" 
                                       TopColor="#2196F3" IconBackground="#E3F2FD"
                                       TrendText="" TrendColor="#2196F3" TrendIcon="✓"
                                       Margin="0,0,10,0"/>

                    <local:SummaryCard Grid.Column="1" x:Name="CardConfirmed" 
                                       Title="Confirmed" Value="0" Icon="✓" 
                                       TopColor="#4CAF50" IconBackground="#E8F5E9"
                                       TrendText="" TrendColor="#4CAF50" TrendIcon="✓"
                                       Margin="5,0,5,0"/>

                    <local:SummaryCard Grid.Column="2" x:Name="CardPending" 
                                       Title="Pending" Value="0" Icon="⏳" 
                                       TopColor="#FFA000" IconBackground="#FFF3E0"
                                       TrendText="" TrendColor="#FFA000" TrendIcon="⚠"
                                       Margin="5,0,5,0"/>

                    <local:SummaryCard Grid.Column="3" x:Name="CardCancelled" 
                                       Title="Cancelled" Value="0" Icon="✕" 
                                       TopColor="#E53935" IconBackground="#FFEBEE"
                                       TrendText="" TrendColor="#E53935" TrendIcon="▼"
                                       Margin="10,0,0,0"/>
                </Grid>

                <!-- Search and Filters Section -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Search Appointment" FontSize="13" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtSearch" Height="45" Padding="12,10" FontSize="14" KeyDown="txtSearch_KeyDown"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Date" FontSize="13" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <DatePicker x:Name="dpDate" Height="45" Padding="12,10" FontSize="14" SelectedDateChanged="FilterChanged"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Status" FontSize="13" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbStatus" Height="45" Padding="12,10" FontSize="14" SelectionChanged="FilterChanged">
                                    <ComboBoxItem Content="All Status" IsSelected="True"/>
                                    <ComboBoxItem Content="PENDING"/>
                                    <ComboBoxItem Content="CONFIRMED"/>
                                    <ComboBoxItem Content="COMPLETED"/>
                                    <ComboBoxItem Content="CANCELLED"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="6">
                                <TextBlock Text="Time Slot" FontSize="13" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbTimeSlot" Height="45" Padding="12,10" FontSize="14" SelectionChanged="FilterChanged">
                                    <ComboBoxItem Content="All Time" IsSelected="True"/>
                                    <ComboBoxItem Content="Morning"/>
                                    <ComboBoxItem Content="Afternoon"/>
                                    <ComboBoxItem Content="Evening"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="🔍 Search" Style="{StaticResource PrimaryButton}" Width="150" Click="Search_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Schedule New Appointment Button -->
                <Button x:Name="btnScheduleNew" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left" Margin="0,0,0,20" Padding="24,14" FontSize="15" Click="ScheduleNew_Click">
                    <TextBlock Text="+ Schedule New Appointment"/>
                </Button>

                <!-- Appointments DataGrid -->
                <Border Background="White" CornerRadius="10" Padding="0" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <DockPanel>
                        <Border DockPanel.Dock="Top" Background="#F5F5F5" Padding="25,20" CornerRadius="10,10,0,0">
                            <TextBlock Text="Scheduled Appointments" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                        </Border>

                        <DataGrid x:Name="dgAppointments" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False"
                                  IsReadOnly="True" GridLinesVisibility="None" BorderThickness="0" Background="White"
                                  RowBackground="White" AlternatingRowBackground="#FAFAFA" RowHeight="70" SelectionMode="Single" Margin="0">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="20,15"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="20,10"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" BorderThickness="0">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="DATE &amp; TIME" Width="160">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="#333"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Time" StringFormat="{}{0:MM/dd/yy h:mm tt}"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="PATIENT INFORMATION" Width="*" MinWidth="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="40" Height="40" CornerRadius="20" Background="#4CAF50" Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding PatientName, Converter={StaticResource NameInitialsConverter}}"
                                                               Foreground="White" FontWeight="Bold" FontSize="14"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding PatientName}" FontSize="14" FontWeight="SemiBold" Foreground="#333"/>
                                                    <TextBlock FontSize="12" Foreground="#757575">
                                                        <Run Text="ID:"/>
                                                        <Run Text="{Binding AppointmentId}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="CONTACT" Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="#555"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Contact"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="APPOINTMENT TYPE" Width="180">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="#333"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Type"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="STATUS" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Status, Converter={StaticResource StatusToBackgroundConverter}}"
                                                    Padding="12,6" CornerRadius="12" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" 
                                                           Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                           FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="ACTIONS" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource EditButton}" Click="Edit_Click" Tag="{Binding}">
                                                    <TextBlock Text="Edit"/>
                                                </Button>
                                                <Button Style="{StaticResource CancelButton}" Click="Cancel_Click" Tag="{Binding}">
                                                    <TextBlock Text="Cancel"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Border DockPanel.Dock="Bottom" Background="#FAFAFA" Padding="20" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0" CornerRadius="0,0,10,10">
                            <Grid>
                                <TextBlock x:Name="txtPaginationInfo" Text="Showing 0 appointments" FontSize="13" Foreground="#757575" VerticalAlignment="Center"/>
                                <StackPanel x:Name="paginationPanel" Orientation="Horizontal" HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Schedule/Edit Appointment Dialog -->
        <Grid x:Name="overlayPanel" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" Width="850" MaxHeight="750" CornerRadius="12" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30">
                        <Grid Margin="0,0,0,20">
                            <TextBlock x:Name="txtDialogTitle" Text="Schedule New Appointment" FontSize="22" FontWeight="Bold" Foreground="#2E7D32" VerticalAlignment="Center"/>
                            <Button Width="35" Height="35" FontSize="18" FontWeight="Bold" Background="Transparent" Foreground="#666"
                            BorderThickness="0" Cursor="Hand" HorizontalAlignment="Right" Click="CloseDialog_Click" Content="✕">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="17.5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!-- Personal Information Section -->
                        <TextBlock Text="Patient Information" FontSize="16" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,15"/>

                        <!-- Name Fields -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                            <Run Text="First Name"/>
                            <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <TextBox x:Name="txtFirstName" Height="50" Padding="15,12" FontSize="14" 
                                 BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Margin="5"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Middle Name" FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtMiddleName" Height="50" Padding="15,12" FontSize="14"
                                 BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Margin="5"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                            <Run Text="Last Name"/>
                            <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <TextBox x:Name="txtLastName" Height="50" Padding="15,12" FontSize="14"
                                 BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Margin="5"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                            <Run Text="Birth Date"/>
                            <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <DatePicker x:Name="dpBirthDate" Height="50" Padding="15,12" FontSize="14"
                                    BorderBrush="#E0E0E0" BorderThickness="1" Background="White"
                                    IsDropDownOpen="False">
                                    <DatePicker.Style>
                                        <Style TargetType="DatePicker">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DatePicker">
                                                        <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" 
                                                                   Text="{Binding SelectedDate, RelativeSource={RelativeSource TemplatedParent}, StringFormat='MM/dd/yyyy'}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="15,0,0,0"
                                                                   FontSize="14"
                                                                   Foreground="#333"/>
                                                                <Button x:Name="PART_Button" Grid.Column="1" 
                                                                Width="40" Height="40"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Content="📅"
                                                                FontSize="16"
                                                                Cursor="Hand"/>
                                                                <Popup x:Name="PART_Popup" 
                                                               AllowsTransparency="True"
                                                               Placement="Bottom"
                                                               PlacementTarget="{Binding ElementName=PART_Button}"
                                                               StaysOpen="False"/>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Style>
                                </DatePicker>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                            <Run Text="Gender"/>
                            <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <ComboBox x:Name="cmbGender" Height="50" Padding="15,12" FontSize="14"
                                  BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <ToggleButton x:Name="ToggleButton"
                                                                  Background="{TemplateBinding Background}"
                                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                                  Focusable="False"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                                <ToggleButton.Style>
                                                                    <Style TargetType="ToggleButton">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="ToggleButton">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                                    CornerRadius="6">
                                                                                        <Grid>
                                                                                            <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                                <ColumnDefinition Width="Auto"/>
                                                                                            </Grid.ColumnDefinitions>
                                                                                            <ContentPresenter Grid.Column="0" 
                                                                                                      Content="{TemplateBinding Content}"
                                                                                                      Margin="15,0,0,0"
                                                                                                      VerticalAlignment="Center"/>
                                                                                            <TextBlock Grid.Column="1" 
                                                                                               Text="▼" 
                                                                                               FontSize="10"
                                                                                               Margin="0,0,15,0"
                                                                                               VerticalAlignment="Center"
                                                                                               Foreground="#666"/>
                                                                                        </Grid>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </ToggleButton.Style>
                                                            </ToggleButton>
                                                            <ContentPresenter x:Name="ContentSite"
                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                      Margin="15,0,40,0"
                                                                      VerticalAlignment="Center"
                                                                      IsHitTestVisible="False"/>
                                                            <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                                <Border Background="White"
                                                                BorderBrush="#E0E0E0"
                                                                BorderThickness="1"
                                                                CornerRadius="6"
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                MaxHeight="200">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                                                    </Border.Effect>
                                                                    <ScrollViewer>
                                                                        <ItemsPresenter/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Style>
                                    <ComboBoxItem Content="Male"/>
                                    <ComboBoxItem Content="Female"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Contact Information Section -->
                        <TextBlock Text="Contact Information" FontSize="16" FontWeight="Bold" Foreground="#2E7D32" Margin="0,10,0,15"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                            <Run Text="Contact Number"/>
                            <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <TextBox x:Name="txtContact" Height="50" Padding="15,12" FontSize="14"
                                 BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Margin="5"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Email Address" FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtEmail" Height="50" Padding="15,12" FontSize="14"
                                 BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                  Margin="5"
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                        <Run Text="Complete Address"/>
                        <Run Text="*" Foreground="Red"/>
                            </TextBlock>
                            <TextBox x:Name="txtAddress" Height="70" Padding="15,12" FontSize="14" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="5"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Appointment Details Section -->
                        <TextBlock Text="Appointment Details" FontSize="16" FontWeight="Bold" Foreground="#2E7D32" Margin="0,10,0,15"/>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                        <Run Text="Appointment Type"/>
                        <Run Text="*" Foreground="Red"/>
                            </TextBlock>
                            <ComboBox x:Name="cmbAppointmentType" Height="50" Padding="15,12" FontSize="14"
                              BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <ToggleButton x:Name="ToggleButton"
                                                              Background="{TemplateBinding Background}"
                                                              BorderBrush="{TemplateBinding BorderBrush}"
                                                              BorderThickness="{TemplateBinding BorderThickness}"
                                                              Focusable="False"
                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                              ClickMode="Press">
                                                            <ToggleButton.Style>
                                                                <Style TargetType="ToggleButton">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ToggleButton">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="6">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="Auto"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <ContentPresenter Grid.Column="0" 
                                                                                                  Content="{TemplateBinding Content}"
                                                                                                  Margin="15,0,0,0"
                                                                                                  VerticalAlignment="Center"/>
                                                                                        <TextBlock Grid.Column="1" 
                                                                                           Text="▼" 
                                                                                           FontSize="10"
                                                                                           Margin="0,0,15,0"
                                                                                           VerticalAlignment="Center"
                                                                                           Foreground="#666"/>
                                                                                    </Grid>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ToggleButton.Style>
                                                        </ToggleButton>
                                                        <ContentPresenter x:Name="ContentSite"
                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                  Margin="15,0,40,0"
                                                                  VerticalAlignment="Center"
                                                                  IsHitTestVisible="False"/>
                                                        <Popup x:Name="Popup"
                                                       Placement="Bottom"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       PopupAnimation="Slide">
                                                            <Border Background="White"
                                                            BorderBrush="#E0E0E0"
                                                            BorderThickness="1"
                                                            CornerRadius="6"
                                                            MinWidth="{TemplateBinding ActualWidth}"
                                                            MaxHeight="200">
                                                                <Border.Effect>
                                                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                                                </Border.Effect>
                                                                <ScrollViewer>
                                                                    <ItemsPresenter/>
                                                                </ScrollViewer>
                                                            </Border>
                                                        </Popup>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBoxItem Content="General Consultation" IsSelected="True"/>
                                <ComboBoxItem Content="Follow-up Visit"/>
                                <ComboBoxItem Content="Laboratory Test"/>
                                <ComboBoxItem Content="Medical Certificate"/>
                                <ComboBoxItem Content="Vaccination"/>
                                <ComboBoxItem Content="Physical Examination"/>
                            </ComboBox>
                        </StackPanel>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                            <Run Text="Appointment Date"/>
                            <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <DatePicker x:Name="dpAppointmentDate" Height="50" Padding="15,12" FontSize="14"
                                    BorderBrush="#E0E0E0" BorderThickness="1" Background="White">
                                    <DatePicker.Style>
                                        <Style TargetType="DatePicker">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DatePicker">
                                                        <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" 
                                                                   Text="{Binding SelectedDate, RelativeSource={RelativeSource TemplatedParent}, StringFormat='MM/dd/yyyy'}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="15,0,0,0"
                                                                   FontSize="14"
                                                                   Foreground="#333"/>
                                                                <Button x:Name="PART_Button" Grid.Column="1" 
                                                                Width="40" Height="40"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Content="📅"
                                                                FontSize="16"
                                                                Cursor="Hand"/>
                                                                <Popup x:Name="PART_Popup" 
                                                               AllowsTransparency="True"
                                                               Placement="Bottom"
                                                               PlacementTarget="{Binding ElementName=PART_Button}"
                                                               StaysOpen="False"/>
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Style>
                                </DatePicker>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                            <Run Text="Appointment Time"/>
                            <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <ComboBox x:Name="cmbAppointmentTime" Height="50" Padding="15,12" FontSize="14"
                                  BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <ToggleButton x:Name="ToggleButton"
                                                                  Background="{TemplateBinding Background}"
                                                                  BorderBrush="{TemplateBinding BorderBrush}"
                                                                  BorderThickness="{TemplateBinding BorderThickness}"
                                                                  Focusable="False"
                                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                  ClickMode="Press">
                                                                <ToggleButton.Style>
                                                                    <Style TargetType="ToggleButton">
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="ToggleButton">
                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                                    CornerRadius="6">
                                                                                        <Grid>
                                                                                            <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="*"/>
                                                                                                <ColumnDefinition Width="Auto"/>
                                                                                            </Grid.ColumnDefinitions>
                                                                                            <ContentPresenter Grid.Column="0" 
                                                                                                      Content="{TemplateBinding Content}"
                                                                                                      Margin="15,0,0,0"
                                                                                                      VerticalAlignment="Center"/>
                                                                                            <TextBlock Grid.Column="1" 
                                                                                               Text="▼" 
                                                                                               FontSize="10"
                                                                                               Margin="0,0,15,0"
                                                                                               VerticalAlignment="Center"
                                                                                               Foreground="#666"/>
                                                                                        </Grid>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </ToggleButton.Style>
                                                            </ToggleButton>
                                                            <ContentPresenter x:Name="ContentSite"
                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                      Margin="15,0,40,0"
                                                                      VerticalAlignment="Center"
                                                                      IsHitTestVisible="False"/>
                                                            <Popup x:Name="Popup"
                                                           Placement="Bottom"
                                                           IsOpen="{TemplateBinding IsDropDownOpen}"
                                                           AllowsTransparency="True"
                                                           Focusable="False"
                                                           PopupAnimation="Slide">
                                                                <Border Background="White"
                                                                BorderBrush="#E0E0E0"
                                                                BorderThickness="1"
                                                                CornerRadius="6"
                                                                MinWidth="{TemplateBinding ActualWidth}"
                                                                MaxHeight="200">
                                                                    <Border.Effect>
                                                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                                                    </Border.Effect>
                                                                    <ScrollViewer>
                                                                        <ItemsPresenter/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Style>
                                    <ComboBoxItem Content="08:00 AM"/>
                                    <ComboBoxItem Content="08:30 AM"/>
                                    <ComboBoxItem Content="09:00 AM" IsSelected="True"/>
                                    <ComboBoxItem Content="09:30 AM"/>
                                    <ComboBoxItem Content="10:00 AM"/>
                                    <ComboBoxItem Content="10:30 AM"/>
                                    <ComboBoxItem Content="11:00 AM"/>
                                    <ComboBoxItem Content="11:30 AM"/>
                                    <ComboBoxItem Content="01:00 PM"/>
                                    <ComboBoxItem Content="01:30 PM"/>
                                    <ComboBoxItem Content="02:00 PM"/>
                                    <ComboBoxItem Content="02:30 PM"/>
                                    <ComboBoxItem Content="03:00 PM"/>
                                    <ComboBoxItem Content="03:30 PM"/>
                                    <ComboBoxItem Content="04:00 PM"/>
                                    <ComboBoxItem Content="04:30 PM"/>
                                    <ComboBoxItem Content="05:00 PM"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,30">
                            <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                        <Run Text="Reason for Visit / Chief Complaint"/>
                        <Run Text="*" Foreground="Red"/>
                            </TextBlock>
                            <TextBox x:Name="txtReason" Height="100" Padding="15,12" FontSize="14" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Foreground="#333">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="5"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Height="50" FontSize="15" FontWeight="Bold" Background="#E0E0E0" Foreground="#333"
                            BorderThickness="0" Cursor="Hand" Click="CloseDialog_Click" Content="Cancel">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D0D0D0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="btnSaveAppointment" Grid.Column="2" Height="50" FontSize="15" FontWeight="Bold"
                            Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"
                            Click="SaveAppointment_Click" Content="✓ Schedule Appointment">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45A049"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>