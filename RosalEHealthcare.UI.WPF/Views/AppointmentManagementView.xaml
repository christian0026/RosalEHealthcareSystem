<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.AppointmentManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:RosalEHealthcare.UI.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Local Converters - ADD THESE 4 LINES -->
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVis"/>
        <converters:NameInitialsConverter x:Key="NameInitialsConverter"/>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Edit Button Style -->
        <Style x:Key="EditButton" TargetType="Button">
            <Setter Property="Background" Value="#FFA726"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FB8C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="#EF5350"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Pagination Button Style -->
        <Style x:Key="PaginationButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Pagination Button -->
        <Style x:Key="ActivePaginationButton" TargetType="Button" BasedOn="{StaticResource PaginationButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
        </Style>

        <!-- Input Style -->
        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="FilterDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">
                <!-- Search and Filters Section -->
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Search Row -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Appointment -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Search Appointment" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#333"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <TextBox x:Name="txtSearch"
                                             Style="{StaticResource SearchTextBox}"
                                             KeyDown="txtSearch_KeyDown"/>
                                    <TextBlock Text="Search by name or Patient ID..."
                                               IsHitTestVisible="False"
                                               Foreground="#BDBDBD"
                                               FontSize="14"
                                               Margin="15,0,0,0"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding Text, ElementName=txtSearch, Converter={StaticResource StringNullOrEmptyToVis}}"/>
                                </Grid>
                            </StackPanel>

                            <!-- Date Filter -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Date" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#333"
                                           Margin="0,0,0,8"/>
                                <DatePicker x:Name="dpDate"
                                            Style="{StaticResource FilterDatePicker}"
                                            SelectedDateChanged="FilterChanged"/>
                            </StackPanel>

                            <!-- Status Filter -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Status" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#333"
                                           Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbStatus"
                                          Style="{StaticResource FilterComboBox}"
                                          SelectionChanged="FilterChanged">
                                    <ComboBoxItem Content="All Status" IsSelected="True"/>
                                    <ComboBoxItem Content="CONFIRMED"/>
                                    <ComboBoxItem Content="PENDING"/>
                                    <ComboBoxItem Content="CANCELLED"/>
                                    <ComboBoxItem Content="COMPLETED"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Time Slot Filter -->
                            <StackPanel Grid.Column="6">
                                <TextBlock Text="Time Slot" 
                                           FontSize="13" 
                                           FontWeight="SemiBold" 
                                           Foreground="#333"
                                           Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbTimeSlot"
                                          Style="{StaticResource FilterComboBox}"
                                          SelectionChanged="FilterChanged">
                                    <ComboBoxItem Content="All Time" IsSelected="True"/>
                                    <ComboBoxItem Content="Morning"/>
                                    <ComboBoxItem Content="Afternoon"/>
                                    <ComboBoxItem Content="Evening"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Search Button Row -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <Button Content="🔍 Search"
                                    Style="{StaticResource PrimaryButton}"
                                    Width="150"
                                    Click="Search_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Schedule New Appointment Button -->
                <Button x:Name="btnScheduleNew"
                        Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20"
                        Padding="24,14"
                        FontSize="15"
                        Click="ScheduleNew_Click">
                    <TextBlock Text="+ Schedule New Appointment"/>
                </Button>

                <!-- Appointments DataGrid -->
                <Border Background="White" CornerRadius="10" Padding="0" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <DockPanel>
                        <!-- Header -->
                        <Border DockPanel.Dock="Top" 
                                Background="#F5F5F5" 
                                Padding="25,20"
                                CornerRadius="10,10,0,0">
                            <TextBlock Text="Scheduled Appointments" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333"/>
                        </Border>

                        <!-- DataGrid -->
                        <DataGrid x:Name="dgAppointments"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  Background="White"
                                  RowBackground="White"
                                  AlternatingRowBackground="#FAFAFA"
                                  RowHeight="70"
                                  SelectionMode="Single"
                                  Margin="0">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="20,15"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="20,10"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        BorderThickness="0">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <!-- Date & Time -->
                                <DataGridTextColumn Header="DATE &amp; TIME" Width="160">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="#333"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Time" StringFormat="{}{0:MM/dd/yy h:mm tt}"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <!-- Patient Information -->
                                <DataGridTemplateColumn Header="PATIENT INFORMATION" Width="*" MinWidth="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="40" 
                                                        Height="40" 
                                                        CornerRadius="20" 
                                                        Background="#4CAF50"
                                                        Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding PatientName, Converter={StaticResource NameInitialsConverter}}"
                                                               Foreground="White"
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding PatientName}" 
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#333"/>
                                                    <TextBlock FontSize="12" Foreground="#757575">
                                                        <Run Text="ID:"/>
                                                        <Run Text="{Binding PatientId, StringFormat='PT-{0:D3}'}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Contact -->
                                <DataGridTextColumn Header="CONTACT" Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="#555"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Contact"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <!-- Appointment Type -->
                                <DataGridTextColumn Header="APPOINTMENT TYPE" Width="180">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="#333"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Type"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>

                                <!-- Status -->
                                <DataGridTemplateColumn Header="STATUS" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Status, Converter={StaticResource StatusToBackgroundConverter}}"
                                                    Padding="12,6"
                                                    CornerRadius="12"
                                                    HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Status}" 
                                                           Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                           FontSize="12"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Actions -->
                                <DataGridTemplateColumn Header="ACTIONS" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Style="{StaticResource EditButton}"
                                                        Click="Edit_Click"
                                                        Tag="{Binding}">
                                                    <TextBlock Text="Edit"/>
                                                </Button>
                                                <Button Style="{StaticResource CancelButton}"
                                                        Click="Cancel_Click"
                                                        Tag="{Binding}">
                                                    <TextBlock Text="Cancel"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination Footer -->
                        <Border DockPanel.Dock="Bottom" 
                                Background="#FAFAFA" 
                                Padding="20"
                                BorderThickness="0,1,0,0"
                                BorderBrush="#E0E0E0"
                                CornerRadius="0,0,10,10">
                            <Grid>
                                <TextBlock x:Name="txtPaginationInfo"
                                           Text="Showing 1-5 of 1,245 patients"
                                           FontSize="13"
                                           Foreground="#757575"
                                           VerticalAlignment="Center"/>
                                <StackPanel x:Name="paginationPanel"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Right">
                                    <!-- Pagination buttons will be added dynamically -->
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Schedule/Edit Appointment Dialog -->
        <Grid x:Name="overlayPanel" 
              Background="#80000000" 
              Visibility="Collapsed">
            <Border Background="White"
                    Width="700"
                    MaxHeight="600"
                    CornerRadius="12"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30">
                        <!-- Dialog Header -->
                        <Grid Margin="0,0,0,20">
                            <TextBlock x:Name="txtDialogTitle"
                                       Text="Schedule New Appointment" 
                                       FontSize="22" 
                                       FontWeight="Bold" 
                                       Foreground="#2E7D32"
                                       VerticalAlignment="Center"/>
                            <Button Width="35"
                                    Height="35"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Background="Transparent"
                                    Foreground="#666"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Right"
                                    Click="CloseDialog_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="17.5">
                                                        <TextBlock Text="✕" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!-- Patient Selection -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Select Patient" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="cmbPatient"
                                      Height="50"
                                      Padding="15,12"
                                      FontSize="14"
                                      BorderBrush="#E0E0E0"
                                      BorderThickness="1"
                                      Background="White"
                                      DisplayMemberPath="FullName"
                                      SelectionChanged="cmbPatient_SelectionChanged"/>
                        </StackPanel>

                        <!-- Patient ID (Read-only) -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Patient ID" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPatientId"
                                     Height="50"
                                     Padding="15,12"
                                     FontSize="14"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"
                                     Background="#F5F5F5"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <!-- Contact (Read-only) -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Contact Number" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPatientContact"
                                     Height="50"
                                     Padding="15,12"
                                     FontSize="14"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"
                                     Background="#F5F5F5"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <!-- Appointment Type -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                                <Run Text="Appointment Type"/>
                                <Run Text="*" Foreground="Red"/>
                            </TextBlock>
                            <ComboBox x:Name="cmbAppointmentType"
                                      Height="50"
                                      Padding="15,12"
                                      FontSize="14"
                                      BorderBrush="#E0E0E0"
                                      BorderThickness="1"
                                      Background="White">
                                <ComboBoxItem Content="General Consultation" IsSelected="True"/>
                                <ComboBoxItem Content="Follow-up Visit"/>
                                <ComboBoxItem Content="Laboratory Test"/>
                                <ComboBoxItem Content="Medical Certificate"/>
                                <ComboBoxItem Content="Vaccination"/>
                                <ComboBoxItem Content="Physical Examination"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Date and Time -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                                    <Run Text="Appointment Date"/>
                                    <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <DatePicker x:Name="dpAppointmentDate"
                                            Height="50"
                                            Padding="15,12"
                                            FontSize="14"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            Background="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                                    <Run Text="Appointment Time"/>
                                    <Run Text="*" Foreground="Red"/>
                                </TextBlock>
                                <ComboBox x:Name="cmbAppointmentTime"
                                          Height="50"
                                          Padding="15,12"
                                          FontSize="14"
                                          BorderBrush="#E0E0E0"
                                          BorderThickness="1"
                                          Background="White">
                                    <ComboBoxItem Content="08:00 AM"/>
                                    <ComboBoxItem Content="08:30 AM"/>
                                    <ComboBoxItem Content="09:00 AM" IsSelected="True"/>
                                    <ComboBoxItem Content="09:30 AM"/>
                                    <ComboBoxItem Content="10:00 AM"/>
                                    <ComboBoxItem Content="10:30 AM"/>
                                    <ComboBoxItem Content="11:00 AM"/>
                                    <ComboBoxItem Content="11:30 AM"/>
                                    <ComboBoxItem Content="01:00 PM"/>
                                    <ComboBoxItem Content="01:30 PM"/>
                                    <ComboBoxItem Content="02:00 PM"/>
                                    <ComboBoxItem Content="02:30 PM"/>
                                    <ComboBoxItem Content="03:00 PM"/>
                                    <ComboBoxItem Content="03:30 PM"/>
                                    <ComboBoxItem Content="04:00 PM"/>
                                    <ComboBoxItem Content="04:30 PM"/>
                                    <ComboBoxItem Content="05:00 PM"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Reason/Condition -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8">
                                <Run Text="Reason for Visit / Chief Complaint"/>
                                <Run Text="*" Foreground="Red"/>
                            </TextBlock>
                            <TextBox x:Name="txtReason"
                                     Height="100"
                                     Padding="15,12"
                                     FontSize="14"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"
                                     Background="White"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Appointment Status" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"
                                       Margin="0,0,0,8"/>
                            <ComboBox x:Name="cmbAppointmentStatus"
                                      Height="50"
                                      Padding="15,12"
                                      FontSize="14"
                                      BorderBrush="#E0E0E0"
                                      BorderThickness="1"
                                      Background="White">
                                <ComboBoxItem Content="CONFIRMED" IsSelected="True"/>
                                <ComboBoxItem Content="PENDING"/>
                                <ComboBoxItem Content="COMPLETED"/>
                                <ComboBoxItem Content="CANCELLED"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Height="50"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Background="#E0E0E0"
                                    Foreground="#333"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="CloseDialog_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8">
                                                        <TextBlock Text="Cancel"
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D0D0D0"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button x:Name="btnSaveAppointment"
                                    Grid.Column="2"
                                    Height="50"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="SaveAppointment_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8">
                                                        <TextBlock Text="✓ Save Appointment"
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45A049"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>