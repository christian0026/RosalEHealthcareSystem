<Window x:Class="RosalEHealthcare.UI.WPF.Views.PatientEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Patient" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Full Name"/>
            <TextBox x:Name="TxtFullName" Width="420" Margin="0,6"/>
            <TextBlock Text="Patient ID"/>
            <TextBox x:Name="TxtPatientId" Width="200" Margin="0,6"/>
            <TextBlock Text="Birthdate"/>
            <DatePicker x:Name="DpBirthDate" Width="200" Margin="0,6"/>
            <TextBlock Text="Gender"/>
            <ComboBox x:Name="CbGender" Width="200" Margin="0,6">
                <ComboBoxItem Content="Male"/>
                <ComboBoxItem Content="Female"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>
            <TextBlock Text="Contact"/>
            <TextBox x:Name="TxtContact" Width="300" Margin="0,6"/>
            <TextBlock Text="Email"/>
            <TextBox x:Name="TxtEmail" Width="300" Margin="0,6"/>
            <TextBlock Text="Address"/>
            <TextBox x:Name="TxtAddress" Width="420" Margin="0,6"/>

            <TextBlock Text="Primary Diagnosis" Margin="0,8,0,0"/>
            <TextBox x:Name="TxtPrimaryDiagnosis" Width="420" Margin="0,6"/>
            <TextBlock Text="Secondary Diagnosis"/>
            <TextBox x:Name="TxtSecondaryDiagnosis" Width="420" Margin="0,6"/>
            <TextBlock Text="Allergies"/>
            <TextBox x:Name="TxtAllergies" Width="420" Margin="0,6"/>
            <TextBlock Text="Blood Type"/>
            <TextBox x:Name="TxtBloodType" Width="120" Margin="0,6"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Width="96" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="96" Margin="8,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
