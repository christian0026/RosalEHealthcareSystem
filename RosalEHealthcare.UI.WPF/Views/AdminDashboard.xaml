<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.AdminDashboard"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title=""
                      ShowTitleBar="False"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize"
                      MinWidth="1100" 
                      MinHeight="700"
                      Width="1400"
                      Height="900"
                      Background="#F5F5F5"
                      BorderThickness="0"
                      GlowBrush="{x:Null}"
                      WindowStyle="None"
                      WindowState="Maximized"
                      StateChanged="Window_StateChanged">

    <controls:MetroWindow.Resources>
        <!-- Sidebar button style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8"
                                Margin="4,2">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A8A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2F7D2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active nav button style -->
        <Style x:Key="SidebarButtonActive" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>

        <!-- Quick action button -->
        <Style x:Key="QuickActionBtn" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary quick action (green) -->
        <Style x:Key="PrimaryQuickAction" TargetType="Button" BasedOn="{StaticResource QuickActionBtn}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Window Control Button Style -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CUSTOM TITLE BAR -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>

                <!-- Window Control Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button x:Name="btnMinimize" 
                            Content="─" 
                            Style="{StaticResource WindowControlButton}"
                            Click="btnMinimize_Click"
                            FontSize="16"/>
                    <Button x:Name="btnMaximize" 
                            Content="□" 
                            Style="{StaticResource WindowControlButton}"
                            Click="btnMaximize_Click"
                            FontSize="14"/>
                    <Button x:Name="btnClose" 
                            Content="✕" 
                            Style="{StaticResource CloseButton}"
                            Click="btnClose_Click"
                            FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="#2E7D32">
                <DockPanel>
                    <StackPanel Margin="16,16,16,8" DockPanel.Dock="Top">
                        <!-- Logo & Title -->
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,20">
                            <Border Width="50" Height="50" CornerRadius="25" Background="White" Padding="2">
                                <Image Source="/RosalEHealthcare.UI.WPF;component/Resources/rosal_logo.png"
                                       Stretch="Uniform"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="ROSAL eHEALTHCARE" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           FontSize="14"/>
                                <TextBlock Text="Management System" 
                                           Foreground="#E0E0E0" 
                                           FontSize="11"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- User Profile -->
                        <StackPanel Margin="0,10,0,0">
                            <Border Width="60" Height="60" CornerRadius="30" 
                                    BorderBrush="White" BorderThickness="2"
                                    HorizontalAlignment="Center">
                                <Ellipse x:Name="ProfileEllipse" Fill="LightGray"/>
                            </Border>
                            <TextBlock x:Name="TxtUserFullName" 
                                       Text="Admin Name" 
                                       Foreground="White" 
                                       FontSize="15" 
                                       FontWeight="Bold" 
                                       TextAlignment="Center"
                                       Margin="0,10,0,2"/>
                            <TextBlock x:Name="TxtUserRole" 
                                       Text="Administrator" 
                                       Foreground="#E0E0E0" 
                                       FontSize="12"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Navigation Items -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  DockPanel.Dock="Top"
                                  Margin="8,20,8,0">
                        <StackPanel>
                            <Button x:Name="BtnDashboard" 
                                    Content="📊 Dashboard" 
                                    Style="{StaticResource SidebarButtonActive}" 
                                    Margin="8,4" 
                                    Click="Dashboard_Click"/>

                            <Button x:Name="BtnPatientManagement" 
                                    Content="👥 Patient Management" 
                                    Style="{StaticResource SidebarButton}" 
                                    Margin="8,4" 
                                    Click="PatientManagement_Click"/>

                            <Button x:Name="BtnMedicineInventory" 
                                    Content="💊 Medicine Inventory" 
                                    Style="{StaticResource SidebarButton}" 
                                    Margin="8,4" 
                                    Click="MedicineInventory_Click"/>

                            <Button x:Name="BtnUserManagement" 
                                    Content="👤 User Management" 
                                    Style="{StaticResource SidebarButton}" 
                                    Margin="8,4" 
                                    Click="UserManagementView_Click"/>

                            <Button x:Name="BtnReports" 
                                    Content="📈 Reports &amp; Analysis" 
                                    Style="{StaticResource SidebarButton}" 
                                    Margin="8,4" 
                                    Click="Reports_Click"/>

                            <Button x:Name="BtnSettings" 
                                    Content="⚙️ System Settings" 
                                    Style="{StaticResource SidebarButton}" 
                                    Margin="8,4" 
                                    Click="Settings_Click"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Logout Button at Bottom -->
                    <StackPanel DockPanel.Dock="Bottom" Margin="16,12">
                        <Button Content="🚪 Logout" 
                                Background="#D32F2F" 
                                Foreground="White" 
                                Padding="12"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="Logout_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C62828"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- MAIN CONTENT AREA -->
            <DockPanel Grid.Column="1" Background="#F5F5F5">
                <!-- Top Bar -->
                <Border DockPanel.Dock="Top" 
                        Height="70" 
                        Background="White" 
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        Padding="20,0">
                    <Grid>
                        <TextBlock x:Name="txtPageTitle" 
                                   Text="Admin Dashboard" 
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   Foreground="#2E7D32" 
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    VerticalAlignment="Center">
                            <Border Background="#FFF3E0" 
                                    CornerRadius="20"
                                    Width="40"
                                    Height="40"
                                    Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding NotificationCommand}"/>
                                </Border.InputBindings>
                                <Grid>
                                    <TextBlock Text="🔔" 
                                               FontSize="20"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Border Background="#FF5722"
                                            Width="18"
                                            Height="18"
                                            CornerRadius="9"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top"
                                            Margin="0,-2,-2,0">
                                        <TextBlock Text="3"
                                                   Foreground="White"
                                                   FontSize="10"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- MAIN CONTENT WRAPPER -->
                <Grid Background="#F5F5F5">
                    <!-- Default Dashboard Content -->
                    <ScrollViewer x:Name="DashboardPanel" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="20">
                            <!-- Summary Cards -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Total Patients" Foreground="#757575" FontSize="13"/>
                                            <TextBlock Text="1,245" FontSize="32" FontWeight="Bold" Foreground="#2E7D32" Margin="0,8,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="✓" Foreground="#4CAF50" FontWeight="Bold" Margin="0,0,4,0"/>
                                                <TextBlock Text="+12% from last month" Foreground="#4CAF50" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Background="#E8F5E9" 
                                                Width="60" Height="60" 
                                                CornerRadius="30"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                            <TextBlock Text="👥" FontSize="28" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="5,0,5,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Today's Appointments" Foreground="#757575" FontSize="13"/>
                                            <TextBlock Text="87" FontSize="32" FontWeight="Bold" Foreground="#2196F3" Margin="0,8,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="✓" Foreground="#2196F3" FontWeight="Bold" Margin="0,0,4,0"/>
                                                <TextBlock Text="+5% from yesterday" Foreground="#2196F3" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Background="#E3F2FD" 
                                                Width="60" Height="60" 
                                                CornerRadius="30"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                            <TextBlock Text="📅" FontSize="28" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="20" Margin="5,0,5,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Low Stock Medicines" Foreground="#757575" FontSize="13"/>
                                            <TextBlock Text="23" FontSize="32" FontWeight="Bold" Foreground="#FF9800" Margin="0,8,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="⚠" Foreground="#FF9800" FontWeight="Bold" Margin="0,0,4,0"/>
                                                <TextBlock Text="Requires attention" Foreground="#FF9800" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Background="#FFF3E0" 
                                                Width="60" Height="60" 
                                                CornerRadius="30"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                            <TextBlock Text="📦" FontSize="28" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="3" Background="White" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="Expiring Medicines" Foreground="#757575" FontSize="13"/>
                                            <TextBlock Text="45" FontSize="32" FontWeight="Bold" Foreground="#F44336" Margin="0,8,0,0"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="🔴" FontWeight="Bold" Margin="0,0,4,0"/>
                                                <TextBlock Text="Expiring in 30 days" Foreground="#F44336" FontSize="12"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Border Background="#FFEBEE" 
                                                Width="60" Height="60" 
                                                CornerRadius="30"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                            <TextBlock Text="⏰" FontSize="28" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Chart + Activities -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" MinWidth="400"/>
                                    <ColumnDefinition Width="*" MinWidth="300"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,20">
                                            <TextBlock Text="Patient Statistics" 
                                                       FontSize="18" 
                                                       FontWeight="Bold" 
                                                       Foreground="#333"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Monthly patient visit trends" 
                                                       FontSize="12" 
                                                       Foreground="#999"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0"/>
                                        </StackPanel>
                                        <Grid>
                                            <Ellipse Width="200" Height="200" Fill="#4CAF50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <TextBlock Text="Chart Area" 
                                                       Foreground="White"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DockPanel>
                                </Border>

                                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,20">
                                            <TextBlock Text="Recent Activities" 
                                                       FontSize="18" 
                                                       FontWeight="Bold" 
                                                       Foreground="#333"/>
                                            <TextBlock Text="Latest system activities and updates" 
                                                       FontSize="11" 
                                                       Foreground="#999"
                                                       VerticalAlignment="Bottom"
                                                       Margin="8,0,0,2"/>
                                        </StackPanel>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                            <StackPanel>
                                                <Border Background="#F5F5F5" Padding="10" CornerRadius="6" Margin="0,0,0,8">
                                                    <StackPanel>
                                                        <TextBlock Text="Recent Activities Table" Foreground="#333" FontWeight="SemiBold"/>
                                                        <TextBlock Text="Activity list will appear here" Foreground="#999" FontSize="11" Margin="0,4,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </DockPanel>
                                </Border>
                            </Grid>

                            <!-- Quick Actions -->
                            <Border Background="White" CornerRadius="10" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Quick Actions" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="#333" 
                                               Margin="0,0,0,15"/>
                                    <WrapPanel HorizontalAlignment="Left">
                                        <Button Style="{StaticResource PrimaryQuickAction}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="➕" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Add New Patient"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📅" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Schedule Appointment"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📦" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Update Inventory"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📊" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Generate Report"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="👥" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Manage Users"/>
                                            </StackPanel>
                                        </Button>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Swappable Subpages -->
                    <ContentControl x:Name="MainContent" Visibility="Collapsed"/>
                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</controls:MetroWindow>