<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.AdminDashboard"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Admin Dashboard"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize"
                      MinWidth="1100" MinHeight="700"
                      Background="#F5F5F5">

    <controls:MetroWindow.Resources>
        <!-- Sidebar button style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A8A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2F7D2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active nav button style -->
        <Style x:Key="SidebarButtonActive" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#3FA23F"/>
        </Style>

        <!-- Quick action button -->
        <Style x:Key="QuickActionBtn" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Primary quick action (green) -->
        <Style x:Key="PrimaryQuickAction" TargetType="Button" BasedOn="{StaticResource QuickActionBtn}">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#2E7D32">
            <DockPanel>
                <StackPanel Margin="16" DockPanel.Dock="Top">
                    <!-- logo & title -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,12">
                        <Ellipse Width="40" Height="40" Fill="White"/>
                        <TextBlock Text="ROSAL eHEALTHCARE" Foreground="White" FontWeight="Bold"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- user -->
                    <StackPanel Margin="0,10,0,0">
                        <Ellipse Width="48" Height="48" Fill="LightGray"/>
                        <TextBlock Text="Admin Name" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,8,0,0"/>
                        <TextBlock Text="Administrator" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- nav items -->
                <StackPanel DockPanel.Dock="Top" Margin="8,30,8,0">
                    <Button Content="Dashboard" Style="{StaticResource SidebarButtonActive}" Margin="8"/>
                    <Button Content="Patient Management" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="Medicine Inventory" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="User Management" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="Reports &amp; Analysis" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="System Settings" Style="{StaticResource SidebarButton}" Margin="8"/>
                </StackPanel>

                <!-- logout bottom -->
                <StackPanel DockPanel.Dock="Bottom" Margin="16,12">
                    <Button Content="Logout" Background="#A14747" Foreground="White" Padding="12"
                            Click="Logout_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <DockPanel Grid.Column="1">
            <!-- topbar -->
            <Border DockPanel.Dock="Top" Height="60" Background="White" Margin="0,0,0,6">
                <Grid>
                    <TextBlock Text="Admin Dashboard" FontSize="22" FontWeight="Bold"
                               Foreground="#2E7D32" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <Button Content="🔔" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                            Background="Transparent" BorderBrush="Transparent" FontSize="18"/>
                </Grid>
            </Border>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <!-- Summary cards -->
                    <UniformGrid Columns="4" Margin="0,0,0,20">
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Total Patients" Foreground="Gray"/>
                                <TextBlock Text="1,245" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="↑12% from last month" Foreground="Green"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Today's Appointments" Foreground="Gray"/>
                                <TextBlock Text="87" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="↑5% from yesterday" Foreground="Blue"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Low stock Medicines" Foreground="Gray"/>
                                <TextBlock Text="23" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="⚠ Requires attention" Foreground="OrangeRed"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Expiring Medicines" Foreground="Gray"/>
                                <TextBlock Text="45" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="⚠ Expiring in 30 days" Foreground="Red"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Chart + Activities -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Patient Statistics" FontSize="16" FontWeight="Bold"/>
                                <Ellipse Width="120" Height="120" Fill="#2E7D32" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20"/>
                                <TextBlock Text="Patient visit analytics and trends will be displayed here" Foreground="Gray" FontSize="12" TextAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Recent Activities" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="Recent Activities Table" Foreground="Gray" FontSize="12" Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Quick actions -->
                    <Border Background="White" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Add New Patient" Style="{StaticResource PrimaryQuickAction}" />
                                <Button Content="Schedule Appointment" Style="{StaticResource QuickActionBtn}" />
                                <Button Content="Update Inventory" Style="{StaticResource QuickActionBtn}" />
                                <Button Content="Generate Report" Style="{StaticResource QuickActionBtn}" />
                                <Button Content="Manage Users" Style="{StaticResource QuickActionBtn}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</controls:MetroWindow>
