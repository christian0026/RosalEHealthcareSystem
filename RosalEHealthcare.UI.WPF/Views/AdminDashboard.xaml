<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.AdminDashboard"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
                      xmlns:local="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      Title=""
                      ShowTitleBar="False"
                      ShowIconOnTitleBar="False"
                      ShowMinButton="False"
                      ShowMaxRestoreButton="False"
                      ShowCloseButton="False"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize"
                      MinWidth="1100" 
                      MinHeight="700"
                      Width="1400"
                      Height="900"
                      Background="#F5F5F5"
                      BorderThickness="0"
                      GlowBrush="{x:Null}"
                      WindowStyle="None"
                      WindowState="Maximized"
                      StateChanged="Window_StateChanged">

    <controls:MetroWindow.Resources>
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="8" Margin="4,2">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A8A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2F7D2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButtonActive" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickActionBtn" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryQuickAction" TargetType="Button" BasedOn="{StaticResource QuickActionBtn}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E81123"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnMinimize" Content="─" Style="{StaticResource WindowControlButton}" Click="btnMinimize_Click"/>
                    <Button x:Name="btnMaximize" Content="□" Style="{StaticResource WindowControlButton}" Click="btnMaximize_Click"/>
                    <Button x:Name="btnClose" Content="✕" Style="{StaticResource CloseButton}" Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#2E7D32">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="4" Opacity="0.2"/>
                </Border.Effect>
                <DockPanel>
                    <StackPanel Margin="16,24,16,8" DockPanel.Dock="Top">
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,30">
                            <Border Width="50" Height="50" CornerRadius="25" Background="White" Padding="2">
                                <Image Source="/RosalEHealthcare.UI.WPF;component/Resources/rosal_logo.png" Stretch="Uniform"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center" Margin="12,0,0,0">
                                <TextBlock Text="ROSAL eHEALTHCARE" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Management System" Foreground="#E0E0E0" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                            <StackPanel>
                                <Button x:Name="BtnDashboard" Content="📊 Dashboard" Style="{StaticResource SidebarButtonActive}" Margin="8,4" Click="Dashboard_Click"/>
                                <Button x:Name="BtnPatientManagement" Content="👥 Patient Management" Style="{StaticResource SidebarButton}" Margin="8,4" Click="PatientManagement_Click"/>
                                <Button x:Name="BtnMedicineInventory" Content="💊 Medicine Inventory" Style="{StaticResource SidebarButton}" Margin="8,4" Click="MedicineInventory_Click"/>
                                <Button x:Name="BtnUserManagement" Content="👤 User Management" Style="{StaticResource SidebarButton}" Margin="8,4" Click="UserManagementView_Click"/>
                                <Button x:Name="BtnReports" Content="📈 Reports &amp; Analysis" Style="{StaticResource SidebarButton}" Margin="8,4" Click="Reports_Click"/>
                                <Button x:Name="BtnSettings" Content="⚙️ System Settings" Style="{StaticResource SidebarButton}" Margin="8,4" Click="Settings_Click"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>

                    <TextBlock Text="Version 1.0" DockPanel.Dock="Bottom" Foreground="#80FFFFFF" FontSize="11" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                </DockPanel>
            </Border>

            <DockPanel Grid.Column="1" Background="#F5F5F5">
                <Border DockPanel.Dock="Top" Height="70" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20,0">
                    <Grid>
                        <TextBlock x:Name="txtPageTitle" Text="Admin Dashboard" FontSize="24" FontWeight="Bold" Foreground="#2E7D32" VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <local:NotificationBellButton x:Name="NotificationBell" Margin="0,0,20,0"/>
                            <Border Width="1" Height="30" Background="#EEE" Margin="0,0,20,0"/>

                            <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                                <materialDesign:PopupBox.ToggleContent>
                                    <StackPanel Orientation="Horizontal" Cursor="Hand" Background="Transparent">
                                        <Border Width="40" Height="40" CornerRadius="20" Background="#E8F5E9" BorderBrush="#2E7D32" BorderThickness="1">
                                            <Grid>
                                                <Ellipse x:Name="ProfileEllipse" Fill="Transparent"/>
                                                <TextBlock x:Name="TxtUserInitials" Text="AD" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#2E7D32" FontWeight="Bold"/>
                                            </Grid>
                                        </Border>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock x:Name="TxtUserFullName" Text="Admin Name" FontWeight="SemiBold" FontSize="14"/>
                                            <TextBlock x:Name="TxtUserRole" Text="Administrator" FontSize="11" Foreground="Gray"/>
                                        </StackPanel>
                                        <iconPacks:PackIconMaterial Kind="ChevronDown" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="Gray"/>
                                    </StackPanel>
                                </materialDesign:PopupBox.ToggleContent>
                                <StackPanel MinWidth="180" Margin="0,8">
                                    <Button Content="My Profile" HorizontalContentAlignment="Left" Click="Settings_Click"/>
                                    <Button Content="Account Settings" HorizontalContentAlignment="Left" Click="Settings_Click"/>
                                    <Separator Opacity="0.5"/>
                                    <Button x:Name="BtnLogout" Click="Logout_Click" Foreground="#D32F2F" HorizontalContentAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="Logout" Margin="0,0,10,0"/>
                                            <TextBlock Text="Logout"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </materialDesign:PopupBox>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid>
                    <ScrollViewer x:Name="DashboardPanel" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="20">
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <local:SummaryCard Grid.Column="0" x:Name="CardTotalPatients" Title="Total Patients" Value="0" Icon="👥" TopColor="#4CAF50" IconBackground="#E8F5E9" TrendText="" TrendColor="#4CAF50" TrendIcon="▲" Margin="0,0,10,0"/>
                                <local:SummaryCard Grid.Column="1" x:Name="CardTodayAppointments" Title="Today's Appointments" Value="0" Icon="📅" TopColor="#2196F3" IconBackground="#E3F2FD" TrendText="" TrendColor="#2196F3" TrendIcon="▲" Margin="5,0,5,0"/>
                                <local:SummaryCard Grid.Column="2" x:Name="CardLowStock" Title="Low Stock Medicines" Value="0" Icon="📦" TopColor="#FF9800" IconBackground="#FFF3E0" TrendText="Requires attention" TrendColor="#FF9800" TrendIcon="⚠" Margin="5,0,5,0"/>
                                <local:SummaryCard Grid.Column="3" x:Name="CardExpiringMedicines" Title="Expiring Medicines" Value="0" Icon="⏰" TopColor="#F44336" IconBackground="#FFEBEE" TrendText="Expiring in 30 days" TrendColor="#F44336" TrendIcon="🔴" Margin="10,0,0,0"/>
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" MinWidth="500"/>
                                    <ColumnDefinition Width="*" MinWidth="350"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <DockPanel>
                                        <Grid DockPanel.Dock="Top" Margin="0,0,0,20">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Patient Statistics" FontSize="18" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="txtChartSubtitle" Text="Top 10 Common Illnesses" FontSize="12" Foreground="#999" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button x:Name="btnShowIllnesses" Content="Illnesses" Background="#4CAF50" Foreground="White" Padding="12,6" Margin="0,0,8,0" BorderThickness="0" Cursor="Hand" FontSize="12" FontWeight="SemiBold" Click="btnShowIllnesses_Click"/>
                                                <Button x:Name="btnShowTrends" Content="Visit Trends" Background="#E0E0E0" Foreground="#666" Padding="12,6" BorderThickness="0" Cursor="Hand" FontSize="12" FontWeight="SemiBold" Click="btnShowTrends_Click"/>
                                            </StackPanel>
                                        </Grid>
                                        <Grid x:Name="ChartsContainer" MinHeight="350">
                                            <lvc:CartesianChart x:Name="IllnessesChart" Series="{Binding}" LegendLocation="None" Visibility="Visible">
                                                <lvc:CartesianChart.AxisY>
                                                    <lvc:Axis Title="Number of Patients" FontSize="12" Foreground="#666"/>
                                                </lvc:CartesianChart.AxisY>
                                                <lvc:CartesianChart.AxisX>
                                                    <lvc:Axis Title="Illness/Condition" Labels="{Binding}" FontSize="11" Foreground="#666" LabelsRotation="45"/>
                                                </lvc:CartesianChart.AxisX>
                                            </lvc:CartesianChart>
                                            <lvc:CartesianChart x:Name="TrendsChart" Series="{Binding}" LegendLocation="None" Visibility="Collapsed">
                                                <lvc:CartesianChart.AxisY>
                                                    <lvc:Axis Title="Number of Visits" FontSize="12" Foreground="#666" MinValue="0"/>
                                                </lvc:CartesianChart.AxisY>
                                                <lvc:CartesianChart.AxisX>
                                                    <lvc:Axis Title="Date" Labels="{Binding}" FontSize="11" Foreground="#666"/>
                                                </lvc:CartesianChart.AxisX>
                                            </lvc:CartesianChart>
                                        </Grid>
                                    </DockPanel>
                                </Border>

                                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="20" Margin="10,0,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,20">
                                            <TextBlock Text="Recent Activities" FontSize="18" FontWeight="Bold" Foreground="#333"/>
                                            <TextBlock Text="Latest system activities and updates" FontSize="11" Foreground="#999" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400" DockPanel.Dock="Top">
                                            <ItemsControl x:Name="ActivitiesList">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F9F9F9" Padding="12" CornerRadius="6" Margin="0,0,0,10">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18" Background="#E8F5E9" VerticalAlignment="Top" Margin="0,0,12,0">
                                                                    <TextBlock Text="{Binding ModuleIcon, Mode=OneWay}" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="{Binding ActivityType, Mode=OneWay}" FontWeight="SemiBold" FontSize="13" Foreground="#333" TextWrapping="Wrap"/>
                                                                    <TextBlock Text="{Binding Description, Mode=OneWay}" FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,2,0,0"/>
                                                                    <TextBlock FontSize="11" Foreground="#999" Margin="0,4,0,0">
                                                                        <Run Text="{Binding PerformedBy, Mode=OneWay}"/>
                                                                        <Run Text=" • "/>
                                                                        <Run Text="{Binding TimeAgo, Mode=OneWay}"/>
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                        <Grid DockPanel.Dock="Bottom" Margin="0,15,0,0">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button x:Name="btnPrevActivities" Content="← Previous" Background="#E0E0E0" Foreground="#666" Padding="12,6" Margin="0,0,8,0" BorderThickness="0" Cursor="Hand" FontSize="12" Click="btnPrevActivities_Click"/>
                                                <TextBlock x:Name="txtActivitiesPage" Text="Page 1" FontSize="12" Foreground="#666" VerticalAlignment="Center" Margin="8,0"/>
                                                <Button x:Name="btnNextActivities" Content="Next →" Background="#E0E0E0" Foreground="#666" Padding="12,6" Margin="8,0,0,0" BorderThickness="0" Cursor="Hand" FontSize="12" Click="btnNextActivities_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </DockPanel>
                                </Border>
                            </Grid>

                            <Border Background="White" CornerRadius="10" Padding="20">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>
                                    <WrapPanel HorizontalAlignment="Left">
                                        <Button Style="{StaticResource PrimaryQuickAction}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="➕" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Add New Patient"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📅" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Schedule Appointment"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📦" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Update Inventory"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📊" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Generate Report"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource QuickActionBtn}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="👥" FontSize="16" Margin="0,0,6,0"/>
                                                <TextBlock Text="Manage Users"/>
                                            </StackPanel>
                                        </Button>
                                    </WrapPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <ContentControl x:Name="MainContent" Visibility="Collapsed"/>
                </Grid>
            </DockPanel>
        </Grid>

        <Canvas x:Name="ToastContainer" Grid.Row="1" IsHitTestVisible="False" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Panel.ZIndex="99"/>
    </Grid>
</controls:MetroWindow>