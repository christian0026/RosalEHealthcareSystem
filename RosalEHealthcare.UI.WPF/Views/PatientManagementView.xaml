<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.PatientManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#F5F5F5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Summary Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,20">
                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Total Patients" Foreground="Gray"/>
                        <TextBlock Text="1,245" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="↑12% from last month" Foreground="Green"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Today's Appointments" Foreground="Gray"/>
                        <TextBlock Text="87" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="↑5% from yesterday" Foreground="Blue"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Remaining Patient" Foreground="Gray"/>
                        <TextBlock Text="23" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="⚠ Requires attention" Foreground="OrangeRed"/>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Expiring Medicines" Foreground="Gray"/>
                        <TextBlock Text="45" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="⚠ Expiring within 30 days" Foreground="Red"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Patient Records -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Patient Records" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Height="34" Margin="0,0,8,0">
                            <materialDesign:HintAssist.Hint>Search by Name or ID</materialDesign:HintAssist.Hint>
                        </TextBox>
                        <ComboBox Grid.Column="1" Height="34" Margin="0,0,8,0" SelectedIndex="0">
                            <ComboBoxItem Content="All Status"/>
                            <ComboBoxItem Content="Completed"/>
                            <ComboBoxItem Content="Pending"/>
                            <ComboBoxItem Content="Cancelled"/>
                        </ComboBox>
                        <ComboBox Grid.Column="2" Height="34" Margin="0,0,8,0" SelectedIndex="0">
                            <ComboBoxItem Content="All Gender"/>
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                        </ComboBox>
                        <Button Grid.Column="3" Content="Search" Background="#2E7D32" Foreground="White" Padding="10,5"/>
                    </Grid>

                    <!-- Patient List Table -->
                    <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column"
                              CanUserAddRows="False" IsReadOnly="True"
                              Margin="0,10,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient Info" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Patient ID" Binding="{Binding PatientId}" Width="100"/>
                            <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" Width="200"/>
                            <DataGridTextColumn Header="Birthdate" Binding="{Binding Birthdate}" Width="150"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="100"/>
                            <DataGridTextColumn Header="Last Visit" Binding="{Binding LastVisit}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="View" Background="#2E7D32" Foreground="White" Margin="2" Padding="6,2"/>
                                            <Button Content="Edit" Background="#FFD54F" Foreground="Black" Margin="2" Padding="6,2"/>
                                            <Button Content="Delete" Background="#E57373" Foreground="White" Margin="2" Padding="6,2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
