<Window x:Class="RosalEHealthcare.UI.WPF.Views.CompleteConsultationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Complete Consultation"
        Width="750"
        Height="850"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- HEADER -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="25,20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="✓ Complete Consultation" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="txtDuration" Text="Duration: 15 minutes" 
                               FontSize="14" Foreground="#C8E6C9" Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        FontSize="20" FontWeight="Bold" Cursor="Hand"
                        Width="40" Height="40" Click="BtnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- CONTENT -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25">

                <!-- Patient Summary Card -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="60" Height="60" CornerRadius="30" 
                                Background="#4CAF50" Margin="0,0,15,0">
                            <TextBlock x:Name="txtInitials" Text="JD" Foreground="White" 
                                       FontSize="22" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="txtPatientName" Text="Patient Name" 
                                       FontSize="18" FontWeight="Bold" Foreground="#333"/>
                            <TextBlock x:Name="txtPatientId" Text="PT-2025-001 • General Consultation" 
                                       FontSize="13" Foreground="#666" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Vital Signs Badges -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border x:Name="bpBadge" Background="#E3F2FD" CornerRadius="6" 
                                    Padding="10,5" Margin="0,0,8,0" Visibility="Collapsed">
                                <TextBlock x:Name="txtBPBadge" Text="BP: 120/80" 
                                           FontSize="12" Foreground="#1565C0" FontWeight="SemiBold"/>
                            </Border>
                            <Border x:Name="tempBadge" Background="#FFF3E0" CornerRadius="6" 
                                    Padding="10,5" Visibility="Collapsed">
                                <TextBlock x:Name="txtTempBadge" Text="37.5°C" 
                                           FontSize="12" Foreground="#EF6C00" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Diagnosis Section -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📋 Diagnosis" FontSize="16" FontWeight="Bold" 
                                   Foreground="#333" Margin="0,0,0,20"/>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,8">
                                <Run Text="Primary Diagnosis"/>
                                <Run Text=" *" Foreground="#E53935"/>
                            </TextBlock>
                            <TextBox x:Name="txtPrimaryDiagnosis" Height="45" FontSize="14" 
                                     Padding="12,10" BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Secondary Diagnosis (Optional)" FontSize="13" 
                                       FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtSecondaryDiagnosis" Height="45" FontSize="14" 
                                     Padding="12,10" BorderBrush="#E0E0E0" BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Treatment Section -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="💊 Treatment Plan" FontSize="16" FontWeight="Bold" 
                                   Foreground="#333" Margin="0,0,0,20"/>

                        <StackPanel>
                            <TextBlock Text="Treatment Notes / Recommendations" FontSize="13" 
                                       FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtTreatment" Height="100" FontSize="14" 
                                     Padding="12,10" BorderBrush="#E0E0E0" BorderThickness="1"
                                     TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Follow-up Actions -->
                <Border Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📅 Follow-up Actions" FontSize="16" FontWeight="Bold" 
                                   Foreground="#333" Margin="0,0,0,20"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="chkPrescription" Grid.Column="0"
                                      Content=" Create Prescription" FontSize="14"
                                      Foreground="#333" VerticalContentAlignment="Center"/>

                            <CheckBox x:Name="chkFollowUp" Grid.Column="1"
                                      Content=" Schedule Follow-up Appointment" FontSize="14"
                                      Foreground="#333" VerticalContentAlignment="Center"
                                      Checked="ChkFollowUp_Checked"
                                      Unchecked="ChkFollowUp_Unchecked"/>
                        </Grid>

                        <StackPanel x:Name="followUpPanel" Visibility="Collapsed" Margin="0,10,0,0">
                            <TextBlock Text="Follow-up Date" FontSize="13" 
                                       FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,8"/>
                            <DatePicker x:Name="dpFollowUp" Height="45" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- FOOTER -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Border Grid.Row="2" Background="White" Padding="25,20" 
                BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Cancel" Height="50" FontSize="15" FontWeight="SemiBold"
                        Background="#E0E0E0" Foreground="#333" BorderThickness="0" Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" Content="✓ Complete &amp; Save" Height="50" FontSize="15" FontWeight="Bold"
                        Background="#2E7D32" Foreground="White" BorderThickness="0" Cursor="Hand"
                        Click="BtnComplete_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>