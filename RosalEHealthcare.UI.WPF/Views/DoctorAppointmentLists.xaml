<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.DoctorAppointmentLists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#F5F5F5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <!-- SUMMARY CARDS -->
            <UniformGrid Columns="4" Margin="0 0 0 24">
                <!-- COMPLETED -->
                <Border Background="White" CornerRadius="12" Padding="20"
                        Margin="6" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Completed" Foreground="#666" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtCompletedCount" Text="0"
                                   FontSize="30" FontWeight="Bold" Margin="0 4 0 4"/>
                        <materialDesign:PackIcon Kind="CheckCircle"
                                                 Width="30" Height="30"
                                                 Foreground="#2E7D32"/>
                    </StackPanel>
                </Border>

                <!-- CONFIRMED -->
                <Border Background="White" CornerRadius="12" Padding="20"
                        Margin="6" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Confirmed" Foreground="#666" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtConfirmedCount" Text="0"
                                   FontSize="30" FontWeight="Bold" Margin="0 4 0 4"/>
                        <materialDesign:PackIcon Kind="Check"
                                                 Width="30" Height="30"
                                                 Foreground="#1565C0"/>
                    </StackPanel>
                </Border>

                <!-- PENDING -->
                <Border Background="White" CornerRadius="12" Padding="20"
                        Margin="6" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Pending" Foreground="#666" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtPendingCount" Text="0"
                                   FontSize="30" FontWeight="Bold" Margin="0 4 0 4"/>
                        <materialDesign:PackIcon Kind="TimerSand"
                                                 Width="30" Height="30"
                                                 Foreground="#FFA000"/>
                    </StackPanel>
                </Border>

                <!-- CANCELLED -->
                <Border Background="White" CornerRadius="12" Padding="20"
                        Margin="6" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Cancelled" Foreground="#666" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtCancelledCount" Text="0"
                                   FontSize="30" FontWeight="Bold" Margin="0 4 0 4"/>
                        <materialDesign:PackIcon Kind="CloseCircle"
                                                 Width="30" Height="30"
                                                 Foreground="#D32F2F"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- FILTER BAR -->
            <Border Background="White" CornerRadius="12"
                    Padding="14" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0 0 0 20">

                <DockPanel LastChildFill="False">

                    <!-- Search -->
                    <TextBox x:Name="txtSearch"
                             Width="320" Height="40"
                             Margin="0 0 12 0"
                             Padding="10"
                             materialDesign:HintAssist.Hint="Search by Patient name..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             TextChanged="TxtSearch_TextChanged"/>

                    <!-- Status -->
                    <ComboBox x:Name="cbStatus"
                              Width="150" Height="40"
                              Margin="0 0 12 0"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              SelectionChanged="CbStatus_SelectionChanged">
                        <ComboBoxItem Content="All Status" IsSelected="True"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Confirmed"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Cancelled"/>
                    </ComboBox>

                    <!-- Date -->
                    <DatePicker x:Name="dpDate"
                                Width="150" Height="40"
                                Margin="0 0 12 0"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                    <!-- Type -->
                    <ComboBox x:Name="cbType"
                              Width="150" Height="40"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              SelectionChanged="CbType_SelectionChanged">
                        <ComboBoxItem Content="All Types" IsSelected="True"/>
                        <ComboBoxItem Content="Check-up"/>
                        <ComboBoxItem Content="Follow-up"/>
                        <ComboBoxItem Content="Consultation"/>
                    </ComboBox>
                </DockPanel>

            </Border>

            <!-- APPOINTMENT CARDS -->
            <WrapPanel x:Name="wpAppointments"
                       ItemWidth="520"
                       Orientation="Horizontal"
                       Margin="0 0 0 60"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
