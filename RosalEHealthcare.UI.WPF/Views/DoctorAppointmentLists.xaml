<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.DoctorAppointmentLists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             MinWidth="1100" MinHeight="700"
             Background="{DynamicResource MaterialDesignPaper}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <!-- HEADER -->
            <TextBlock Text="Appointment Lists"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                       Margin="0,0,0,20"/>

            <!-- SUMMARY CARDS -->
            <UniformGrid Columns="4" Margin="0,0,0,24">
                <materialDesign:Card Padding="16" Margin="6" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Completed" FontWeight="Bold" Foreground="Gray" FontSize="14"/>
                        <TextBlock x:Name="txtCompletedCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="#2E7D32" Margin="0,4"/>
                        <materialDesign:PackIcon Kind="CheckCircle" Width="28" Height="28" Foreground="#2E7D32"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="6" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Confirmed" FontWeight="Bold" Foreground="Gray" FontSize="14"/>
                        <TextBlock x:Name="txtConfirmedCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="#1565C0" Margin="0,4"/>
                        <materialDesign:PackIcon Kind="CheckCircleOutline" Width="28" Height="28" Foreground="#1565C0"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="6" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Pending" FontWeight="Bold" Foreground="Gray" FontSize="14"/>
                        <TextBlock x:Name="txtPendingCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="#FFB300" Margin="0,4"/>
                        <materialDesign:PackIcon Kind="TimerSand" Width="28" Height="28" Foreground="#FFB300"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Padding="16" Margin="6" Background="{DynamicResource MaterialDesignPaper}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Cancelled" FontWeight="Bold" Foreground="Gray" FontSize="14"/>
                        <TextBlock x:Name="txtCancelledCount" Text="0" FontSize="32" FontWeight="Bold" Foreground="#D32F2F" Margin="0,4"/>
                        <materialDesign:PackIcon Kind="CloseCircle" Width="28" Height="28" Foreground="#D32F2F"/>
                    </StackPanel>
                </materialDesign:Card>
            </UniformGrid>

            <!-- FILTER BAR -->
            <materialDesign:Card Padding="12" Margin="0,0,0,24" Background="White">
                <DockPanel LastChildFill="False">
                    <TextBox x:Name="txtSearch"
                             Width="260"
                             Height="38"
                             VerticalAlignment="Center"
                             Margin="0,0,12,0"
                             Padding="8"
                             materialDesign:HintAssist.Hint="Search by Patient name..."
                             TextChanged="TxtSearch_TextChanged"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <ComboBox x:Name="cbStatus"
                              Width="130" Margin="0,0,12,0"
                              VerticalAlignment="Center"
                              SelectionChanged="CbStatus_SelectionChanged"
                              materialDesign:HintAssist.Hint="Status"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBoxItem Content="All Status" IsSelected="True"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Confirmed"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Cancelled"/>
                    </ComboBox>

                    <DatePicker x:Name="dpDate"
                                Width="140"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="Date"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}" />

                    <ComboBox x:Name="cbType"
                              Width="130"
                              VerticalAlignment="Center"
                              SelectionChanged="CbType_SelectionChanged"
                              materialDesign:HintAssist.Hint="Type"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}">
                        <ComboBoxItem Content="All Types" IsSelected="True"/>
                        <ComboBoxItem Content="Check-up"/>
                        <ComboBoxItem Content="Follow-up"/>
                        <ComboBoxItem Content="Consultation"/>
                    </ComboBox>
                </DockPanel>
            </materialDesign:Card>

            <!-- APPOINTMENT CARDS -->
            <WrapPanel x:Name="wpAppointments" ItemWidth="500" Orientation="Horizontal"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>