<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.DoctorAppointmentLists"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:conv="clr-namespace:RosalEHealthcare.UI.WPF.Converters"
             xmlns:controls="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
             Background="#F5F5F5" MinWidth="800" MinHeight="600">

    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
        <conv:NameInitialsConverter x:Key="NameInitialsConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Status Color Converters -->
        <SolidColorBrush x:Key="StatusPending" Color="#FF9800"/>
        <SolidColorBrush x:Key="StatusConfirmed" Color="#2196F3"/>
        <SolidColorBrush x:Key="StatusInProgress" Color="#9C27B0"/>
        <SolidColorBrush x:Key="StatusCompleted" Color="#4CAF50"/>
        <SolidColorBrush x:Key="StatusCancelled" Color="#F44336"/>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                               BorderBrush="Transparent" BorderThickness="0,0,0,3" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButtonActiveStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                               BorderBrush="#4CAF50" BorderThickness="0,0,0,3" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Chip Style -->
        <Style x:Key="FilterChipStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="16" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#43A047"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Refresh Button Style -->
        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                               CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon x:Name="icon" Kind="Refresh" 
                                                        Width="16" Height="16" 
                                                        VerticalAlignment="Center" 
                                                        Margin="0,0,6,0"
                                                        RenderTransformOrigin="0.5,0.5">
                                    <materialDesign:PackIcon.RenderTransform>
                                        <RotateTransform x:Name="RotateTransform" Angle="0"/>
                                    </materialDesign:PackIcon.RenderTransform>
                                </materialDesign:PackIcon>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Appointments" FontSize="28" FontWeight="Bold" Foreground="#333"/>
                <TextBlock x:Name="txtSubtitle" Text="Today's Schedule" FontSize="14" 
                          Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="btnRefresh" Content="Refresh" Click="BtnRefresh_Click"
                       Style="{StaticResource RefreshButtonStyle}" Margin="0,0,15,0"/>

                <!-- Search Box -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" 
                       Width="280" Height="40">
                    <Grid>
                        <TextBox x:Name="txtSearch" Height="38" Padding="38,0,10,0" 
                                BorderThickness="0" Background="Transparent"
                                VerticalContentAlignment="Center" FontSize="14"
                                TextChanged="TxtSearch_TextChanged"/>
                        <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18"
                                               Foreground="#999" VerticalAlignment="Center"
                                               HorizontalAlignment="Left" Margin="12,0,0,0"/>
                        <TextBlock Text="Search appointments..." IsHitTestVisible="False"
                                  Foreground="#999" FontSize="14"
                                  VerticalAlignment="Center" Margin="38,0,0,0"
                                  Visibility="{Binding Text, ElementName=txtSearch, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>

        <!-- TAB NAVIGATION -->
        <Border Grid.Row="1" Background="White" CornerRadius="12,12,0,0" Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="1" Opacity="0.05"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                <Button x:Name="btnTabToday" Content="Today" Click="BtnTab_Click" Tag="Today"
                       Style="{StaticResource TabButtonActiveStyle}"/>
                <Button x:Name="btnTabUpcoming" Content="Upcoming" Click="BtnTab_Click" Tag="Upcoming"
                       Style="{StaticResource TabButtonStyle}"/>
                <Button x:Name="btnTabPast" Content="Past" Click="BtnTab_Click" Tag="Past"
                       Style="{StaticResource TabButtonStyle}"/>
                <Button x:Name="btnTabAll" Content="All" Click="BtnTab_Click" Tag="All"
                       Style="{StaticResource TabButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- FILTERS AND SUMMARY -->
        <Border Grid.Row="2" Background="White" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="1" Opacity="0.05"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Filter by status:" FontSize="13" Foreground="#666" 
                              VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ToggleButton x:Name="chkPending" Content="Pending" IsChecked="True"
                                 Click="FilterStatus_Click" Tag="PENDING"
                                 Style="{StaticResource FilterChipStyle}" Margin="0,0,8,0"/>
                    <ToggleButton x:Name="chkConfirmed" Content="Confirmed" IsChecked="True"
                                 Click="FilterStatus_Click" Tag="CONFIRMED"
                                 Style="{StaticResource FilterChipStyle}" Margin="0,0,8,0"/>
                    <ToggleButton x:Name="chkInProgress" Content="In Progress" IsChecked="True"
                                 Click="FilterStatus_Click" Tag="IN_PROGRESS"
                                 Style="{StaticResource FilterChipStyle}" Margin="0,0,8,0"/>
                    <ToggleButton x:Name="chkCompleted" Content="Completed" IsChecked="False"
                                 Click="FilterStatus_Click" Tag="COMPLETED"
                                 Style="{StaticResource FilterChipStyle}" Margin="0,0,8,0"/>
                    <ToggleButton x:Name="chkCancelled" Content="Cancelled" IsChecked="False"
                                 Click="FilterStatus_Click" Tag="CANCELLED"
                                 Style="{StaticResource FilterChipStyle}"/>
                </StackPanel>

                <!-- Summary Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="#E3F2FD" CornerRadius="8" Padding="12,8" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Calendar" Width="18" Height="18" 
                                                    Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtTotalCount" Text="0" FontWeight="Bold" 
                                      FontSize="14" Foreground="#2196F3" Margin="8,0,4,0"/>
                            <TextBlock Text="Total" FontSize="12" Foreground="#666" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF3E0" CornerRadius="8" Padding="12,8" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ClockOutline" Width="18" Height="18" 
                                                    Foreground="#FF9800" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtPendingCount" Text="0" FontWeight="Bold" 
                                      FontSize="14" Foreground="#FF9800" Margin="8,0,4,0"/>
                            <TextBlock Text="Pending" FontSize="12" Foreground="#666" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#E8F5E9" CornerRadius="8" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="18" Height="18" 
                                                    Foreground="#4CAF50" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtCompletedCount" Text="0" FontWeight="Bold" 
                                      FontSize="14" Foreground="#4CAF50" Margin="8,0,4,0"/>
                            <TextBlock Text="Completed" FontSize="12" Foreground="#666" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- APPOINTMENTS GRID - RESPONSIVE -->
        <Border Grid.Row="3" Background="White" CornerRadius="12" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08"/>
            </Border.Effect>
            <Grid>
                <!-- Main Content -->
                <ScrollViewer x:Name="scrollViewer" VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="icAppointments">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel x:Name="wrapPanel" Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="appointmentCard" Background="#FAFAFA" 
                                       CornerRadius="10" Margin="0,0,15,15"
                                       BorderThickness="1" BorderBrush="#E8E8E8"
                                       Width="360" MinHeight="200">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="6" 
                                                         ShadowDepth="1" Opacity="0.06"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Status Header -->
                                        <Border x:Name="statusHeader" Grid.Row="0" 
                                               CornerRadius="10,10,0,0" Padding="15,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Clock" 
                                                                            Width="16" Height="16"
                                                                            Foreground="White" 
                                                                            VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Time, StringFormat='{}{0:hh:mm tt}'}" 
                                                              FontSize="15" FontWeight="SemiBold"
                                                              Foreground="White" Margin="8,0,0,0"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Background="White" 
                                                       CornerRadius="4" Padding="8,4"
                                                       Opacity="0.9">
                                                    <TextBlock Text="{Binding Status}" FontSize="11" 
                                                              FontWeight="Bold" Foreground="#333"/>
                                                </Border>
                                            </Grid>
                                        </Border>

                                        <!-- Content -->
                                        <StackPanel Grid.Row="1" Margin="15,12,15,10">
                                            <!-- Patient Info -->
                                            <Grid Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="0" Width="42" Height="42" Margin="0,0,12,0">
                                                    <Ellipse Fill="#4CAF50"/>
                                                    <TextBlock Text="{Binding PatientName, Converter={StaticResource NameInitialsConverter}}"
                                                              Foreground="White" FontWeight="Bold" FontSize="14"
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Grid>
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding PatientName, TargetNullValue='Walk-in Patient'}" 
                                                              FontSize="15" FontWeight="SemiBold" Foreground="#333"
                                                              TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{Binding AppointmentId}" FontSize="11" 
                                                              Foreground="#999" Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Details -->
                                            <StackPanel Margin="0,0,0,8">
                                                <Grid Margin="0,0,0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="Stethoscope" 
                                                                            Width="14" Height="14"
                                                                            Foreground="#999" 
                                                                            VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding Type, TargetNullValue='General Consultation'}" 
                                                              FontSize="13" Foreground="#666" Margin="8,0,0,0"
                                                              TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                                <Grid Margin="0,0,0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="MedicalBag" 
                                                                            Width="14" Height="14"
                                                                            Foreground="#999" 
                                                                            VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding Condition, TargetNullValue='Not specified'}" 
                                                              FontSize="13" Foreground="#666" Margin="8,0,0,0"
                                                              TextTrimming="CharacterEllipsis"/>
                                                </Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <materialDesign:PackIcon Kind="CalendarClock" 
                                                                            Width="14" Height="14"
                                                                            Foreground="#999" 
                                                                            VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding Time, StringFormat='{}{0:dddd, MMMM dd, yyyy}'}" 
                                                              FontSize="13" Foreground="#666" Margin="8,0,0,0"/>
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <Border Grid.Row="2" BorderBrush="#E8E8E8" 
                                               BorderThickness="0,1,0,0" Padding="12,10">
                                            <StackPanel x:Name="pnlActions" Orientation="Horizontal" 
                                                       HorizontalAlignment="Right"/>
                                        </Border>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="PENDING">
                                        <Setter TargetName="statusHeader" Property="Background" Value="#FF9800"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="CONFIRMED">
                                        <Setter TargetName="statusHeader" Property="Background" Value="#2196F3"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="IN_PROGRESS">
                                        <Setter TargetName="statusHeader" Property="Background" Value="#9C27B0"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="COMPLETED">
                                        <Setter TargetName="statusHeader" Property="Background" Value="#4CAF50"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="CANCELLED">
                                        <Setter TargetName="statusHeader" Property="Background" Value="#F44336"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel x:Name="pnlEmptyState" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" Visibility="Collapsed">
                    <materialDesign:PackIcon Kind="CalendarBlank" Width="80" Height="80" 
                                            Foreground="#E0E0E0"/>
                    <TextBlock Text="No appointments found" FontSize="18" 
                              Foreground="#999" Margin="0,15,0,5"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtEmptyMessage" 
                              Text="There are no appointments matching your filters." 
                              FontSize="13" Foreground="#BBB"
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Loading Overlay -->
                <Border x:Name="pnlLoading" Background="#80FFFFFF" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="150" Height="4"
                                    Foreground="#4CAF50"/>
                        <TextBlock Text="Loading appointments..." FontSize="14" 
                                  Foreground="#666" Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>