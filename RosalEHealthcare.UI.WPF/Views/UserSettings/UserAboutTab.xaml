<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.UserSettings.UserAboutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Section Card Style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="1" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- Help Link Button Style -->
        <Style x:Key="HelpLinkButton" TargetType="Button">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Info Item Style -->
        <Style x:Key="InfoItem" TargetType="Border">
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="32,24" Margin="0,0,0,-573">
        <StackPanel MaxWidth="800">

            <!-- APPLICATION INFO Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <!-- App Logo and Name -->
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo -->
                        <Border Grid.Column="0" 
                                Width="80" Height="80" 
                                CornerRadius="16" 
                                Background="#E8F5E9"
                                Margin="0,0,20,0">
                            <Image Source="/RosalEHealthcare.UI.WPF;component/Resources/rosal_logo.png"
                                   Width="60" Height="60"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        </Border>

                        <!-- App Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Rosal EHealthcare System"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#2E7D32"/>
                            <TextBlock Text="Clinic Management Software"
                                       FontSize="14"
                                       Foreground="#666"
                                       Margin="0,4,0,0"/>
                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <Border Background="#E8F5E9" 
                                        CornerRadius="4" 
                                        Padding="10,4"
                                        Margin="0,0,8,0">
                                    <TextBlock x:Name="TxtVersion"
                                               Text="Version 1.0.0"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#2E7D32"/>
                                </Border>
                                <Border Background="#E3F2FD" 
                                        CornerRadius="4" 
                                        Padding="10,4">
                                    <TextBlock x:Name="TxtBuildDate"
                                               Text="Build: 2025"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#1976D2"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Divider -->
                    <Border Height="1" Background="#E8E8E8" Margin="0,0,0,20"/>

                    <!-- System Information -->
                    <TextBlock Text="System Information" 
                               Style="{StaticResource SectionTitle}"
                               Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- OS -->
                        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource InfoItem}" Margin="0,0,8,8">
                            <StackPanel>
                                <TextBlock Text="Operating System" FontSize="11" Foreground="#888"/>
                                <TextBlock x:Name="TxtOS"
                                           Text="Windows 11"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#333"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- .NET Version -->
                        <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource InfoItem}" Margin="8,0,0,8">
                            <StackPanel>
                                <TextBlock Text=".NET Framework" FontSize="11" Foreground="#888"/>
                                <TextBlock x:Name="TxtDotNet"
                                           Text="4.7.2"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#333"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Machine Name -->
                        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource InfoItem}" Margin="0,0,8,8">
                            <StackPanel>
                                <TextBlock Text="Machine Name" FontSize="11" Foreground="#888"/>
                                <TextBlock x:Name="TxtMachineName"
                                           Text="COMPUTER"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#333"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Current User -->
                        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource InfoItem}" Margin="8,0,0,8">
                            <StackPanel>
                                <TextBlock Text="Windows User" FontSize="11" Foreground="#888"/>
                                <TextBlock x:Name="TxtWindowsUser"
                                           Text="User"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#333"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Memory Usage -->
                        <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource InfoItem}" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="Memory Usage" FontSize="11" Foreground="#888"/>
                                <TextBlock x:Name="TxtMemoryUsage"
                                           Text="0 MB"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#333"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Session Duration -->
                        <Border Grid.Column="1" Grid.Row="2" Style="{StaticResource InfoItem}" Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Session Duration" FontSize="11" Foreground="#888"/>
                                <TextBlock x:Name="TxtSessionDuration"
                                           Text="0m"
                                           FontSize="13"
                                           FontWeight="Medium"
                                           Foreground="#333"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- HELP & SUPPORT Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <iconPacks:PackIconMaterial Kind="HelpCircleOutline" 
                                                    Width="22" Height="22" 
                                                    Foreground="#1976D2"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Help &amp; Support" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- User Manual -->
                    <Button Style="{StaticResource HelpLinkButton}" 
                            Margin="0,0,0,12"
                            Click="BtnUserManual_Click">
                        <Grid Width="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="44" Height="44" 
                                    CornerRadius="22" 
                                    Background="#E3F2FD"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="BookOpenPageVariant" 
                                                            Width="22" Height="22" 
                                                            Foreground="#1976D2"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="User Manual"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#333"/>
                                <TextBlock Text="View the complete user guide and documentation"
                                           FontSize="12"
                                           Foreground="#888"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <iconPacks:PackIconMaterial Grid.Column="2" 
                                                        Kind="ChevronRight" 
                                                        Width="20" Height="20" 
                                                        Foreground="#BDBDBD"
                                                        VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Contact Support -->
                    <Button Style="{StaticResource HelpLinkButton}" 
                            Margin="0,0,0,12"
                            Click="BtnContactSupport_Click">
                        <Grid Width="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="44" Height="44" 
                                    CornerRadius="22" 
                                    Background="#E8F5E9"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="Headset" 
                                                            Width="22" Height="22" 
                                                            Foreground="#2E7D32"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Contact Support"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#333"/>
                                <TextBlock Text="Get help from our technical support team"
                                           FontSize="12"
                                           Foreground="#888"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <iconPacks:PackIconMaterial Grid.Column="2" 
                                                        Kind="ChevronRight" 
                                                        Width="20" Height="20" 
                                                        Foreground="#BDBDBD"
                                                        VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Report a Bug -->
                    <Button Style="{StaticResource HelpLinkButton}" 
                            Margin="0,0,0,12"
                            Click="BtnReportBug_Click">
                        <Grid Width="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="44" Height="44" 
                                    CornerRadius="22" 
                                    Background="#FFEBEE"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="Bug" 
                                                            Width="22" Height="22" 
                                                            Foreground="#D32F2F"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Report a Bug"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#333"/>
                                <TextBlock Text="Help us improve by reporting issues"
                                           FontSize="12"
                                           Foreground="#888"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <iconPacks:PackIconMaterial Grid.Column="2" 
                                                        Kind="ChevronRight" 
                                                        Width="20" Height="20" 
                                                        Foreground="#BDBDBD"
                                                        VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Feature Request -->
                    <Button Style="{StaticResource HelpLinkButton}"
                            Click="BtnFeatureRequest_Click">
                        <Grid Width="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Width="44" Height="44" 
                                    CornerRadius="22" 
                                    Background="#F3E5F5"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="Lightbulb" 
                                                            Width="22" Height="22" 
                                                            Foreground="#7B1FA2"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Feature Request"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#333"/>
                                <TextBlock Text="Suggest new features or improvements"
                                           FontSize="12"
                                           Foreground="#888"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <iconPacks:PackIconMaterial Grid.Column="2" 
                                                        Kind="ChevronRight" 
                                                        Width="20" Height="20" 
                                                        Foreground="#BDBDBD"
                                                        VerticalAlignment="Center"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>

            <!-- LICENSE & CREDITS Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <iconPacks:PackIconMaterial Kind="Certificate" 
                                                    Width="22" Height="22" 
                                                    Foreground="#FF9800"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="License &amp; Credits" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <Border Background="#FAFAFA" CornerRadius="8" Padding="20">
                        <StackPanel>
                            <TextBlock Text="© 2025 Rosal Medical Clinic"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#333"/>
                            <TextBlock Text="All rights reserved. This software is licensed for use by authorized personnel only."
                                       FontSize="12"
                                       Foreground="#666"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>

                            <Border Height="1" Background="#E8E8E8" Margin="0,16"/>

                            <TextBlock Text="Third-party Libraries"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#555"
                                       Margin="0,0,0,8"/>

                            <StackPanel>
                                <TextBlock FontSize="12" Foreground="#666" Margin="0,2">
                                    <Run FontWeight="Medium">• Entity Framework 6</Run>
                                    <Run Foreground="#888"> - Microsoft</Run>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#666" Margin="0,2">
                                    <Run FontWeight="Medium">• MahApps.Metro</Run>
                                    <Run Foreground="#888"> - MahApps Contributors</Run>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#666" Margin="0,2">
                                    <Run FontWeight="Medium">• Material Design In XAML</Run>
                                    <Run Foreground="#888"> - MaterialDesignInXAML Contributors</Run>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#666" Margin="0,2">
                                    <Run FontWeight="Medium">• LiveCharts</Run>
                                    <Run Foreground="#888"> - LiveCharts Contributors</Run>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>