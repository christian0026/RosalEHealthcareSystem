<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.UserSettings.UserSystemSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Sidebar Header Style -->
        <Style x:Key="SidebarHeader" TargetType="Border">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Padding" Value="20,24"/>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="SettingsTabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab Button Style -->
        <Style x:Key="SettingsTabButtonActive" TargetType="Button" BasedOn="{StaticResource SettingsTabButton}">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="3,0,0,0"
                                BorderBrush="#2E7D32">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Label Style -->
        <Style x:Key="SectionLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="Margin" Value="20,20,20,8"/>
            <!-- TextTransform removed - not supported in WPF -->
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E8E8E8" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Header -->
                <Border DockPanel.Dock="Top" Style="{StaticResource SidebarHeader}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Cog" 
                                                        Width="28" Height="28" 
                                                        Foreground="White"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Settings" 
                                       FontSize="22" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Manage your preferences" 
                                   FontSize="13" 
                                   Foreground="#C8E6C9"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Tabs -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Top">
                    <StackPanel Margin="0,8,0,0">

                        <!-- ACCOUNT Section -->
                        <TextBlock Text="ACCOUNT" Style="{StaticResource SectionLabel}"/>

                        <Button x:Name="BtnMyProfile" 
                                Style="{StaticResource SettingsTabButtonActive}"
                                Click="TabButton_Click"
                                Tag="MyProfile">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="AccountCircle" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="My Profile" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnSecurity" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="Security">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ShieldLock" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="Security" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- PREFERENCES Section -->
                        <TextBlock Text="PREFERENCES" Style="{StaticResource SectionLabel}"/>

                        <Button x:Name="BtnPreferences" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="Preferences">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="TuneVariant" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="Preferences" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnNotifications" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="Notifications">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="BellOutline" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="Notifications" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- INFORMATION Section -->
                        <TextBlock Text="INFORMATION" Style="{StaticResource SectionLabel}"/>

                        <Button x:Name="BtnAbout" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="About">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="InformationOutline" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="About" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>

                <!-- User Info at Bottom -->
                <Border DockPanel.Dock="Bottom" 
                        Background="#FAFAFA" 
                        BorderBrush="#E8E8E8" 
                        BorderThickness="0,1,0,0"
                        Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- User Avatar -->
                        <Border Grid.Column="0" 
                                Width="40" Height="40" 
                                CornerRadius="20" 
                                Background="#E8F5E9">
                            <TextBlock x:Name="TxtUserInitials"
                                       Text="JD"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#2E7D32"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtCurrentUser"
                                       Text="John Doe"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#333"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock x:Name="TxtCurrentRole"
                                       Text="Doctor"
                                       FontSize="11"
                                       Foreground="#888"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DockPanel>
        </Border>

        <!-- RIGHT CONTENT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Content Header -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#E8E8E8" 
                    BorderThickness="0,0,0,1"
                    Padding="32,20">
                <Grid>
                    <StackPanel>
                        <TextBlock x:Name="TxtTabTitle"
                                   Text="My Profile"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                        <TextBlock x:Name="TxtTabSubtitle"
                                   Text="View and manage your profile information"
                                   FontSize="14"
                                   Foreground="#888888"
                                   Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- Last Modified Info -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <iconPacks:PackIconMaterial Kind="ClockOutline" 
                                                    Width="14" Height="14" 
                                                    Foreground="#999"
                                                    VerticalAlignment="Center"/>
                        <TextBlock x:Name="TxtLastModified"
                                   Text="Last updated: Never"
                                   FontSize="12"
                                   Foreground="#999999"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tab Content Area -->
            <Grid Grid.Row="1" Background="#F5F5F5">
                <ContentControl x:Name="TabContent"/>

                <!-- Loading Overlay -->
                <Border x:Name="LoadingOverlay" 
                        Background="#80FFFFFF" 
                        Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4"
                                     Foreground="#2E7D32"/>
                        <TextBlock Text="Loading..." 
                                   Foreground="#666" 
                                   FontSize="14" 
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>