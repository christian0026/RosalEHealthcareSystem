<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.UserSettings.UserSystemSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Tab Button Style -->
        <Style x:Key="SettingsTabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8"
                                Margin="0,2">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Tab Button Style -->
        <Style x:Key="SettingsTabButtonActive" TargetType="Button" BasedOn="{StaticResource SettingsTabButton}">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="Margin" Value="16,20,16,8"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="ContentCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="2" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR - Tab Navigation -->
        <Border Grid.Column="0" 
                Style="{StaticResource ContentCard}"
                Margin="0,0,20,0">
            <DockPanel>
                <!-- Header -->
                <Border DockPanel.Dock="Top" 
                        Background="#2E7D32" 
                        CornerRadius="12,12,0,0"
                        Padding="20,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AccountCog" 
                                                        Width="24" Height="24" 
                                                        Foreground="White"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="User Settings" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White"
                                       Margin="12,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Manage your profile &amp; preferences" 
                                   FontSize="12" 
                                   Foreground="#C8E6C9"
                                   Margin="36,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- User Info at Bottom -->
                <Border DockPanel.Dock="Bottom" 
                        Background="#FAFAFA" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0" 
                        Padding="16,12"
                        CornerRadius="0,0,12,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- User Avatar/Initials -->
                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Background="#E8F5E9">
                            <TextBlock x:Name="TxtUserInitials" 
                                       Text="JD" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2E7D32" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- User Name & Role -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtCurrentUser" 
                                       Text="John Doe" 
                                       FontSize="13" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333"/>
                            <TextBlock x:Name="TxtCurrentRole" 
                                       Text="Doctor" 
                                       FontSize="11" 
                                       Foreground="#888"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Navigation Tabs -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="8,8,8,16">

                        <!-- ACCOUNT Section -->
                        <TextBlock Text="ACCOUNT" Style="{StaticResource SectionHeader}"/>

                        <Button x:Name="BtnMyProfile" 
                                Style="{StaticResource SettingsTabButtonActive}"
                                Click="TabButton_Click"
                                Tag="MyProfile">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="AccountCircleOutline" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="My Profile" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnSecurity" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="Security">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ShieldKeyOutline" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="Security" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- PREFERENCES Section -->
                        <TextBlock Text="PREFERENCES" Style="{StaticResource SectionHeader}"/>

                        <Button x:Name="BtnPreferences" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="Preferences">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="TuneVariant" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="Preferences" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnNotifications" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="Notifications">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="BellOutline" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="Notifications" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- INFORMATION Section -->
                        <TextBlock Text="INFORMATION" Style="{StaticResource SectionHeader}"/>

                        <Button x:Name="BtnAbout" 
                                Style="{StaticResource SettingsTabButton}"
                                Click="TabButton_Click"
                                Tag="About">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="InformationOutline" 
                                                            Width="20" Height="20" 
                                                            VerticalAlignment="Center"/>
                                <TextBlock Text="About" 
                                           Margin="12,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- RIGHT CONTENT AREA -->
        <Border Grid.Column="1" 
                Style="{StaticResource ContentCard}">
            <DockPanel>
                <!-- Content Header -->
                <Border DockPanel.Dock="Top" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,0,0,1"
                        Padding="24,20">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="TxtTabTitle" 
                                       Text="My Profile" 
                                       FontSize="22" 
                                       FontWeight="Bold" 
                                       Foreground="#333333"/>
                            <TextBlock x:Name="TxtTabSubtitle" 
                                       Text="View and edit your personal information" 
                                       FontSize="13" 
                                       Foreground="#888888"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Last Modified Info -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="ClockOutline" 
                                                        Width="14" Height="14" 
                                                        Foreground="#888888"
                                                        VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtLastModified" 
                                       Text="Last updated: Today" 
                                       FontSize="12" 
                                       Foreground="#888888"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tab Content Container -->
                <Grid>
                    <!-- Loading Overlay -->
                    <Border x:Name="LoadingOverlay" 
                            Background="#80FFFFFF" 
                            Visibility="Collapsed"
                            Panel.ZIndex="100">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial Kind="Loading" 
                                                        Width="40" Height="40" 
                                                        Foreground="#2E7D32"
                                                        Spin="True"
                                                        SpinDuration="1"/>
                            <TextBlock Text="Loading settings..." 
                                       FontSize="14" 
                                       Foreground="#666666"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Content Control for Tab Pages -->
                    <ContentControl x:Name="TabContent"/>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>