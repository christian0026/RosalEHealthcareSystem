<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.UserSettings.UserPreferencesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Section Card Style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="1" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <!-- Field Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Info Card Style -->
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#90CAF9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="32,24" Margin="0,0,0,-191">
        <StackPanel MaxWidth="800">

            <!-- DISPLAY PREFERENCES Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <iconPacks:PackIconMaterial Kind="MonitorEdit" 
                                                    Width="22" Height="22" 
                                                    Foreground="#2E7D32"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Display Preferences" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Items Per Page -->
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Items Per Page" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbItemsPerPage" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="10 items" Tag="10"/>
                                <ComboBoxItem Content="20 items" Tag="20" IsSelected="True"/>
                                <ComboBoxItem Content="30 items" Tag="30"/>
                                <ComboBoxItem Content="50 items" Tag="50"/>
                                <ComboBoxItem Content="100 items" Tag="100"/>
                            </ComboBox>
                            <TextBlock Text="Number of records shown per page in lists"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Date Format -->
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Date Format" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbDateFormat" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="MM/dd/yyyy (12/31/2024)" Tag="MM/dd/yyyy" IsSelected="True"/>
                                <ComboBoxItem Content="dd/MM/yyyy (31/12/2024)" Tag="dd/MM/yyyy"/>
                                <ComboBoxItem Content="yyyy-MM-dd (2024-12-31)" Tag="yyyy-MM-dd"/>
                                <ComboBoxItem Content="MMM dd, yyyy (Dec 31, 2024)" Tag="MMM dd, yyyy"/>
                                <ComboBoxItem Content="dd MMM yyyy (31 Dec 2024)" Tag="dd MMM yyyy"/>
                            </ComboBox>
                            <TextBlock Text="Format used for displaying dates"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Time Format -->
                        <StackPanel Grid.Column="0" Grid.Row="2">
                            <TextBlock Text="Time Format" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbTimeFormat" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="12-hour (2:30 PM)" Tag="h:mm tt" IsSelected="True"/>
                                <ComboBoxItem Content="24-hour (14:30)" Tag="HH:mm"/>
                            </ComboBox>
                            <TextBlock Text="Format used for displaying times"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Default Landing Page -->
                        <StackPanel Grid.Column="2" Grid.Row="2">
                            <TextBlock Text="Default Landing Page" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbDefaultPage" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Dashboard" Tag="Dashboard" IsSelected="True"/>
                                <ComboBoxItem Content="Patient Records" Tag="PatientRecords"/>
                                <ComboBoxItem Content="Appointments" Tag="Appointments"/>
                                <ComboBoxItem Content="Settings" Tag="Settings"/>
                            </ComboBox>
                            <TextBlock Text="Page shown after login"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- DATA DISPLAY Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <iconPacks:PackIconMaterial Kind="TableLarge" 
                                                    Width="22" Height="22" 
                                                    Foreground="#FF9800"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Data Display" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sort Order -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Default Sort Order" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbSortOrder" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Newest First" Tag="DESC" IsSelected="True"/>
                                <ComboBoxItem Content="Oldest First" Tag="ASC"/>
                                <ComboBoxItem Content="Alphabetical (A-Z)" Tag="ASC_ALPHA"/>
                                <ComboBoxItem Content="Alphabetical (Z-A)" Tag="DESC_ALPHA"/>
                            </ComboBox>
                            <TextBlock Text="Default order for lists and tables"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Auto Refresh -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Auto Refresh Interval" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbAutoRefresh" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Disabled" Tag="0" IsSelected="True"/>
                                <ComboBoxItem Content="Every 1 minute" Tag="1"/>
                                <ComboBoxItem Content="Every 5 minutes" Tag="5"/>
                                <ComboBoxItem Content="Every 10 minutes" Tag="10"/>
                                <ComboBoxItem Content="Every 30 minutes" Tag="30"/>
                            </ComboBox>
                            <TextBlock Text="Automatically refresh dashboard data"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- ACCESSIBILITY Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <iconPacks:PackIconMaterial Kind="AccessPoint" 
                                                    Width="22" Height="22" 
                                                    Foreground="#9C27B0"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Accessibility" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Font Size -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Font Size" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbFontSize" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Small" Tag="Small"/>
                                <ComboBoxItem Content="Medium (Default)" Tag="Medium" IsSelected="True"/>
                                <ComboBoxItem Content="Large" Tag="Large"/>
                                <ComboBoxItem Content="Extra Large" Tag="ExtraLarge"/>
                            </ComboBox>
                            <TextBlock Text="Adjust text size throughout the application"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Animation -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Animations" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="CmbAnimations" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Enabled" Tag="True" IsSelected="True"/>
                                <ComboBoxItem Content="Reduced" Tag="Reduced"/>
                                <ComboBoxItem Content="Disabled" Tag="False"/>
                            </ComboBox>
                            <TextBlock Text="Control UI animations and transitions"
                                       FontSize="11"
                                       Foreground="#888"
                                       Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- INFO BANNER -->
            <Border Style="{StaticResource InfoCard}" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="InformationOutline" 
                                                Width="18" Height="18" 
                                                Foreground="#1976D2"
                                                VerticalAlignment="Top"
                                                Margin="0,2,0,0"/>
                    <TextBlock Margin="12,0,0,0" 
                               Foreground="#1565C0"
                               FontSize="13"
                               TextWrapping="Wrap">
                        <Run FontWeight="SemiBold">Note:</Run>
                        <Run>Some preferences may require you to refresh the page or restart the application to take effect.</Run>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnResetDefaults"
                        Content="Reset to Defaults"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,12,0"
                        Click="BtnResetDefaults_Click"/>
                <Button x:Name="BtnSavePreferences"
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnSavePreferences_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="ContentSave" Width="18" Height="18"/>
                        <TextBlock Text="Save Preferences" Margin="10,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>