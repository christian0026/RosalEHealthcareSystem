<Window x:Class="RosalEHealthcare.UI.WPF.Views.ViewMedicineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medicine Details" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <DockPanel>
                <Border Width="60" Height="60" 
                        Background="#E3F2FD" 
                        CornerRadius="30"
                        DockPanel.Dock="Left"
                        Margin="0,0,16,0">
                    <TextBlock x:Name="txtInitials" 
                               Text="?" 
                               Foreground="#1976D2" 
                               FontWeight="Bold"
                               FontSize="24"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="txtMedicineName" 
                               Text="Medicine Name" 
                               FontSize="20" 
                               FontWeight="Bold"/>
                    <TextBlock x:Name="txtMedicineId" 
                               Text="MED-001" 
                               Foreground="#666666" 
                               FontSize="13"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </DockPanel>
        </StackPanel>

        <!-- Details -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Generic Name -->
                        <TextBlock Text="Generic Name" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   Grid.Row="0" Grid.Column="0"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="txtGenericName" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   Grid.Row="0" Grid.Column="1"
                                   Margin="0,0,0,4"
                                   TextAlignment="Right"/>

                        <!-- Brand -->
                        <TextBlock Text="Brand" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   Grid.Row="1" Grid.Column="0"
                                   Margin="0,12,0,4"/>
                        <TextBlock x:Name="txtBrand" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   Grid.Row="1" Grid.Column="1"
                                   Margin="0,12,0,4"
                                   TextAlignment="Right"/>

                        <!-- Category -->
                        <TextBlock Text="Category" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   Grid.Row="2" Grid.Column="0"
                                   Margin="0,12,0,4"/>
                        <TextBlock x:Name="txtCategory" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   Grid.Row="2" Grid.Column="1"
                                   Margin="0,12,0,4"
                                   TextAlignment="Right"/>

                        <!-- Type -->
                        <TextBlock Text="Type" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   Grid.Row="3" Grid.Column="0"
                                   Margin="0,12,0,4"/>
                        <TextBlock x:Name="txtType" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   Grid.Row="3" Grid.Column="1"
                                   Margin="0,12,0,4"
                                   TextAlignment="Right"/>

                        <!-- Strength -->
                        <TextBlock Text="Strength" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   Grid.Row="4" Grid.Column="0"
                                   Margin="0,12,0,4"/>
                        <TextBlock x:Name="txtStrength" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   Grid.Row="4" Grid.Column="1"
                                   Margin="0,12,0,4"
                                   TextAlignment="Right"/>

                        <!-- Stock -->
                        <TextBlock Text="Stock" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   Grid.Row="5" Grid.Column="0"
                                   Margin="0,12,0,4"/>
                        <TextBlock x:Name="txtStock" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   Grid.Row="5" Grid.Column="1"
                                   Margin="0,12,0,4"
                                   TextAlignment="Right"/>

                        <!-- Price -->
                        <TextBlock Text="Unit Price" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   Grid.Row="6" Grid.Column="0"
                                   Margin="0,12,0,4"/>
                        <TextBlock x:Name="txtPrice" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   Grid.Row="6" Grid.Column="1"
                                   Margin="0,12,0,4"
                                   TextAlignment="Right"/>
                    </Grid>
                </Border>

                <!-- Status Badge -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,12">
                    <DockPanel>
                        <TextBlock Text="Status" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   DockPanel.Dock="Left"
                                   VerticalAlignment="Center"/>
                        <Border x:Name="statusBadge"
                                Background="#E8F5E9"
                                CornerRadius="12"
                                Padding="12,4"
                                HorizontalAlignment="Right"
                                DockPanel.Dock="Right">
                            <TextBlock x:Name="txtStatus" 
                                       Text="Available" 
                                       Foreground="#2E7D32"
                                       FontWeight="SemiBold"
                                       FontSize="11"/>
                        </Border>
                    </DockPanel>
                </Border>

                <!-- Expiry Date -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20">
                    <DockPanel>
                        <TextBlock Text="Expiry Date" 
                                   Foreground="#666666" 
                                   FontSize="12"
                                   DockPanel.Dock="Left"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtExpiryDate" 
                                   Text="-" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   DockPanel.Dock="Right"
                                   VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Close" 
                Width="100" 
                Height="40" 
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Background="#9E9E9E" 
                Foreground="White"
                BorderThickness="0"
                FontWeight="SemiBold"
                Click="BtnClose_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="16,10">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#757575"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>