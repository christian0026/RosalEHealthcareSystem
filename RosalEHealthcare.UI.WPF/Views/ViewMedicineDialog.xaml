<Window x:Class="RosalEHealthcare.UI.WPF.Views.ViewMedicineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Medicine Details" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Status -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="txtMedicineName" 
                           Text="Medicine Name" 
                           FontSize="28" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="txtMedicineId" 
                           Text="MED-001" 
                           Foreground="#666666" 
                           FontSize="14"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Border Grid.Column="1"
                    x:Name="StatusBadge"
                    CornerRadius="16" 
                    Padding="16,8"
                    Background="#E8F5E9"
                    VerticalAlignment="Center">
                <TextBlock x:Name="txtStatus" 
                           Text="Available" 
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="#2E7D32"/>
            </Border>
        </Grid>

        <!-- Content ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <StackPanel>

                <!-- Basic Information -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                   Text="BASIC INFORMATION" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,20"/>

                        <!-- Generic Name -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,16">
                            <TextBlock Text="Generic Name" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtGenericName" 
                                       Text="Amoxicillin" 
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Brand -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0,0,16">
                            <TextBlock Text="Brand" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtBrand" 
                                       Text="Generic Brand" 
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Category -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,16">
                            <TextBlock Text="Category" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtCategory" 
                                       Text="Antibiotic" 
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Type -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="12,0,0,16">
                            <TextBlock Text="Type" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtType" 
                                       Text="Capsules" 
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Strength -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Strength" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtStrength" 
                                       Text="500mg" 
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Unit -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Unit" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtUnit" 
                                       Text="Capsule" 
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Stock & Pricing -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                                   Text="STOCK &amp; PRICING" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,20"/>

                        <!-- Current Stock -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Current Stock" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtStock" 
                                       Text="100 units" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                        </StackPanel>

                        <!-- Minimum Stock -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="12,0">
                            <TextBlock Text="Minimum Stock Level" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtMinStock" 
                                       Text="20 units" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#666666"/>
                        </StackPanel>

                        <!-- Unit Price -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="12,0,0,0">
                            <TextBlock Text="Unit Price" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtPrice" 
                                       Text="₱15.00" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#2E7D32"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Expiry Information -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="EXPIRY INFORMATION" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,16"/>

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarClock" 
                                                    Width="24" 
                                                    Height="24"
                                                    VerticalAlignment="Center"
                                                    Foreground="#666666"
                                                    Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="Expiry Date" 
                                           Foreground="#666666" 
                                           FontSize="12"/>
                                <TextBlock x:Name="txtExpiryDate" 
                                           Text="Dec 2025" 
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Additional Information -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="ADDITIONAL INFORMATION" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,16"/>

                        <!-- Notes -->
                        <StackPanel x:Name="NotesPanel" Margin="0,0,0,16">
                            <TextBlock Text="Notes" 
                                       Foreground="#666666" 
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBlock x:Name="txtNotes" 
                                       Text="No notes available" 
                                       FontSize="14"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <!-- Last Modified -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Last Modified By" 
                                           Foreground="#666666" 
                                           FontSize="12"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtLastModifiedBy" 
                                           Text="Admin User" 
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Last Modified At" 
                                           Foreground="#666666" 
                                           FontSize="12"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtLastModifiedAt" 
                                           Text="Jan 15, 2025 10:30 AM" 
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="btnEdit"
                    Width="140" 
                    Height="42"
                    Background="#FFA000"
                    BorderBrush="#FFA000"
                    Foreground="White"
                    Margin="0,0,12,0"
                    Click="BtnEdit_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Pencil" 
                                Width="18" 
                                Height="18"
                                VerticalAlignment="Center"
                                Margin="0,0,6,0"/>
                    <TextBlock Text="Edit" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Content="Close" 
                    Width="100" 
                    Height="42"
                    Click="BtnClose_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>