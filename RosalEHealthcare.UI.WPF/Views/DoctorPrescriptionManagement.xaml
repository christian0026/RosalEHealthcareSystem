<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.DoctorPrescriptionManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:RosalEHealthcare.UI.WPF.ViewModels"
             Background="#F5F5F5"
             MinWidth="900">

    <UserControl.DataContext>
        <viewmodels:DoctorPrescriptionViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Textbox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="Processing..." 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Header with search + Buttons -->
                <DockPanel LastChildFill="False" Margin="0,0,0,16">
                    <!-- Patient Search with Autocomplete -->
                    <Grid Width="450" Margin="0,0,12,0" DockPanel.Dock="Left">
                        <TextBox x:Name="txtSearchPatient" 
                                 Height="42"
                                 Style="{StaticResource ModernTextBox}"
                                 Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 TextChanged="TxtSearchPatient_TextChanged"
                                 GotFocus="TxtSearchPatient_GotFocus"/>

                        <TextBlock Text="🔍 Search by Patient name or ID..." 
                                   IsHitTestVisible="False"
                                   Foreground="#999"
                                   Margin="16,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="14">
                            <TextBlock.Visibility>
                                <Binding ElementName="txtSearchPatient" Path="Text.IsEmpty">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter/>
                                    </Binding.Converter>
                                </Binding>
                            </TextBlock.Visibility>
                        </TextBlock>

                        <!-- Autocomplete Dropdown -->
                        <Popup x:Name="popupSearchResults"
                               PlacementTarget="{Binding ElementName=txtSearchPatient}"
                               Placement="Bottom"
                               Width="450"
                               MaxHeight="300"
                               StaysOpen="False"
                               AllowsTransparency="True">
                            <Border Background="White" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="0,4,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                </Border.Effect>
                                <ListBox x:Name="lstSearchResults"
                                         ItemsSource="{Binding PatientSearchResults}"
                                         BorderThickness="0"
                                         MaxHeight="290"
                                         SelectionChanged="LstSearchResults_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="8">
                                                <Border Width="40" Height="40" 
                                                        Background="#4CAF50" 
                                                        CornerRadius="20"
                                                        Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding Initials}" 
                                                               Foreground="White" 
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding FullName}" 
                                                               FontWeight="SemiBold"
                                                               FontSize="13"/>
                                                    <TextBlock Foreground="#666666" FontSize="11">
                                                        <Run Text="ID:"/>
                                                        <Run Text="{Binding PatientId}"/>
                                                        <Run Text=" • "/>
                                                        <Run Text="{Binding Age}"/>
                                                        <Run Text=" yrs • "/>
                                                        <Run Text="{Binding Gender}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button x:Name="btnTemplates" 
                                Content="📋 Templates"
                                Background="#2196F3" 
                                Foreground="White"
                                Style="{StaticResource ModernButton}"
                                Margin="0,0,8,0"
                                Click="BtnTemplates_Click"/>

                        <Button x:Name="btnNewPrescription" 
                                Content="+ New Prescription"
                                Background="#25A44A" 
                                Foreground="White"
                                Style="{StaticResource ModernButton}"
                                Click="BtnNewPrescription_Click"/>
                    </StackPanel>
                </DockPanel>

                <!-- Patient summary card -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="16" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        Visibility="{Binding HasPatientSelected, Converter={StaticResource BoolToVis}}">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>

                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <Border Width="56" Height="56" 
                                    Background="#2E7D32" 
                                    CornerRadius="28" 
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedPatient.Initials}" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           FontSize="18"/>
                            </Border>
                            <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding SelectedPatient.FullName}" 
                                           FontSize="16" 
                                           FontWeight="Bold"/>
                                <TextBlock Foreground="#777" FontSize="12">
                                    <Run Text="ID:"/>
                                    <Run Text="{Binding SelectedPatient.PatientId}"/>
                                    <Run Text=" • "/>
                                    <Run Text="{Binding SelectedPatient.Age}"/>
                                    <Run Text=" yrs • "/>
                                    <Run Text="{Binding SelectedPatient.Gender}"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    DockPanel.Dock="Right">
                            <Border Background="#F6F6F6" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="8">
                                <StackPanel>
                                    <TextBlock Text="Blood Type" 
                                               FontSize="11" 
                                               Foreground="#777"/>
                                    <TextBlock Text="{Binding SelectedPatient.BloodType}" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#F6F6F6" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="8">
                                <StackPanel>
                                    <TextBlock Text="Height" 
                                               FontSize="11" 
                                               Foreground="#777"/>
                                    <TextBlock Text="{Binding SelectedPatient.Height}" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#F6F6F6" 
                                    CornerRadius="6" 
                                    Padding="10" 
                                    Margin="8">
                                <StackPanel>
                                    <TextBlock Text="Weight" 
                                               FontSize="11" 
                                               Foreground="#777"/>
                                    <TextBlock Text="{Binding SelectedPatient.Weight}" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Allergy Warnings -->
                <Border Background="#FFEBEE" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,16,0,0"
                        Visibility="{Binding AllergyWarnings.Count, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="⚠ ALLERGY WARNINGS" 
                                   FontWeight="Bold" 
                                   Foreground="#C62828"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding AllergyWarnings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               Foreground="#C62828"
                                               FontWeight="SemiBold"
                                               Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Drug Interaction Warnings -->
                <Border Background="#FFF3E0" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,8,0,0"
                        Visibility="{Binding DrugInteractionWarnings.Count, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="⚠ DRUG INTERACTION WARNINGS" 
                                   FontWeight="Bold" 
                                   Foreground="#F57C00"
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding DrugInteractionWarnings}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               Foreground="#F57C00"
                                               FontWeight="SemiBold"
                                               Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- New Prescription form -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        Margin="0,16,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>

                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock Text="NEW PRESCRIPTION" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       DockPanel.Dock="Left"/>
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        DockPanel.Dock="Right">
                                <TextBlock Text="{Binding CurrentDate}" 
                                           Foreground="#666"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                <TextBlock Text=" • " 
                                           Foreground="#666"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentDoctor}" 
                                           Foreground="#666"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                            </StackPanel>
                        </DockPanel>

                        <!-- Diagnosis row -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="DIAGNOSIS" 
                                       FontWeight="Bold" 
                                       FontSize="13"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Primary Diagnosis *" 
                                       FontWeight="SemiBold" 
                                       FontSize="12"
                                       Foreground="#666"
                                       Margin="0,0,0,6"/>
                            <TextBox Height="40" 
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding PrimaryDiagnosis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Secondary Diagnosis" 
                                               FontWeight="SemiBold" 
                                               FontSize="12"
                                               Foreground="#666"
                                               Margin="0,0,0,6"/>
                                    <TextBox Height="40" 
                                             Style="{StaticResource ModernTextBox}"
                                             Text="{Binding SecondaryDiagnosis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Condition Severity *" 
                                               FontWeight="SemiBold" 
                                               FontSize="12"
                                               Foreground="#666"
                                               Margin="0,0,0,6"/>
                                    <ComboBox Height="40"
                                              Style="{StaticResource ModernComboBox}"
                                              SelectedValue="{Binding ConditionSeverity, Mode=TwoWay}"
                                              SelectedValuePath="Content">
                                        <ComboBoxItem Content="Mild"/>
                                        <ComboBoxItem Content="Moderate" IsSelected="True"/>
                                        <ComboBoxItem Content="Severe"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Medication -->
                        <StackPanel Margin="0,0,0,16">
                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="MEDICATION" 
                                           FontWeight="Bold" 
                                           FontSize="13"
                                           DockPanel.Dock="Left"/>
                                <TextBlock Text="{Binding Medicines.Count, StringFormat='({0} medicines)'}" 
                                           Foreground="#666"
                                           FontSize="12"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           DockPanel.Dock="Left"/>
                            </DockPanel>

                            <Border Background="#FAFAFA" 
                                    BorderBrush="#DDD" 
                                    BorderThickness="1" 
                                    CornerRadius="6" 
                                    Padding="16">
                                <StackPanel>
                                    <!-- Medicine Headers -->
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="260"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="Medicine" Grid.Column="0" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                        <TextBlock Text="Dosage" Grid.Column="1" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                        <TextBlock Text="Frequency" Grid.Column="2" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                        <TextBlock Text="Duration" Grid.Column="3" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                        <TextBlock Text="Qty" Grid.Column="4" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                        <TextBlock Text="Route" Grid.Column="5" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                        <TextBlock Text="Action" Grid.Column="6" FontSize="11" FontWeight="SemiBold" Foreground="#666"/>
                                    </Grid>

                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                                  VerticalScrollBarVisibility="Auto" 
                                                  MaxHeight="400">
                                        <ItemsControl ItemsSource="{Binding Medicines}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,6">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="260"/>
                                                            <ColumnDefinition Width="120"/>
                                                            <ColumnDefinition Width="140"/>
                                                            <ColumnDefinition Width="120"/>
                                                            <ColumnDefinition Width="80"/>
                                                            <ColumnDefinition Width="120"/>
                                                            <ColumnDefinition Width="50"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Medicine ComboBox with Autocomplete -->
                                                        <ComboBox Grid.Column="0" 
                                                                  Height="36"
                                                                  Margin="0,0,6,0"
                                                                  IsEditable="True"
                                                                  ItemsSource="{Binding DataContext.MedicineLookup, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  SelectedValue="{Binding MedicineName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  DisplayMemberPath="Name"
                                                                  SelectedValuePath="Name"
                                                                  Style="{StaticResource ModernComboBox}"/>

                                                        <TextBox Grid.Column="1" 
                                                                 Height="36" 
                                                                 Margin="0,0,6,0"
                                                                 Text="{Binding Dosage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Style="{StaticResource ModernTextBox}"/>

                                                        <ComboBox Grid.Column="2" 
                                                                  Height="36" 
                                                                  Margin="0,0,6,0"
                                                                  SelectedValue="{Binding Frequency, Mode=TwoWay}"
                                                                  SelectedValuePath="Content"
                                                                  Style="{StaticResource ModernComboBox}">
                                                            <ComboBoxItem Content="Once daily" IsSelected="True"/>
                                                            <ComboBoxItem Content="Twice daily"/>
                                                            <ComboBoxItem Content="Thrice daily"/>
                                                            <ComboBoxItem Content="Four times daily"/>
                                                            <ComboBoxItem Content="As needed"/>
                                                            <ComboBoxItem Content="Every 4 hours"/>
                                                            <ComboBoxItem Content="Every 6 hours"/>
                                                            <ComboBoxItem Content="Every 8 hours"/>
                                                        </ComboBox>

                                                        <TextBox Grid.Column="3" 
                                                                 Height="36" 
                                                                 Margin="0,0,6,0"
                                                                 Text="{Binding Duration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Style="{StaticResource ModernTextBox}"/>

                                                        <TextBox Grid.Column="4" 
                                                                 Height="36" 
                                                                 Margin="0,0,6,0"
                                                                 Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Style="{StaticResource ModernTextBox}"/>

                                                        <ComboBox Grid.Column="5" 
                                                                  Height="36" 
                                                                  Margin="0,0,6,0"
                                                                  SelectedValue="{Binding Route, Mode=TwoWay}"
                                                                  SelectedValuePath="Content"
                                                                  Style="{StaticResource ModernComboBox}">
                                                            <ComboBoxItem Content="Oral" IsSelected="True"/>
                                                            <ComboBoxItem Content="Topical"/>
                                                            <ComboBoxItem Content="IV"/>
                                                            <ComboBoxItem Content="IM"/>
                                                            <ComboBoxItem Content="Subcutaneous"/>
                                                            <ComboBoxItem Content="Inhalation"/>
                                                        </ComboBox>

                                                        <Button Grid.Column="6" 
                                                                Content="✖" 
                                                                Width="36" 
                                                                Height="36"
                                                                Background="#E05A4F" 
                                                                Foreground="White"
                                                                Style="{StaticResource ModernButton}"
                                                                Click="BtnRemoveMedicine_Click"
                                                                Tag="{Binding}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <Button Content="+ Add Medicine" 
                                            Width="140" 
                                            HorizontalAlignment="Right" 
                                            Margin="0,12,0,0"
                                            Background="#4CAF50" 
                                            Foreground="White"
                                            Style="{StaticResource ModernButton}"
                                            Click="BtnAddMedicine_Click"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Special Instructions -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="SPECIAL INSTRUCTIONS" 
                                       FontWeight="Bold" 
                                       FontSize="13"
                                       Margin="0,0,0,8"/>
                            <TextBox Height="100" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding SpecialInstructions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Follow-up row -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Follow-up Required" 
                                           FontWeight="SemiBold" 
                                           FontSize="12"
                                           Foreground="#666"
                                           Margin="0,0,0,6"/>
                                <ComboBox Height="40"
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedIndex="{Binding FollowUpRequired, Converter={StaticResource BoolToIndexConverter}}">
                                    <ComboBoxItem Content="No" IsSelected="True"/>
                                    <ComboBoxItem Content="Yes"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Next Appointment" 
                                           FontWeight="SemiBold" 
                                           FontSize="12"
                                           Foreground="#666"
                                           Margin="0,0,0,6"/>
                                <DatePicker Height="40"
                                            Style="{StaticResource ModernDatePicker}"
                                            SelectedDate="{Binding NextAppointment, Mode=TwoWay}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Priority Level" 
                                           FontWeight="SemiBold" 
                                           FontSize="12"
                                           Foreground="#666"
                                           Margin="0,0,0,6"/>
                                <ComboBox Height="40"
                                          Style="{StaticResource ModernComboBox}"
                                          SelectedValue="{Binding PriorityLevel, Mode=TwoWay}"
                                          SelectedValue
                                          Path="Content">
                                    <ComboBoxItem Content="Routine" IsSelected="True"/>
                                    <ComboBoxItem Content="Urgent"/>
                                    <ComboBoxItem Content="High"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,24,0,0">
                            <Button Content="Cancel" 
                                    Width="100" 
                                    Height="40" 
                                    Margin="0,0,8,0"
                                    Click="BtnCancel_Click" 
                                    Background="#9E9E9E" 
                                    Foreground="White"
                                    Style="{StaticResource ModernButton}"/>

                            <Button Content="💾 Save Draft" 
                                    Width="120" 
                                    Height="40" 
                                    Margin="0,0,8,0"
                                    Click="BtnSaveDraft_Click" 
                                    Background="#607D8B" 
                                    Foreground="White"
                                    Style="{StaticResource ModernButton}"/>

                            <Button Content="📄 Save as Template" 
                                    Width="160" 
                                    Height="40" 
                                    Margin="0,0,8,0"
                                    Click="BtnSaveAsTemplate_Click" 
                                    Background="#9C27B0" 
                                    Foreground="White"
                                    Style="{StaticResource ModernButton}"/>

                            <Button Content="🖨️ Print Preview" 
                                    Width="140" 
                                    Height="40" 
                                    Margin="0,0,8,0"
                                    Click="BtnPrintPreview_Click" 
                                    Background="#FFB300" 
                                    Foreground="White"
                                    Style="{StaticResource ModernButton}"/>

                            <Button Content="💊 Save & Print" 
                                    Width="140" 
                                    Height="40" 
                                    Margin="0,0,8,0"
                                    Click="BtnSaveAndPrint_Click" 
                                    Background="#FF6F00" 
                                    Foreground="White"
                                    Style="{StaticResource ModernButton}"/>

                            <Button Content="✅ Save Prescription" 
                                    Width="170" 
                                    Height="40"
                                    Click="BtnSavePrescription_Click" 
                                    Background="#25A44A" 
                                    Foreground="White"
                                    Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>