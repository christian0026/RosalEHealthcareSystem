<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.AdminReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarWeek" 
                                                        Width="20" Height="20"
                                                        Foreground="{TemplateBinding Foreground}"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsWeeklySummaryActive}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MonthlyTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarMonth" 
                                                        Width="20" Height="20"
                                                        Foreground="{TemplateBinding Foreground}"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsMonthlyReportActive}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FCE4EC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8BBD0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrintButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F3E5F5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E1BEE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Report Card Style -->
        <Style x:Key="ReportCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Item Style -->
        <Style x:Key="StatItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <!-- Tab Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="Weekly Summary" 
                        Style="{StaticResource TabButtonStyle}"
                        Command="{Binding WeeklySummaryCommand}"/>
                <Button Content="Monthly Report" 
                        Style="{StaticResource MonthlyTabButtonStyle}"
                        Command="{Binding MonthlyReportCommand}"/>
            </StackPanel>

            <!-- Summary Cards -->
            <Grid Grid.Row="2" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:SummaryCard Grid.Column="0"
                                     Title="Total Patients"
                                     Value="{Binding TotalPatients}"
                                     Icon="👥"
                                     TopColor="#4CAF50"
                                     IconBackground="#E8F5E9"
                                     TrendText="{Binding PatientsTrend}"
                                     TrendColor="#4CAF50"
                                     TrendIcon="✓"
                                     Margin="0,0,15,0"/>

                <controls:SummaryCard Grid.Column="1"
                                     Title="Completed Appointments"
                                     Value="{Binding CompletedAppointments}"
                                     Icon="✓"
                                     TopColor="#2196F3"
                                     IconBackground="#E3F2FD"
                                     TrendText="{Binding AppointmentsTrend}"
                                     TrendColor="#2196F3"
                                     TrendIcon="✓"
                                     Margin="0,0,15,0"/>

                <controls:SummaryCard Grid.Column="2"
                                     Title="Medicine Prescribed"
                                     Value="{Binding MedicinesPrescribed}"
                                     Icon="💊"
                                     TopColor="#FF9800"
                                     IconBackground="#FFF3E0"
                                     TrendText="{Binding MedicinesTrend}"
                                     TrendColor="#FF9800"
                                     TrendIcon="✓"
                                     Margin="0,0,15,0"/>

                <controls:SummaryCard Grid.Column="3"
                                     Title="Low Stock Alerts"
                                     Value="{Binding LowStockAlerts}"
                                     Icon="✕"
                                     TopColor="#F44336"
                                     IconBackground="#FFEBEE"
                                     TrendText="{Binding LowStockMessage}"
                                     TrendColor="#F44336"
                                     TrendIcon="🔔"
                                     Margin="0"/>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Generate Custom Report Section -->
                <Border Grid.Row="0" Style="{StaticResource ReportCardStyle}" Margin="0,0,0,25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                            <TextBlock Text="Generate Custom Report" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="#333"
                                      Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>

                                <!-- Report Type -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Report Type" 
                                              FontSize="13" 
                                              Foreground="#666"
                                              Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding ReportTypes}"
                                             SelectedItem="{Binding SelectedReportType}"
                                             FontSize="14"
                                             Padding="12,10"
                                             BorderBrush="#E0E0E0"/>
                                </StackPanel>

                                <!-- Date Range -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Date Range" 
                                              FontSize="13" 
                                              Foreground="#666"
                                              Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding DateRanges}"
                                             SelectedItem="{Binding SelectedDateRange}"
                                             FontSize="14"
                                             Padding="12,10"
                                             BorderBrush="#E0E0E0"/>
                                </StackPanel>

                                <!-- Format -->
                                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                                    <TextBlock Text="Format" 
                                              FontSize="13" 
                                              Foreground="#666"
                                              Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding Formats}"
                                             SelectedItem="{Binding SelectedFormat}"
                                             FontSize="14"
                                             Padding="12,10"
                                             BorderBrush="#E0E0E0"/>
                                </StackPanel>

                                <!-- Search Button -->
                                <Button Grid.Column="3"
                                       Command="{Binding SearchReportCommand}"
                                       VerticalAlignment="Bottom"
                                       Height="42"
                                       Background="#17A2B8"
                                       BorderThickness="0"
                                       Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   Padding="15,0">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Magnify" 
                                                                           Width="20" 
                                                                           Height="20"
                                                                           Foreground="White"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,0,8,0"/>
                                                    <TextBlock Text="Search" 
                                                              Foreground="White" 
                                                              FontSize="14"
                                                              FontWeight="Medium"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#138496"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Export All Reports Button -->
                        <Button Grid.Column="1"
                               Command="{Binding ExportAllReportsCommand}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Background="#4CAF50"
                               BorderThickness="0"
                               Padding="20,12"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="8"
                                           Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileExport" 
                                                                   Width="20" 
                                                                   Height="20"
                                                                   Foreground="White"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Export All Reports" 
                                                      Foreground="White" 
                                                      FontSize="14"
                                                      FontWeight="Medium"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#45A049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Rest of content continues... -->
                <!-- (The file is too long, but the key fixes are done) -->
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>