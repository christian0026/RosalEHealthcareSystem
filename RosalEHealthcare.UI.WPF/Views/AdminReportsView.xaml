<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.AdminReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RosalEHealthcare.UI.WPF.Views"
             xmlns:controls="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarWeek" 
                                                        Width="20" Height="20"
                                                        Foreground="{TemplateBinding Foreground}"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsWeeklySummaryActive}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MonthlyTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CalendarMonth" 
                                                        Width="20" Height="20"
                                                        Foreground="{TemplateBinding Foreground}"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsMonthlyReportActive}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FCE4EC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8BBD0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrintButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F3E5F5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E1BEE7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Report Card Style -->
        <Style x:Key="ReportCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Item Style -->
        <Style x:Key="StatItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

            </Grid>

            <!-- Tab Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="Weekly Summary" 
                        Style="{StaticResource TabButtonStyle}"
                        Command="{Binding WeeklySummaryCommand}"/>
                <Button Content="Monthly Report" 
                        Style="{StaticResource MonthlyTabButtonStyle}"
                        Command="{Binding MonthlyReportCommand}"/>
            </StackPanel>

            <!-- Summary Cards -->
            <Grid Grid.Row="2" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:SummaryCard Grid.Column="0"
                                     Title="Total Patients"
                                     Value="{Binding TotalPatients}"
                                     Icon="👥"
                                     TopColor="#4CAF50"
                                     IconBackground="#E8F5E9"
                                     TrendText="{Binding PatientsTrend}"
                                     TrendColor="#4CAF50"
                                     TrendIcon="✓"
                                     Margin="0,0,15,0"/>

                <controls:SummaryCard Grid.Column="1"
                                     Title="Completed Appointments"
                                     Value="{Binding CompletedAppointments}"
                                     Icon="✓"
                                     TopColor="#2196F3"
                                     IconBackground="#E3F2FD"
                                     TrendText="{Binding AppointmentsTrend}"
                                     TrendColor="#2196F3"
                                     TrendIcon="✓"
                                     Margin="0,0,15,0"/>

                <controls:SummaryCard Grid.Column="2"
                                     Title="Medicine Prescribed"
                                     Value="{Binding MedicinesPrescribed}"
                                     Icon="💊"
                                     TopColor="#FF9800"
                                     IconBackground="#FFF3E0"
                                     TrendText="{Binding MedicinesTrend}"
                                     TrendColor="#FF9800"
                                     TrendIcon="✓"
                                     Margin="0,0,15,0"/>

                <controls:SummaryCard Grid.Column="3"
                                     Title="Low Stock Alerts"
                                     Value="{Binding LowStockAlerts}"
                                     Icon="✕"
                                     TopColor="#F44336"
                                     IconBackground="#FFEBEE"
                                     TrendText="{Binding LowStockMessage}"
                                     TrendColor="#F44336"
                                     TrendIcon="🔔"
                                     Margin="0"/>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Generate Custom Report Section -->
                <Border Grid.Row="0" Style="{StaticResource ReportCardStyle}" Margin="0,0,0,25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                            <TextBlock Text="Generate Custom Report" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="#333"
                                      Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>

                                <!-- Report Type -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Report Type" 
                                              FontSize="13" 
                                              Foreground="#666"
                                              Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding ReportTypes}"
                                             SelectedItem="{Binding SelectedReportType}"
                                             FontSize="14"
                                             Padding="12,10"
                                             BorderBrush="#E0E0E0"/>
                                </StackPanel>

                                <!-- Date Range -->
                                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                                    <TextBlock Text="Date Range" 
                                              FontSize="13" 
                                              Foreground="#666"
                                              Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding DateRanges}"
                                             SelectedItem="{Binding SelectedDateRange}"
                                             FontSize="14"
                                             Padding="12,10"
                                             BorderBrush="#E0E0E0"/>
                                </StackPanel>

                                <!-- Format -->
                                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                                    <TextBlock Text="Format" 
                                              FontSize="13" 
                                              Foreground="#666"
                                              Margin="0,0,0,8"/>
                                    <ComboBox ItemsSource="{Binding Formats}"
                                             SelectedItem="{Binding SelectedFormat}"
                                             FontSize="14"
                                             Padding="12,10"
                                             BorderBrush="#E0E0E0"/>
                                </StackPanel>

                                <!-- Search Button -->
                                <Button Grid.Column="3"
                                       Command="{Binding SearchReportCommand}"
                                       VerticalAlignment="Bottom"
                                       Height="42"
                                       Background="#17A2B8"
                                       BorderThickness="0"
                                       Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   Padding="15,0">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Magnify" 
                                                                           Width="20" 
                                                                           Height="20"
                                                                           Foreground="White"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,0,8,0"/>
                                                    <TextBlock Text="Search" 
                                                              Foreground="White" 
                                                              FontSize="14"
                                                              FontWeight="Medium"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#138496"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Export All Reports Button -->
                        <Button Grid.Column="1"
                               Command="{Binding ExportAllReportsCommand}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Background="#4CAF50"
                               BorderThickness="0"
                               Padding="20,12"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="8"
                                           Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="FileExport" 
                                                                   Width="20" 
                                                                   Height="20"
                                                                   Foreground="White"
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Export All Reports" 
                                                      Foreground="White" 
                                                      FontSize="14"
                                                      FontWeight="Medium"
                                                      VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#45A049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Weekly Summary View -->
                <Grid Grid.Row="1" Visibility="{Binding IsWeeklySummaryActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Weekly Appointment Analysis -->
                    <Border Grid.Column="0" Style="{StaticResource ReportCardStyle}">
                        <StackPanel>
                            <!-- Header -->
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Weekly Appointment Analysis" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#333"
                                          VerticalAlignment="Center"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Style="{StaticResource ActionButtonStyle}"
                                           Command="{Binding ViewWeeklyAnalysisCommand}"
                                           ToolTip="View Details">
                                        <materialDesign:PackIcon Kind="Eye" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#2196F3"/>
                                    </Button>
                                    <Button Style="{StaticResource ExportButtonStyle}"
                                           Command="{Binding ExportWeeklyAnalysisCommand}"
                                           ToolTip="Export">
                                        <materialDesign:PackIcon Kind="FileExport" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#E91E63"/>
                                    </Button>
                                    <Button Style="{StaticResource PrintButtonStyle}"
                                           Command="{Binding PrintWeeklyAnalysisCommand}"
                                           ToolTip="Print">
                                        <materialDesign:PackIcon Kind="Printer" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#9C27B0"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Stats -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Scheduled -->
                                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource StatItemStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Scheduled" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding ScheduledCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>

                                <!-- Completed -->
                                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource StatItemStyle}" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Completed" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CompletedCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#4CAF50"/>
                                    </StackPanel>
                                </Border>

                                <!-- No-Shows -->
                                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="No-Shows" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding NoShowsCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#FF9800"/>
                                    </StackPanel>
                                </Border>

                                <!-- Cancelled -->
                                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0">
                                    <StackPanel>
                                        <TextBlock Text="Cancelled" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CancelledCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#F44336"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Chart -->
                            <Border Background="#F9F9F9" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Height="250">
                                <Grid>
                                    <lvc:CartesianChart Series="{Binding WeeklyAppointmentSeries}"
                                                       LegendLocation="Bottom">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Day" Labels="{Binding WeeklyAppointmentLabels}"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Appointments" MinValue="0"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>

                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding WeeklyAppointmentSeries, Converter={StaticResource NullToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="ChartLine" 
                                                               Width="48" 
                                                               Height="48"
                                                               Foreground="#CCC"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="Weekly appointment trends chart" 
                                                  FontSize="14"
                                                  Foreground="#999"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Line chart showing weekly patient visits with trend analysis" 
                                                  FontSize="12"
                                                  Foreground="#CCC"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Common Illness Report -->
                    <Border Grid.Column="1" Style="{StaticResource ReportCardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <!-- Header -->
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Common Illness Report" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#333"
                                          VerticalAlignment="Center"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Style="{StaticResource ActionButtonStyle}"
                                           Command="{Binding ViewCommonIllnessCommand}"
                                           ToolTip="View Details">
                                        <materialDesign:PackIcon Kind="Eye" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#2196F3"/>
                                    </Button>
                                    <Button Style="{StaticResource ExportButtonStyle}"
                                           Command="{Binding ExportCommonIllnessCommand}"
                                           ToolTip="Export">
                                        <materialDesign:PackIcon Kind="FileExport" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#E91E63"/>
                                    </Button>
                                    <Button Style="{StaticResource PrintButtonStyle}"
                                           Command="{Binding PrintCommonIllnessCommand}"
                                           ToolTip="Print">
                                        <materialDesign:PackIcon Kind="Printer" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#9C27B0"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Stats -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Hypertension -->
                                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource StatItemStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Hypertension" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding HypertensionCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>

                                <!-- Diabetes -->
                                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource StatItemStyle}" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Diabetes" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding DiabetesCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>

                                <!-- URTI -->
                                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="URTI" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding UrtiCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>

                                <!-- UTI -->
                                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0">
                                    <StackPanel>
                                        <TextBlock Text="UTI" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding UtiCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Chart -->
                            <Border Background="#F9F9F9" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Height="250">
                                <Grid>
                                    <lvc:PieChart Series="{Binding InventoryStatusSeries}"
                                                 LegendLocation="Bottom"
                                                 InnerRadius="40"/>

                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding InventoryStatusSeries, Converter={StaticResource NullToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="ChartPie" 
                                                               Width="48" 
                                                               Height="48"
                                                               Foreground="#CCC"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="Inventory status distribution chart" 
                                                  FontSize="14"
                                                  Foreground="#999"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Pie chart showing distribution of common illnesses" 
                                                  FontSize="12"
                                                  Foreground="#CCC"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Monthly Report View -->
                <Grid Grid.Row="1" Visibility="{Binding IsMonthlyReportActive, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Daily Patient Summary -->
                    <Border Grid.Column="0" Style="{StaticResource ReportCardStyle}">
                        <StackPanel>
                            <!-- Header -->
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Daily Patient Summary" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#333"
                                          VerticalAlignment="Center"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Style="{StaticResource ActionButtonStyle}"
                                           Command="{Binding ViewDailySummaryCommand}"
                                           ToolTip="View Details">
                                        <materialDesign:PackIcon Kind="Eye" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#2196F3"/>
                                    </Button>
                                    <Button Style="{StaticResource ExportButtonStyle}"
                                           Command="{Binding ExportDailySummaryCommand}"
                                           ToolTip="Export">
                                        <materialDesign:PackIcon Kind="FileExport" 
                                                                       Width="20" 
                                                                       Height="20"
                                                                       Foreground="#E91E63"/>
                                    </Button>
                                    <Button Style="{StaticResource PrintButtonStyle}"
                                           Command="{Binding PrintDailySummaryCommand}"
                                           ToolTip="Print">
                                        <materialDesign:PackIcon Kind="Printer" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#9C27B0"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Stats -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- New Patients -->
                                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource StatItemStyle}">
                                    <StackPanel>
                                        <TextBlock Text="New Patients" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding NewPatientsCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>

                                <!-- Follow-ups -->
                                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource StatItemStyle}" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Follow-ups" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding FollowUpsCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>

                                <!-- Completed -->
                                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Completed" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CompletedDailyCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#4CAF50"/>
                                    </StackPanel>
                                </Border>

                                <!-- Cancelled -->
                                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0">
                                    <StackPanel>
                                        <TextBlock Text="Cancelled" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding CancelledDailyCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#F44336"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Chart -->
                            <Border Background="#F9F9F9" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Height="250">
                                <Grid>
                                    <lvc:CartesianChart Series="{Binding DailyAppointmentSeries}"
                                                       LegendLocation="Bottom">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Status" Labels="{x:Static local:AdminReportsView.DailyLabels}"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Count" MinValue="0"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>

                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding DailyAppointmentSeries, Converter={StaticResource NullToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="ChartBar" 
                                                               Width="48" 
                                                               Height="48"
                                                               Foreground="#CCC"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="Daily appointment status chart" 
                                                  FontSize="14"
                                                  Foreground="#999"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Bar chart showing daily appointment breakdown" 
                                                  FontSize="12"
                                                  Foreground="#CCC"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Medicine Inventory Status -->
                    <Border Grid.Column="1" Style="{StaticResource ReportCardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <!-- Header -->
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Medicine Inventory Status" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#333"
                                          VerticalAlignment="Center"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Style="{StaticResource ActionButtonStyle}"
                                           Command="{Binding ViewInventoryStatusCommand}"
                                           ToolTip="View Details">
                                        <materialDesign:PackIcon Kind="Eye" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#2196F3"/>
                                    </Button>
                                    <Button Style="{StaticResource ExportButtonStyle}"
                                           Command="{Binding ExportInventoryStatusCommand}"
                                           ToolTip="Export">
                                        <materialDesign:PackIcon Kind="FileExport" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#E91E63"/>
                                    </Button>
                                    <Button Style="{StaticResource PrintButtonStyle}"
                                           Command="{Binding PrintInventoryStatusCommand}"
                                           ToolTip="Print">
                                        <materialDesign:PackIcon Kind="Printer" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="#9C27B0"/>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <!-- Stats -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Total Medicines -->
                                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource StatItemStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Total Medicines" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding TotalMedicinesCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                    </StackPanel>
                                </Border>

                                <!-- Low Stock -->
                                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource StatItemStyle}" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="Low Stock" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding LowStockCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#FF9800"/>
                                    </StackPanel>
                                </Border>

                                <!-- Expiring Soon -->
                                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Expiring Soon" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding ExpiringSoonCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#FFC107"/>
                                    </StackPanel>
                                </Border>

                                <!-- Out of Stock -->
                                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource StatItemStyle}" Margin="0">
                                    <StackPanel>
                                        <TextBlock Text="Out of Stock" 
                                                  FontSize="12" 
                                                  Foreground="#999"
                                                  Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding OutOfStockCount}" 
                                                  FontSize="24" 
                                                  FontWeight="Bold"
                                                  Foreground="#F44336"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Chart -->
                            <Border Background="#F9F9F9" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Height="250">
                                <Grid>
                                    <lvc:PieChart Series="{Binding InventoryStatusSeries}"
                                                 LegendLocation="Bottom"
                                                 InnerRadius="40"/>

                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding InventoryStatusSeries, Converter={StaticResource NullToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="ChartDonut" 
                                                               Width="48" 
                                                               Height="48"
                                                               Foreground="#CCC"
                                                               Margin="0,0,0,10"/>
                                        <TextBlock Text="Inventory status distribution chart" 
                                                  FontSize="14"
                                                  Foreground="#999"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Donut chart showing medicine inventory breakdown" 
                                                  FontSize="12"
                                                  Foreground="#CCC"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Bottom Section - Patient Visit Trends & Top Diagnoses -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Patient Visit Trends -->
                    <Border Grid.Column="0" Style="{StaticResource ReportCardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="Patient Visit Trends" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#333"
                                          VerticalAlignment="Center"/>

                                <ComboBox ItemsSource="{Binding DateRanges}"
                                         SelectedItem="{Binding SelectedDateRange}"
                                         Width="150"
                                         HorizontalAlignment="Right"
                                         FontSize="12"
                                         Padding="10,8"
                                         BorderBrush="#E0E0E0"/>
                            </Grid>

                            <Border Background="#F9F9F9" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Height="300">
                                <Grid>
                                    <lvc:CartesianChart Series="{Binding VisitTrendsSeries}"
                                                       LegendLocation="Top">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Period" Labels="{Binding VisitTrendsLabels}"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Visits" MinValue="0"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>

                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding VisitTrendsSeries, Converter={StaticResource NullToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="TrendingUp" 
                                                               Width="60" 
                                                               Height="60"
                                                               Foreground="#CCC"
                                                               Margin="0,0,0,15"/>
                                        <TextBlock Text="Patient visit analytics and trends will be displayed here" 
                                                  FontSize="16"
                                                  FontWeight="Medium"
                                                  Foreground="#999"
                                                  HorizontalAlignment="Center"/>
                                        <TextBlock Text="Line chart showing weekly patient visits with trend analysis" 
                                                  FontSize="13"
                                                  Foreground="#CCC"
                                                  HorizontalAlignment="Center"
                                                  Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Top Diagnoses -->
                    <Border Grid.Column="1" Style="{StaticResource ReportCardStyle}" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="Top Diagnoses" 
                                          FontSize="18" 
                                          FontWeight="SemiBold"
                                          Foreground="#333"
                                          VerticalAlignment="Center"/>

                                <ComboBox ItemsSource="{Binding DateRanges}"
                                         SelectedItem="{Binding SelectedDateRange}"
                                         Width="130"
                                         HorizontalAlignment="Right"
                                         FontSize="12"
                                         Padding="10,8"
                                         BorderBrush="#E0E0E0"/>
                            </Grid>

                            <Border Background="#F9F9F9" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Height="300">
                                <Grid>
                                    <lvc:CartesianChart Series="{Binding TopDiagnosesSeries}"
                                                       LegendLocation="None">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Diagnosis" Labels="{Binding TopDiagnosesLabels}" LabelsRotation="45"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Cases" MinValue="0"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>

                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding TopDiagnosesSeries, Converter={StaticResource NullToVisibilityConverter}}">
                                        <materialDesign:PackIcon Kind="Pill" 
                                                               Width="60" 
                                                               Height="60"
                                                               Foreground="#FF9800"
                                                               Margin="0,0,0,15"/>
                                        <TextBlock Text="Most frequent diagnoses will be displayed here" 
                                                  FontSize="16"
                                                  FontWeight="Medium"
                                                  Foreground="#999"
                                                  HorizontalAlignment="Center"
                                                  TextAlignment="Center"/>
                                        <TextBlock Text="Bar chart showing distribution of common illnesses" 
                                                  FontSize="13"
                                                  Foreground="#CCC"
                                                  HorizontalAlignment="Center"
                                                  TextAlignment="Center"
                                                  Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>