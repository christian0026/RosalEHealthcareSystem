<Window x:Class="RosalEHealthcare.UI.WPF.Views.EditPatientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Edit Patient Information" 
        Height="650" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Edit Patient Information" 
                      FontSize="24" FontWeight="Bold" 
                      Foreground="#2E7D32"/>
            <TextBlock Text="Update patient details and medical information" 
                      FontSize="13" Foreground="#666" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Personal Information -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Personal Information" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#333" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Full Name *" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtFullName" Height="40" Padding="10" 
                                        BorderBrush="#E0E0E0" Margin="0,0,0,15"/>

                                <TextBlock Text="Date of Birth *" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <DatePicker x:Name="dpBirthDate" Height="40" Margin="0,0,0,15"/>

                                <TextBlock Text="Gender *" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cbGender" Height="40" Margin="0,0,0,15">
                                    <ComboBoxItem Content="Male"/>
                                    <ComboBoxItem Content="Female"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>

                                <TextBlock Text="Blood Type" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cbBloodType" Height="40">
                                    <ComboBoxItem Content="A+"/>
                                    <ComboBoxItem Content="A-"/>
                                    <ComboBoxItem Content="B+"/>
                                    <ComboBoxItem Content="B-"/>
                                    <ComboBoxItem Content="AB+"/>
                                    <ComboBoxItem Content="AB-"/>
                                    <ComboBoxItem Content="O+"/>
                                    <ComboBoxItem Content="O-"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Contact Number *" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtContact" Height="40" Padding="10" 
                                        BorderBrush="#E0E0E0" Margin="0,0,0,15"/>

                                <TextBlock Text="Email Address" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtEmail" Height="40" Padding="10" 
                                        BorderBrush="#E0E0E0" Margin="0,0,0,15"/>

                                <TextBlock Text="Height (cm)" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtHeight" Height="40" Padding="10" 
                                        BorderBrush="#E0E0E0" Margin="0,0,0,15"/>

                                <TextBlock Text="Weight (kg)" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtWeight" Height="40" Padding="10" 
                                        BorderBrush="#E0E0E0"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Address" FontSize="12" Foreground="#666" Margin="0,15,0,5"/>
                        <TextBox x:Name="txtAddress" Height="60" Padding="10" 
                                TextWrapping="Wrap" AcceptsReturn="True"
                                BorderBrush="#E0E0E0" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>

                <!-- Medical Information -->
                <Border Background="White" CornerRadius="8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Medical Information" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="#333" Margin="0,0,0,15"/>

                        <TextBlock Text="Primary Diagnosis" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPrimaryDiagnosis" Height="40" Padding="10" 
                                BorderBrush="#E0E0E0" Margin="0,0,0,15"/>

                        <TextBlock Text="Secondary Diagnosis" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSecondaryDiagnosis" Height="40" Padding="10" 
                                BorderBrush="#E0E0E0" Margin="0,0,0,15"/>

                        <TextBlock Text="Allergies" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtAllergies" Height="60" Padding="10" 
                                TextWrapping="Wrap" AcceptsReturn="True"
                                BorderBrush="#E0E0E0" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Content="Cancel" Click="BtnCancel_Click"
                   Width="120" Height="40" Margin="0,0,10,0"
                   Background="White" Foreground="#666" 
                   BorderBrush="#E0E0E0" BorderThickness="1"/>

            <Button Grid.Column="2" Content="Save Changes" Click="BtnSave_Click"
                   Width="140" Height="40"
                   Background="#4CAF50" Foreground="White" 
                   BorderThickness="0" FontWeight="Medium"/>
        </Grid>
    </Grid>
</Window>