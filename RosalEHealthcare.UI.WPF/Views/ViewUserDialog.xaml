<Window x:Class="RosalEHealthcare.UI.WPF.Views.ViewUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="User Details"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="500" Height="600"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2E7D32" CornerRadius="12,12,0,0" Padding="24,20">
                <Grid>
                    <TextBlock Text="User Details" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <Button x:Name="BtnClose"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnClose_Click"
                            Width="36"
                            Height="36">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="Transparent" CornerRadius="18">
                                    <iconPacks:PackIconMaterial Kind="Close" Width="18" Height="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFFFFF20"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24,24,24,16">

                    <!-- Profile Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,24">
                        <Grid Width="100" Height="100">
                            <Border CornerRadius="50" Background="#E8F5E9" BorderBrush="#C8E6C9" BorderThickness="3">
                                <Grid>
                                    <TextBlock x:Name="TxtInitials"
                                               Text="?"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="#2E7D32"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Image x:Name="ProfileImage" 
                                           Stretch="UniformToFill"
                                           Visibility="Collapsed">
                                        <Image.Clip>
                                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                                        </Image.Clip>
                                    </Image>
                                </Grid>
                            </Border>
                        </Grid>

                        <TextBlock x:Name="TxtUserName"
                                   Text="User Name"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,4"/>

                        <Border x:Name="RoleBadge"
                                Background="#E8F5E9"
                                CornerRadius="12"
                                Padding="16,6"
                                HorizontalAlignment="Center">
                            <TextBlock x:Name="TxtRole"
                                       Text="Role"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#2E7D32"/>
                        </Border>
                    </StackPanel>

                    <!-- Info Cards -->
                    <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Width="40" Height="40" 
                                    CornerRadius="20" 
                                    Background="#E3F2FD"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="CardAccountDetails" 
                                                           Width="20" Height="20" 
                                                           Foreground="#1976D2"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="User ID" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtUserCode" Text="USR-0000" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                Width="40" Height="40" 
                CornerRadius="20" 
                Background="#E8F5E9"
                Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="Account" 
                                       Width="20" Height="20" 
                                       Foreground="#2E7D32"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Username" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtUsername" Text="username" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Width="40" Height="40" 
                                    CornerRadius="20" 
                                    Background="#E8F5E9"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="Email" 
                                                           Width="20" Height="20" 
                                                           Foreground="#2E7D32"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Email Address" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtEmail" Text="email@example.com" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Width="40" Height="40" 
                                    CornerRadius="20" 
                                    Background="#FFF3E0"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="ShieldCheck" 
                                                           Width="20" Height="20" 
                                                           Foreground="#F57C00"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Account Status" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtStatusLabel" Text="Status" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                            <Border x:Name="StatusBadge"
                                    Grid.Column="2"
                                    Background="#E8F5E9"
                                    CornerRadius="4"
                                    Padding="12,6"
                                    VerticalAlignment="Center">
                                <TextBlock x:Name="TxtStatus"
                                           Text="Active"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#2E7D32"/>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Width="40" Height="40" 
                                    CornerRadius="20" 
                                    Background="#F3E5F5"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="Login" 
                                                           Width="20" Height="20" 
                                                           Foreground="#7B1FA2"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Last Login" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtLastLogin" Text="Never" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" 
                                    Width="40" Height="40" 
                                    CornerRadius="20" 
                                    Background="#E0F7FA"
                                    Margin="0,0,16,0">
                                <iconPacks:PackIconMaterial Kind="CalendarPlus" 
                                                           Width="20" Height="20" 
                                                           Foreground="#00838F"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Account Created" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtDateCreated" Text="Date" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Created By / Modified By -->
                    <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Created By" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtCreatedBy" Text="-" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Last Modified" Style="{StaticResource InfoLabel}"/>
                                <TextBlock x:Name="TxtModifiedAt" Text="-" Style="{StaticResource InfoValue}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="24,16" Background="#FAFAFA" CornerRadius="0,0,12,12">
                <Button Content="Close"
                        Background="#F5F5F5"
                        Foreground="#333"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Height="44"
                        Padding="32,0"
                        HorizontalAlignment="Right"
                        Cursor="Hand"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        Click="BtnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>