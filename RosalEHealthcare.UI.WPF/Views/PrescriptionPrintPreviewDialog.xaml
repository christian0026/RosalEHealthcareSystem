<Window x:Class="RosalEHealthcare.UI.WPF.Views.PrescriptionPrintPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Prescription Preview"
        Width="700" Height="850"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="PrintButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                               CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#43A047"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable Preview Area -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                     Margin="20,20,20,10">
            <!-- Print Area -->
            <Border x:Name="PrintArea" Background="White" CornerRadius="8" Padding="40" MaxWidth="600">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header / Letterhead -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="℞ RosalE Healthcare" FontSize="24" FontWeight="Bold"
                                  Foreground="#4CAF50" HorizontalAlignment="Center"/>
                        <TextBlock Text="Medical Prescription" FontSize="12" 
                                  Foreground="#999" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBlock Text="123 Healthcare Avenue, Medical City, Metro Manila"
                                  FontSize="10" Foreground="#999" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        <TextBlock Text="Tel: (02) 8123-4567 | Email: info@rosalehealthcare.com"
                                  FontSize="10" Foreground="#999" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>

                    <Rectangle Height="1" Fill="#E8E8E8" Margin="0,0,0,20"/>

                    <!-- Prescription Info Row -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock FontSize="11" Foreground="#999">
                                <Run Text="Prescription ID: "/>
                                <Run x:Name="txtPrescriptionId" Text="NEW" FontWeight="SemiBold" Foreground="#333"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock FontSize="11" Foreground="#999">
                                <Run Text="Date: "/>
                                <Run x:Name="txtDate" Text="" FontWeight="SemiBold" Foreground="#333"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <!-- Patient Information -->
                    <Border Background="#F8F8F8" CornerRadius="6" Padding="15" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,8">
                                <TextBlock Text="Patient Name" FontSize="10" Foreground="#999"/>
                                <TextBlock x:Name="txtPatientName" Text="—" FontSize="13" FontWeight="SemiBold" Foreground="#333"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                                <TextBlock Text="Patient ID" FontSize="10" Foreground="#999"/>
                                <TextBlock x:Name="txtPatientId" Text="—" FontSize="13" FontWeight="Medium" Foreground="#333"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,8">
                                <TextBlock Text="Age" FontSize="10" Foreground="#999"/>
                                <TextBlock x:Name="txtPatientAge" Text="—" FontSize="13" Foreground="#333"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,8">
                                <TextBlock Text="Gender" FontSize="10" Foreground="#999"/>
                                <TextBlock x:Name="txtPatientGender" Text="—" FontSize="13" Foreground="#333"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <TextBlock Text="Contact" FontSize="10" Foreground="#999"/>
                                <TextBlock x:Name="txtPatientContact" Text="—" FontSize="13" Foreground="#333"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Diagnosis -->
                    <StackPanel Margin="0,0,0,20">
                        <Grid Margin="0,0,0,10">
                            <TextBlock Text="DIAGNOSIS" FontSize="11" FontWeight="Bold" Foreground="#666"/>
                            <Border x:Name="bdrSeverity" Background="#FFF3E0" CornerRadius="4" 
                                   Padding="8,3" HorizontalAlignment="Right">
                                <TextBlock x:Name="txtSeverity" Text="Moderate" FontSize="10" 
                                          FontWeight="Bold" Foreground="#FF9800"/>
                            </Border>
                        </Grid>
                        <TextBlock x:Name="txtDiagnosis" Text="—" FontSize="14" FontWeight="Medium" 
                                  Foreground="#333" TextWrapping="Wrap"/>
                        <TextBlock x:Name="txtSecondaryDiagnosis" Text="" FontSize="12" 
                                  Foreground="#666" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Rectangle Height="1" Fill="#E8E8E8" Margin="0,0,0,20"/>

                    <!-- Medications -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="℞ MEDICATIONS" FontSize="11" FontWeight="Bold" 
                                  Foreground="#666" Margin="0,0,0,12"/>

                        <ItemsControl x:Name="icMedicines">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FAFAFA" CornerRadius="6" 
                                           Padding="12" Margin="0,0,0,8"
                                           BorderBrush="#E8E8E8" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="℞" FontSize="16" 
                                                      FontWeight="Bold" Foreground="#4CAF50"
                                                      VerticalAlignment="Top" Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="#333">
                                                    <Run Text="{Binding MedicineName}"/>
                                                    <Run Text=" "/>
                                                    <Run Text="{Binding Dosage}" Foreground="#666"/>
                                                </TextBlock>
                                                <TextBlock FontSize="12" Foreground="#666" Margin="0,4,0,0">
                                                    <Run Text="Sig: "/>
                                                    <Run Text="{Binding Frequency}"/>
                                                    <Run Text=" for "/>
                                                    <Run Text="{Binding Duration}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Foreground="#999" Margin="0,2,0,0">
                                                    <Run Text="Route: "/>
                                                    <Run Text="{Binding Route}"/>
                                                    <Run Text=" | Qty: "/>
                                                    <Run Text="{Binding Quantity}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Special Instructions -->
                    <Border Background="#FFF8E1" CornerRadius="6" Padding="12" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="SPECIAL INSTRUCTIONS" FontSize="10" FontWeight="Bold" 
                                      Foreground="#FF9800" Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtInstructions" 
                                      Text="Take medications as prescribed. Complete the full course of treatment."
                                      FontSize="12" Foreground="#666" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Follow-up -->
                    <Border x:Name="pnlFollowUp" Background="#E3F2FD" CornerRadius="6" 
                           Padding="12" Margin="0,0,0,20" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CalendarCheck" Width="18" Height="18"
                                                    Foreground="#2196F3" VerticalAlignment="Center"/>
                            <TextBlock FontSize="12" Foreground="#333" Margin="10,0,0,0" VerticalAlignment="Center">
                                <Run Text="Follow-up appointment: "/>
                                <Run x:Name="txtFollowUpDate" Text="" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Rectangle Height="1" Fill="#E8E8E8" Margin="0,10,0,25"/>

                    <!-- Doctor Signature -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <Rectangle Height="1" Fill="#333" Width="150" Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtDoctorName" Text="Dr. Juan Dela Cruz" 
                                      FontSize="13" FontWeight="SemiBold" Foreground="#333"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Attending Physician" FontSize="10" Foreground="#999"
                                      HorizontalAlignment="Center" Margin="0,3,0,0"/>
                            <TextBlock Text="License No. 0123456" FontSize="10" Foreground="#999"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Button Bar -->
        <Border Grid.Row="1" Background="White" Padding="20,15"
               BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" Click="BtnClose_Click" 
                       Style="{StaticResource CloseButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="🖨️ Print" Click="BtnPrint_Click" 
                       Style="{StaticResource PrintButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>