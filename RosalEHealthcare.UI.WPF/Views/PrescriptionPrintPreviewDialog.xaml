<Window x:Class="RosalEHealthcare.UI.WPF.Views.PrescriptionPrintPreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prescription Print Preview" 
        Height="700" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1"
                Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="🖨️ Print" 
                        Width="100" 
                        Height="36"
                        Margin="0,0,8,0"
                        Background="#4CAF50" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Click="BtnPrint_Click"/>

                <Button Content="Close" 
                        Width="100" 
                        Height="36"
                        Background="#9E9E9E" 
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>

        <!-- Print Preview Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="#E0E0E0"
                      Padding="24">
            <Border x:Name="printableArea"
                    Background="White" 
                    Padding="40"
                    MaxWidth="540">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Header/Letterhead -->
                    <Border Background="#2E7D32" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="🏥 ROSAL HEALTHCARE" 
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Medical Management System" 
                                       Foreground="#E8F5E9" 
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="📞 (123) 456-7890 • 📧 info@rosalhealthcare.com" 
                                       Foreground="#E8F5E9" 
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Prescription Title -->
                    <TextBlock Text="PRESCRIPTION" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Patient Information -->
                    <Border BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            Padding="16" 
                            Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Patient Name:" Grid.Row="0" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,12,8"/>
                            <TextBlock x:Name="txtPrintPatientName" Text="-" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Patient ID:" Grid.Row="1" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,12,8"/>
                            <TextBlock x:Name="txtPrintPatientId" Text="-" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Age/Gender:" Grid.Row="2" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,12,8"/>
                            <TextBlock x:Name="txtPrintAgeGender" Text="-" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Date:" Grid.Row="3" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,12,8"/>
                            <TextBlock x:Name="txtPrintDate" Text="-" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

                            <TextBlock Text="Doctor:" Grid.Row="4" Grid.Column="0" FontWeight="SemiBold" Margin="0,0,12,0"/>
                            <TextBlock x:Name="txtPrintDoctor" Text="-" Grid.Row="4" Grid.Column="1"/>
                        </Grid>
                    </Border>

                    <!-- Diagnosis -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="DIAGNOSIS" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtPrintDiagnosis" 
                                   TextWrapping="Wrap"
                                   LineHeight="20"/>
                    </StackPanel>

                    <!-- Medications -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="MEDICATIONS (Rx)" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Margin="0,0,0,8"/>
                        <ItemsControl x:Name="icPrintMedicines">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="0,8">
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" FontSize="13">
                                                <Run Text="℞"/>
                                                <Run Text="{Binding MedicineName}"/>
                                            </TextBlock>
                                            <TextBlock Margin="20,4,0,0" FontSize="12">
<Run Text="Dosage:"/>
<Run Text="{Binding Dosage}" FontWeight="SemiBold"/>
<Run Text=" • Frequency:"/>
<Run Text="{Binding Frequency}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                            <TextBlock Margin="20,2,0,0" FontSize="12">
<Run Text="Duration:"/>
<Run Text="{Binding Duration}" FontWeight="SemiBold"/>
<Run Text=" • Quantity:"/>
<Run Text="{Binding Quantity}" FontWeight="SemiBold"/>
<Run Text=" • Route:"/>
<Run Text="{Binding Route}" FontWeight="SemiBold"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    <!-- Special Instructions -->
                    <StackPanel Margin="0,0,0,16" x:Name="pnlInstructions">
                        <TextBlock Text="SPECIAL INSTRUCTIONS" 
                               FontWeight="Bold" 
                               FontSize="14"
                               Margin="0,0,0,8"/>
                        <Border Background="#F9F9F9" 
                            Padding="12" 
                            CornerRadius="4">
                            <TextBlock x:Name="txtPrintInstructions" 
                                   TextWrapping="Wrap"
                                   LineHeight="18"
                                   FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <!-- Follow-up -->
                    <StackPanel Margin="0,0,0,16" x:Name="pnlFollowUp">
                        <TextBlock FontWeight="SemiBold" FontSize="12">
                        <Run Text="⏰ Follow-up Appointment:"/>
                        <Run x:Name="txtPrintFollowUp" Text="-"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Priority Badge -->
                    <Border x:Name="priorityBadge"
                        Background="#FFF3E0" 
                        CornerRadius="4" 
                        Padding="12,6"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left">
                        <TextBlock FontWeight="SemiBold" FontSize="11">
                        <Run Text="Priority:"/>
                        <Run x:Name="txtPrintPriority" Text="Routine"/>
                        </TextBlock>
                    </Border>

                    <!-- Doctor Signature -->
                    <Border BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0" 
                        Padding="0,16,0,0">
                        <Grid>
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock Text="Prescribed By:" 
                                       FontSize="11" 
                                       Foreground="#666"/>
                                <TextBlock x:Name="txtPrintDoctorSignature" 
                                       Text="Dr. Name" 
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Margin="0,8,0,4"/>
                                <TextBlock Text="Medical License No: XXXXXXXX" 
                                       FontSize="10" 
                                       Foreground="#666"/>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                <TextBlock Text="Valid for 30 days from date of issue" 
                                       FontSize="9" 
                                       Foreground="#999"
                                       TextAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Footer -->
                    <Border Background="#F5F5F5" 
                        Padding="12" 
                        Margin="0,20,0,0">
                        <TextBlock TextAlignment="Center" 
                               FontSize="9" 
                               Foreground="#666"
                               TextWrapping="Wrap">
                        <Run Text="This prescription is valid only when presented with valid ID. "/>
                        <Run Text="Prescription ID:"/>
                        <Run x:Name="txtPrescriptionId" Text="PR-2025-0001" FontWeight="SemiBold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>