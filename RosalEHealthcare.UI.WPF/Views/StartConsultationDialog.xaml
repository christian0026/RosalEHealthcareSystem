<Window x:Class="RosalEHealthcare.UI.WPF.Views.StartConsultationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Consultation"
        Width="700"
        Height="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- HEADER -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="25,20">
            <Grid>
                <StackPanel>
                    <TextBlock Text="▶ Start Consultation" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Record vital signs before starting the consultation" 
                               FontSize="14" Foreground="#C8E6C9" Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        FontSize="20" FontWeight="Bold" Cursor="Hand"
                        Width="40" Height="40" Click="BtnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- CONTENT -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25">

                <!-- Patient Information Card -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Avatar -->
                        <Border Grid.Column="0" Width="70" Height="70" CornerRadius="35" 
                                Background="#4CAF50" Margin="0,0,20,0">
                            <TextBlock x:Name="txtInitials" Text="JD" Foreground="White" 
                                       FontSize="26" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="txtPatientName" Text="Patient Name" 
                                       FontSize="20" FontWeight="Bold" Foreground="#333"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Border Background="#E3F2FD" CornerRadius="6" Padding="10,5" Margin="0,0,10,0">
                                    <TextBlock x:Name="txtPatientId" Text="PT-2025-001" 
                                               FontSize="13" Foreground="#1565C0" FontWeight="SemiBold"/>
                                </Border>
                                <Border Background="#E8F5E9" CornerRadius="6" Padding="10,5">
                                    <TextBlock x:Name="txtPatientInfo" Text="35 yrs • Male" 
                                               FontSize="13" Foreground="#2E7D32" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                            <TextBlock x:Name="txtAppointmentType" Text="General Consultation" 
                                       FontSize="14" Foreground="#666" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Chief Complaint Card -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📋 Chief Complaint" FontSize="16" FontWeight="Bold" 
                                   Foreground="#333" Margin="0,0,0,12"/>
                        <Border Background="#FFF8E1" CornerRadius="8" Padding="15">
                            <TextBlock x:Name="txtChiefComplaint" Text="Fever and cough for 3 days" 
                                       FontSize="14" Foreground="#F57C00" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Vital Signs Card -->
                <Border Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="🩺 Vital Signs" FontSize="16" FontWeight="Bold" Foreground="#333"/>
                            <Border Background="#E8F5E9" CornerRadius="4" Padding="8,3" Margin="15,0,0,0">
                                <TextBlock Text="Optional - Fill what's available" FontSize="11" 
                                           Foreground="#4CAF50" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>

                        <!-- Row 1 -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Blood Pressure" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="#666" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtBloodPressure" Height="45" FontSize="14" Padding="12,10"
                                         BorderBrush="#E0E0E0" BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Temperature (°C)" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="#666" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtTemperature" Height="45" FontSize="14" Padding="12,10"
                                         BorderBrush="#E0E0E0" BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Heart Rate (bpm)" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="#666" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtHeartRate" Height="45" FontSize="14" Padding="12,10"
                                         BorderBrush="#E0E0E0" BorderThickness="1"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 2 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Respiratory Rate" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="#666" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtRespiratoryRate" Height="45" FontSize="14" Padding="12,10"
                                         BorderBrush="#E0E0E0" BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Weight (kg)" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="#666" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtWeight" Height="45" FontSize="14" Padding="12,10"
                                         BorderBrush="#E0E0E0" BorderThickness="1"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Height (cm)" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="#666" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtHeight" Height="45" FontSize="14" Padding="12,10"
                                         BorderBrush="#E0E0E0" BorderThickness="1"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- ═══════════════════════════════════════════════════════ -->
        <!-- FOOTER -->
        <!-- ═══════════════════════════════════════════════════════ -->
        <Border Grid.Row="2" Background="White" Padding="25,20" 
                BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Cancel" Height="50" FontSize="15" FontWeight="SemiBold"
                        Background="#E0E0E0" Foreground="#333" BorderThickness="0" Cursor="Hand"
                        Click="BtnCancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" Content="▶ Start Consultation" Height="50" FontSize="15" FontWeight="Bold"
                        Background="#4CAF50" Foreground="White" BorderThickness="0" Cursor="Hand"
                        Click="BtnStartConsultation_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#2E7D32"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>