<Window x:Class="RosalEHealthcare.UI.WPF.Views.SaveTemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save as Template" 
        Height="250" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Save Prescription as Template" 
                       FontSize="20" 
                       FontWeight="Bold"/>
            <TextBlock Text="Enter a name for this prescription template" 
                       Foreground="#666666" 
                       FontSize="13"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Form -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="20">
            <StackPanel>
                <TextBlock Text="Template Name *" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtTemplateName" 
                         Height="40" 
                         Padding="12,10"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         FontSize="14"/>

                <TextBlock Text="Examples: 'Hypertension Standard', 'Diabetes Follow-up', 'Common Cold Treatment'" 
                           Foreground="#999" 
                           FontSize="11"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="40" 
                    Margin="0,0,12,0"
                    Click="BtnCancel_Click"
                    Background="#9E9E9E" 
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Save Template" 
                    Width="140" 
                    Height="40"
                    Click="BtnSave_Click"
                    Background="#9C27B0" 
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>