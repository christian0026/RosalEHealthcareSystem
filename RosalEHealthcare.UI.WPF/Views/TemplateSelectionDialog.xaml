<Window x:Class="RosalEHealthcare.UI.WPF.Views.TemplateSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Prescription Template" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Prescription Templates" 
                       FontSize="20" 
                       FontWeight="Bold"/>
            <TextBlock Text="Select a template to quickly fill prescription details" 
                       Foreground="#666666" 
                       FontSize="13"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Templates List -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="icTemplates">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F9F9F9" 
                                    CornerRadius="6" 
                                    Padding="16" 
                                    Margin="0,0,0,12"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="Template_MouseLeftButtonDown"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding TemplateName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="15"
                                                   Margin="0,0,0,6"/>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="📋 " FontSize="12"/>
                                            <TextBlock Text="{Binding PrimaryDiagnosis}" 
                                                       Foreground="#666" 
                                                       FontSize="12"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Used " Foreground="#999" FontSize="11"/>
                                            <TextBlock Text="{Binding UsageCount}" 
                                                       Foreground="#999" 
                                                       FontSize="11" 
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text=" times" Foreground="#999" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                        <Border Background="{Binding SeverityColor}" 
                                                CornerRadius="12" 
                                                Padding="10,4"
                                                Margin="0,0,8,0">
                                            <TextBlock Text="{Binding ConditionSeverity}" 
                                                       Foreground="White" 
                                                       FontSize="11" 
                                                       FontWeight="SemiBold"/>
                                        </Border>

                                        <TextBlock Text="→" 
                                                   FontSize="20" 
                                                   Foreground="#4CAF50"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Cancel" 
                    Width="100" 
                    Height="40"
                    Click="BtnCancel_Click"
                    Background="#9E9E9E" 
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="16,10">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>