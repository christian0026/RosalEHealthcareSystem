<Window x:Class="RosalEHealthcare.UI.WPF.Views.TemplateSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Select Prescription Template"
        Width="550" Height="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="TemplateCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                    <Setter Property="Background" Value="#F8FFF8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Select Template" FontSize="20" FontWeight="SemiBold" Foreground="#333"/>
            <TextBlock Text="Choose a prescription template to apply" FontSize="13" 
                      Foreground="#666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Search -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" 
               CornerRadius="6" Height="40" Margin="0,0,0,15">
            <Grid>
                <TextBox x:Name="txtSearch" Height="38" Padding="35,0,10,0"
                        BorderThickness="0" Background="Transparent"
                        VerticalContentAlignment="Center" FontSize="14"
                        TextChanged="TxtSearch_TextChanged"/>
                <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18"
                                       Foreground="#999" VerticalAlignment="Center"
                                       HorizontalAlignment="Left" Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Template List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="icTemplates">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource TemplateCardStyle}" 
                               MouseLeftButtonUp="Template_Click" Tag="{Binding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding TemplateName}" FontSize="15" 
                                              FontWeight="SemiBold" Foreground="#333"/>
                                    <TextBlock Text="{Binding PrimaryDiagnosis}" FontSize="12" 
                                              Foreground="#666" Margin="0,5,0,0"
                                              TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Border Background="#E8F5E9" CornerRadius="4" Padding="6,2" Margin="0,0,8,0">
                                            <TextBlock FontSize="10" Foreground="#4CAF50">
                                                <Run Text="Used "/>
                                                <Run Text="{Binding UsageCount}"/>
                                                <Run Text=" times"/>
                                            </TextBlock>
                                        </Border>
                                        <Border x:Name="bdrSeverity" CornerRadius="4" Padding="6,2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ConditionSeverity}" Value="Mild">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ConditionSeverity}" Value="Severe">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ConditionSeverity}" Value="Critical">
                                                            <Setter Property="Background" Value="#B71C1C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding ConditionSeverity}" FontSize="10">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ConditionSeverity}" Value="Mild">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ConditionSeverity}" Value="Severe">
                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ConditionSeverity}" Value="Critical">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>

                                <materialDesign:PackIcon Grid.Column="1" Kind="ChevronRight"
                                                        Width="24" Height="24" Foreground="#CCC"
                                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel x:Name="pnlEmpty" Grid.Row="2" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Visibility="Collapsed">
            <materialDesign:PackIcon Kind="FileDocument" Width="50" Height="50" Foreground="#E0E0E0"/>
            <TextBlock Text="No templates found" FontSize="14" Foreground="#999" 
                      Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Click="BtnCancel_Click" Padding="20,8"
                   Background="Transparent" Foreground="#666" BorderBrush="#E0E0E0"
                   BorderThickness="1" FontSize="13" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>