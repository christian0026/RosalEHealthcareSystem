<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.PatientRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:conv="clr-namespace:RosalEHealthcare.UI.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1200" d:DesignWidth="1100"
             Background="#F5F5F5">

    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVis"/>

        <Style x:Key="ContentCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PageHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2E7D32"/>
                                <Setter Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#2E7D32"/>
                    <Setter Property="Background" Value="#F1F8E9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TabButtonActive" TargetType="Button" BasedOn="{StaticResource TabButton}">
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="BorderBrush" Value="#2E7D32"/>
            <Setter Property="Background" Value="#E8F5E9"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="24">
        <StackPanel>
            <Border Style="{StaticResource ContentCard}">
                <StackPanel>
                    <TextBlock Text="Search Patient" FontSize="16" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,4"/>
                    <TextBlock Text="Search for existing records to avoid duplication." FontSize="13" Foreground="#888" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <TextBox x:Name="txtSearch" Style="{StaticResource InputTextBox}" Padding="36,10,12,10" KeyDown="txtSearch_KeyDown"/>
                            <iconPacks:PackIconMaterial Kind="Magnify" Width="18" Height="18" Foreground="#999" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,0,0,0" IsHitTestVisible="False"/>
                            <TextBlock Text="Search by Name or Patient ID..." Foreground="#999" Margin="36,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False"
                                       Visibility="{Binding Text, ElementName=txtSearch, Converter={StaticResource StringNullOrEmptyToVis}}"/>
                        </Grid>

                        <Button Grid.Column="1" Content="Search" Style="{StaticResource PrimaryButton}" Margin="12,0,0,0" Click="SearchPatient_Click"/>
                    </Grid>

                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="btnRecentPatients" Content="Recent Patients" Style="{StaticResource TabButtonActive}" Click="TabRecentPatients_Click"/>
                            <Button x:Name="btnTodayRegistration" Content="Today's Registration" Style="{StaticResource TabButton}" Margin="4,0,0,0" Click="TabTodayRegistration_Click"/>
                            <Button x:Name="btnPendingAppointments" Content="Pending Appointments" Style="{StaticResource TabButton}" Margin="4,0,0,0" Click="TabPendingAppointments_Click"/>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="dgSearchResults" 
                              AutoGenerateColumns="False" 
                              Height="250" 
                              BorderBrush="#E0E0E0" 
                              BorderThickness="0,0,1,1"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#EEEEEE"
                              VerticalGridLinesBrush="Transparent"
                              Background="White"
                              HeadersVisibility="Column"
                              MouseDoubleClick="dgSearchResults_MouseDoubleClick">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FAFAFA"/>
                                <Setter Property="Padding" Value="16,12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#555"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F1F8E9"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E8F5E9"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Patient ID" Binding="{Binding PatientId}" Width="120"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="60"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                            <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" Width="140"/>
                            <DataGridTextColumn Header="Last Visit" Binding="{Binding LastVisit, StringFormat=d}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource ContentCard}">
                <StackPanel>
                    <Grid Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="New Patient Registration" FontSize="18" FontWeight="SemiBold" Foreground="#333"/>
                            <TextBlock Text="Fill out the form below to register a new patient." FontSize="13" Foreground="#888" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Border BorderBrush="#2E7D32" BorderThickness="0,0,0,1" Margin="0,0,0,16" Padding="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Account" Width="18" Height="18" Foreground="#2E7D32" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Personal Information" Style="{StaticResource SectionHeader}" Margin="0"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource InputLabel}">
                                <Run Text="First Name"/><Run Text="*" Foreground="#E53935"/>
                            </TextBlock>
                            <TextBox x:Name="txtFirstName" Style="{StaticResource InputTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Middle Name" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtMiddleName" Style="{StaticResource InputTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Style="{StaticResource InputLabel}">
                                <Run Text="Last Name"/><Run Text="*" Foreground="#E53935"/>
                            </TextBlock>
                            <TextBox x:Name="txtLastName" Style="{StaticResource InputTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Style="{StaticResource InputLabel}">
                                <Run Text="Date of Birth"/><Run Text="*" Foreground="#E53935"/>
                            </TextBlock>
                            <DatePicker x:Name="dpBirthDate" Style="{StaticResource InputDatePicker}" SelectedDateChanged="dpBirthDate_SelectedDateChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Style="{StaticResource InputLabel}">
                                <Run Text="Gender"/><Run Text="*" Foreground="#E53935"/>
                            </TextBlock>
                            <ComboBox x:Name="cmbGender" Style="{StaticResource InputComboBox}">
                                <ComboBoxItem Content="Select Gender" IsSelected="True" IsEnabled="False"/>
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Border BorderBrush="#2E7D32" BorderThickness="0,0,0,1" Margin="0,10,0,16" Padding="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Phone" Width="18" Height="18" Foreground="#2E7D32" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Contact Information" Style="{StaticResource SectionHeader}" Margin="0"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource InputLabel}">
                                <Run Text="Phone Number"/><Run Text="*" Foreground="#E53935"/>
                            </TextBlock>
                            <TextBox x:Name="txtPhone" Style="{StaticResource InputTextBox}" MaxLength="13"/>
                            <TextBlock Text="Format: +63 9XX XXX XXXX" FontSize="11" Foreground="#999" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Email Address" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtEmail" Style="{StaticResource InputTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource InputLabel}">
                            <Run Text="Complete Address"/><Run Text="*" Foreground="#E53935"/>
                        </TextBlock>
                        <TextBox x:Name="txtAddress" Style="{StaticResource InputTextBox}" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <Border BorderBrush="#2E7D32" BorderThickness="0,0,0,1" Margin="0,10,0,16" Padding="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Stethoscope" Width="18" Height="18" Foreground="#2E7D32" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Clinical Information" Style="{StaticResource SectionHeader}" Margin="0"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Style="{StaticResource InputLabel}">
                            <Run Text="Chief Complaint / Reason for Visit"/><Run Text="*" Foreground="#E53935"/>
                        </TextBlock>
                        <TextBox x:Name="txtChiefComplaint" Style="{StaticResource InputTextBox}" Height="60" TextWrapping="Wrap"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Initial Condition/Symptoms" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtInitialCondition" Style="{StaticResource InputTextBox}" Height="60" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Clinical Notes" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtClinicalNotes" Style="{StaticResource InputTextBox}" Height="60" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <Border BorderBrush="#2E7D32" BorderThickness="0,0,0,1" Margin="0,10,0,16" Padding="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Pill" Width="18" Height="18" Foreground="#2E7D32" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Basic Information" Style="{StaticResource SectionHeader}" Margin="0"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Known Allergies" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtAllergies" Style="{StaticResource InputTextBox}" Height="50" TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Current Medications" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtCurrentMedications" Style="{StaticResource InputTextBox}" Height="50" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,20,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="🖨️ Print Form" Style="{StaticResource SecondaryButton}" Margin="0,0,12,0" Click="PrintForm_Click"/>
                            <Button Content="💾 Save as Draft" Style="{StaticResource SecondaryButton}" Margin="0,0,12,0" Click="SaveAsDraft_Click"/>
                            <Button Style="{StaticResource PrimaryButton}" Click="RegisterPatient_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="AccountPlus" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Register Patient"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>