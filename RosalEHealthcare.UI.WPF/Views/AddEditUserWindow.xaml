<Window x:Class="RosalEHealthcare.UI.WPF.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:RosalEHealthcare.UI.WPF.Converters"
        Title="Add / Edit User"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="600" Height="650"
        Background="#F8F9FA">

    <Window.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StrNullOrEmptyToVis"/>

        <!-- Rounded textbox -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded passwordbox -->
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Green button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer>
        <StackPanel Margin="30">

            <TextBlock Text="Add / Edit User" FontSize="22" FontWeight="Bold" Foreground="#2E7D32" Margin="0,0,0,20"/>

            <!-- PROFILE IMAGE -->
            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                <Border Width="130" Height="130" CornerRadius="65" BorderBrush="#CCC" BorderThickness="1">
                    <Image x:Name="ProfileImage" Stretch="UniformToFill" ClipToBounds="True"/>
                </Border>
                <Button Content="Upload Profile Picture" Margin="0,10,0,0" Padding="10,4"
                        Background="#2E7D32" Foreground="White" Click="UploadProfile_Click"/>
            </StackPanel>

            <!-- FULL NAME -->
            <Grid Margin="0,0,0,15">
                <TextBox x:Name="txtFullName" Style="{StaticResource RoundedTextBox}"/>
                <TextBlock Text="Enter full name"
                           IsHitTestVisible="False"
                           Foreground="#9E9E9E"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Visibility="{Binding Text, ElementName=txtFullName, Converter={StaticResource StrNullOrEmptyToVis}}"/>
            </Grid>

            <!-- EMAIL -->
            <Grid Margin="0,0,0,15">
                <TextBox x:Name="txtEmail" Style="{StaticResource RoundedTextBox}"/>
                <TextBlock Text="Enter email address"
                           IsHitTestVisible="False"
                           Foreground="#9E9E9E"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Visibility="{Binding Text, ElementName=txtEmail, Converter={StaticResource StrNullOrEmptyToVis}}"/>
            </Grid>

            <!-- PASSWORD -->
            <Grid Margin="0,0,0,15">
                <PasswordBox x:Name="txtPassword" Style="{StaticResource RoundedPasswordBox}" PasswordChanged="txtPassword_PasswordChanged"/>
                <TextBlock x:Name="pwdPlaceholder" Text="Enter password"
                           IsHitTestVisible="False"
                           Foreground="#9E9E9E"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- ROLE -->
            <TextBlock Text="Select Role" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbRole" Height="40" FontSize="14" Margin="0,0,0,15">
                <ComboBoxItem Content="Administrator"/>
                <ComboBoxItem Content="Doctor"/>
                <ComboBoxItem Content="Receptionist"/>
            </ComboBox>

            <!-- STATUS -->
            <TextBlock Text="Status" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cbStatus" Height="40" FontSize="14" Margin="0,0,0,15">
                <ComboBoxItem Content="Active"/>
                <ComboBoxItem Content="Inactive"/>
            </ComboBox>

            <!-- SAVE BUTTON -->
            <Button Content="Save User" Style="{StaticResource PrimaryButton}" Click="Save_Click"/>

        </StackPanel>
    </ScrollViewer>
</Window>