<Window x:Class="RosalEHealthcare.UI.WPF.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Add User"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="550" Height="750"
        Background="#F8F9FA"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Rounded TextBox Style -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2E7D32"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="Validation.HasError" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#D32F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded PasswordBox Style -->
        <Style x:Key="RoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          Margin="2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2E7D32"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="48"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Required Indicator -->
        <Style x:Key="RequiredIndicator" TargetType="TextBlock">
            <Setter Property="Text" Value="*"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>

        <!-- Error Text Style -->
        <Style x:Key="ErrorText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="Margin" Value="4,4,0,0"/>
            <Setter Property="Visibility" Value="Collapsed"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2E7D32" CornerRadius="12,12,0,0" Padding="24,20">
                <Grid>
                    <StackPanel>
                        <TextBlock x:Name="TxtWindowTitle" 
                                   Text="Add New User" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock x:Name="TxtWindowSubtitle"
                                   Text="Create a new user account" 
                                   FontSize="13" 
                                   Foreground="#C8E6C9"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    <Button x:Name="BtnClose"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnClose_Click"
                            Width="36"
                            Height="36">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="Transparent" CornerRadius="18">
                                    <iconPacks:PackIconMaterial Kind="Close" Width="18" Height="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFFFFF20"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24,20">

                    <!-- Profile Image Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,24">
                        <Grid Width="100" Height="100">
                            <Border CornerRadius="50" Background="#E8F5E9" BorderBrush="#C8E6C9" BorderThickness="2">
                                <Grid>
                                    <TextBlock x:Name="TxtProfileInitials"
                                               Text="?"
                                               FontSize="36"
                                               FontWeight="Bold"
                                               Foreground="#2E7D32"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    <Image x:Name="ProfileImage" 
                                           Stretch="UniformToFill"
                                           Visibility="Collapsed">
                                        <Image.Clip>
                                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                                        </Image.Clip>
                                    </Image>
                                </Grid>
                            </Border>
                            <Button x:Name="BtnUploadPhoto"
                                    Width="32" Height="32"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Cursor="Hand"
                                    Click="UploadProfile_Click"
                                    ToolTip="Upload profile picture">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#2E7D32" CornerRadius="16">
                                            <iconPacks:PackIconMaterial Kind="Camera" Width="16" Height="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        <Button x:Name="BtnRemovePhoto"
                                Content="Remove Photo"
                                Background="Transparent"
                                Foreground="#D32F2F"
                                FontSize="12"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,8,0,0"
                                Visibility="Collapsed"
                                Click="RemovePhoto_Click"/>
                    </StackPanel>

                    <!-- Full Name -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Full Name" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <TextBox x:Name="txtFullName" 
                                 Style="{StaticResource RoundedTextBox}"
                                 TextChanged="txtFullName_TextChanged"
                                 MaxLength="200"/>
                        <TextBlock x:Name="TxtFullNameError" Style="{StaticResource ErrorText}"/>
                    </StackPanel>

                    <!-- Username -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Username" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <Grid>
                            <TextBox x:Name="txtUsername" 
                 Style="{StaticResource RoundedTextBox}"
                 TextChanged="txtUsername_TextChanged"
                 MaxLength="100"
                 CharacterCasing="Lower"/>
                            <TextBlock x:Name="TxtUsernameHint"
                   Text="Auto-generated from name"
                   IsHitTestVisible="False"
                   Foreground="#9E9E9E"
                   FontSize="12"
                   Margin="16,0,0,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Visibility="Collapsed"/>
                        </Grid>
                        <TextBlock x:Name="TxtUsernameError" Style="{StaticResource ErrorText}"/>
                        <TextBlock Text="Used for login. Only lowercase letters, numbers, dots, and underscores allowed."
               FontSize="11"
               Foreground="#757575"
               Margin="4,4,0,0"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Email Address" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <TextBox x:Name="txtEmail" 
                                 Style="{StaticResource RoundedTextBox}"
                                 TextChanged="txtEmail_TextChanged"
                                 MaxLength="200"/>
                        <TextBlock x:Name="TxtEmailError" Style="{StaticResource ErrorText}"/>
                    </StackPanel>

                    <!-- Password -->
                    <!-- Password -->
                    <StackPanel x:Name="PasswordSection" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="TxtPasswordLabel" Text="Password" Style="{StaticResource FieldLabel}"/>
                            <TextBlock x:Name="TxtPasswordRequired" Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <Grid>
                            <PasswordBox x:Name="txtPassword" 
                     Style="{StaticResource RoundedPasswordBox}"
                     PasswordChanged="txtPassword_PasswordChanged"
                     MaxLength="100"
                     Padding="14,12,50,12"/>
                            <TextBox x:Name="txtPasswordVisible"
                 Style="{StaticResource RoundedTextBox}"
                 Visibility="Collapsed"
                 TextChanged="txtPasswordVisible_TextChanged"
                 MaxLength="100"
                 Padding="14,12,50,12"/>
                            <Button x:Name="BtnTogglePassword"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,12,0"
                Width="32" Height="32"
                Cursor="Hand"
                Click="TogglePassword_Click"
                Panel.ZIndex="10">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                            Background="Transparent" 
                            CornerRadius="4">
                                            <iconPacks:PackIconMaterial x:Name="IconEye" 
                                                   Kind="Eye" 
                                                   Width="20" Height="20" 
                                                   Foreground="#757575"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        <TextBlock x:Name="TxtPasswordError" Style="{StaticResource ErrorText}"/>

                        <!-- Password Strength Indicator -->
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="StrengthBar1" Grid.Column="0" Height="4" Background="#E0E0E0" CornerRadius="2" Margin="0,0,2,0"/>
                            <Border x:Name="StrengthBar2" Grid.Column="1" Height="4" Background="#E0E0E0" CornerRadius="2" Margin="2,0"/>
                            <Border x:Name="StrengthBar3" Grid.Column="2" Height="4" Background="#E0E0E0" CornerRadius="2" Margin="2,0"/>
                            <Border x:Name="StrengthBar4" Grid.Column="3" Height="4" Background="#E0E0E0" CornerRadius="2" Margin="2,0,0,0"/>
                        </Grid>
                        <TextBlock x:Name="TxtPasswordStrength" 
               Text="" 
               FontSize="12" 
               Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Confirm Password -->
                    <StackPanel x:Name="ConfirmPasswordSection" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Confirm Password" Style="{StaticResource FieldLabel}"/>
                            <TextBlock x:Name="TxtConfirmPasswordRequired" Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <PasswordBox x:Name="txtConfirmPassword" 
                                     Style="{StaticResource RoundedPasswordBox}"
                                     PasswordChanged="txtConfirmPassword_PasswordChanged"
                                     MaxLength="100"/>
                        <TextBlock x:Name="TxtConfirmPasswordError" Style="{StaticResource ErrorText}"/>
                    </StackPanel>

                    <!-- Role -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Role" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <ComboBox x:Name="cbRole" Style="{StaticResource RoundedComboBox}">
                            <ComboBoxItem Content="Administrator"/>
                            <ComboBoxItem Content="Doctor"/>
                            <ComboBoxItem Content="Receptionist"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Status" Style="{StaticResource FieldLabel}"/>
                            <TextBlock Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <ComboBox x:Name="cbStatus" Style="{StaticResource RoundedComboBox}">
                            <ComboBoxItem Content="Active"/>
                            <ComboBoxItem Content="Inactive"/>
                            <ComboBoxItem Content="Pending"/>
                        </ComboBox>
                        <TextBlock Text="• Active: User can log in and use the system&#x0a;• Inactive: User cannot log in&#x0a;• Pending: User must change password on first login"
                                   FontSize="11"
                                   Foreground="#757575"
                                   Margin="4,8,0,0"
                                   LineHeight="18"/>
                    </StackPanel>

                    <!-- Reset Password Button (Edit Mode Only) -->
                    <Border x:Name="ResetPasswordSection"
                            Background="#FFF3E0"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16"
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Password Reset"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="#E65100"/>
                                <TextBlock Text="Generate a temporary password for this user"
                                           FontSize="12"
                                           Foreground="#FF9800"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <Button x:Name="BtnResetPassword"
                                    Grid.Column="1"
                                    Content="Reset Password"
                                    Background="#FF9800"
                                    Foreground="White"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Padding="16,10"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Click="ResetPassword_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="24,16" Background="#FAFAFA" CornerRadius="0,0,12,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="BtnCancel"
                            Grid.Column="1"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButton}"
                            Width="120"
                            Margin="0,0,12,0"
                            Click="BtnCancel_Click"/>

                    <Button x:Name="BtnSave"
                            Grid.Column="2"
                            Content="Save User"
                            Style="{StaticResource PrimaryButton}"
                            Width="140"
                            Click="Save_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>