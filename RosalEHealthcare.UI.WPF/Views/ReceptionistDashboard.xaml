<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.ReceptionistDashboard"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      Title="Receptionist Dashboard"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize"
                      MinWidth="1200" MinHeight="750"
                      Background="#F5F5F5">

    <controls:MetroWindow.Resources>
        <!-- Sidebar button style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A8A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2F7D2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active nav button style -->
        <Style x:Key="SidebarButtonActive" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#3FA23F"/>
        </Style>

        <!-- Status tag style -->
        <Style TargetType="TextBlock" x:Key="StatusTag">
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#2E7D32">
            <DockPanel>
                <StackPanel Margin="16" DockPanel.Dock="Top">
                    <!-- Logo & Title -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,12">
                        <Ellipse Width="40" Height="40" Fill="White"/>
                        <TextBlock Text="ROSAL eHEALTHCARE" Foreground="White" FontWeight="Bold"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- User Info -->
                    <StackPanel Margin="0,10,0,0">
                        <Ellipse Width="48" Height="48" Fill="LightGray"/>
                        <TextBlock Text="Receptionist Name" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,8,0,0"/>
                        <TextBlock Text="Receptionist" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel DockPanel.Dock="Top" Margin="8,30,8,0">
                    <Button Content="Dashboard" Style="{StaticResource SidebarButtonActive}" Margin="8"/>
                    <Button Content="Patient Registration" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="Appointment Management" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="System Settings" Style="{StaticResource SidebarButton}" Margin="8"/>
                </StackPanel>

                <!-- Logout -->
                <StackPanel DockPanel.Dock="Bottom" Margin="16,12">
                    <Button Content="Logout" Background="#A14747" Foreground="White" Padding="12"
                            Click="Logout_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <DockPanel Grid.Column="1">
            <!-- Topbar -->
            <Border DockPanel.Dock="Top" Height="60" Background="White" Margin="0,0,0,6">
                <Grid>
                    <TextBlock Text="Receptionist Dashboard" FontSize="22" FontWeight="Bold"
                               Foreground="#2E7D32" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <Button Content="🔔" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                            Background="Transparent" BorderBrush="Transparent" FontSize="18"/>
                </Grid>
            </Border>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <!-- Summary Cards -->
                    <UniformGrid Columns="4" Margin="0,0,0,20">
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Registered Patients" Foreground="Gray"/>
                                <TextBlock Text="1,245" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="↑12% from last month" Foreground="Green"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Today's Appointments" Foreground="Gray"/>
                                <TextBlock Text="87" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="↑5% from yesterday" Foreground="Blue"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Pending Appointments" Foreground="Gray"/>
                                <TextBlock Text="23" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="⚠ Requires confirmation" Foreground="OrangeRed"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Completed Today" Foreground="Gray"/>
                                <TextBlock Text="45" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="↑8% efficiency" Foreground="Green"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Today's Appointment -->
                        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <Grid>
                                    <TextBlock Text="Today's Appointment" FontSize="16" FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                    <TextBox Width="200" HorizontalAlignment="Right" Margin="0,0,10,0"
                                             VerticalAlignment="Center" Height="30">
                                        <materialDesign:HintAssist.Hint>Search Patient</materialDesign:HintAssist.Hint>
                                    </TextBox>
                                </Grid>

                                <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column"
                                          CanUserAddRows="False" IsReadOnly="True" Margin="0,10,0,0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date &amp; Time" Binding="{Binding Date}" Width="150"/>
                                        <DataGridTextColumn Header="Patient Name" Binding="{Binding Name}" Width="200"/>
                                        <DataGridTextColumn Header="Contact" Binding="{Binding Contact}" Width="200"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                                        <DataGridTemplateColumn Header="Action" Width="100">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="EDIT" Background="#2E7D32" Foreground="White" Padding="6,2"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                        <!-- Quick Actions -->
                        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Quick Actions" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Button Content="Register New Patient" Background="#2E7D32" Foreground="White" Padding="10" Margin="0,4,0,4"/>
                                <Button Content="Schedule Appointment" Background="#E0E0E0" Foreground="Black" Padding="10" Margin="0,4,0,4"/>
                                <Button Content="Print Appointment Slips" Background="#FFE0B2" Foreground="Black" Padding="10" Margin="0,4,0,4"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</controls:MetroWindow>
