<Window x:Class="RosalEHealthcare.UI.WPF.Views.AddEditMedicineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Medicine" 
        Height="750" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Loaded="Window_Loaded">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock x:Name="txtTitle" 
                       Text="Add New Medicine" 
                       FontSize="28" 
                       FontWeight="Bold"/>
            <TextBlock Text="Fill in the medicine details below" 
                       Foreground="#666666" 
                       FontSize="14"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <!-- Form ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <StackPanel>

                <!-- Basic Information Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="BASIC INFORMATION" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,20"/>

                        <!-- Medicine Name -->
                        <TextBox x:Name="txtName" 
                                 materialDesign:HintAssist.Hint="Medicine Name *"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,16"
                                 FontSize="14"/>

                        <!-- Generic Name & Brand -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtGenericName" 
                                     Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Generic Name"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"/>

                            <TextBox x:Name="txtBrand" 
                                     Grid.Column="2"
                                     materialDesign:HintAssist.Hint="Brand"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"/>
                        </Grid>

                        <!-- Category & Type -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="cbCategory" 
                                      Grid.Column="0"
                                      materialDesign:HintAssist.Hint="Category *"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      FontSize="14">
                                <ComboBoxItem Content="Antibiotics"/>
                                <ComboBoxItem Content="Pain Relief"/>
                                <ComboBoxItem Content="Vitamins"/>
                                <ComboBoxItem Content="Antihypertensive"/>
                                <ComboBoxItem Content="Antidiabetic"/>
                                <ComboBoxItem Content="Antihistamine"/>
                                <ComboBoxItem Content="Antacid"/>
                                <ComboBoxItem Content="Cough Suppressant"/>
                            </ComboBox>

                            <ComboBox x:Name="cbType" 
                                      Grid.Column="2"
                                      materialDesign:HintAssist.Hint="Type *"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      FontSize="14">
                                <ComboBoxItem Content="Tablets"/>
                                <ComboBoxItem Content="Capsules"/>
                                <ComboBoxItem Content="Syrup"/>
                                <ComboBoxItem Content="Injection"/>
                                <ComboBoxItem Content="Cream/Ointment"/>
                                <ComboBoxItem Content="Drops"/>
                            </ComboBox>
                        </Grid>

                        <!-- Strength & Unit -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtStrength" 
                                     Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Strength (e.g., 500mg)"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"/>

                            <ComboBox x:Name="cbUnit" 
                                      Grid.Column="2"
                                      materialDesign:HintAssist.Hint="Unit"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      FontSize="14">
                                <ComboBoxItem Content="Tablet"/>
                                <ComboBoxItem Content="Capsule"/>
                                <ComboBoxItem Content="ml"/>
                                <ComboBoxItem Content="mg"/>
                                <ComboBoxItem Content="g"/>
                                <ComboBoxItem Content="Bottle"/>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Stock & Pricing Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="24" 
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="STOCK &amp; PRICING" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtStock" 
                                     Grid.Column="0"
                                     materialDesign:HintAssist.Hint="Stock Quantity *"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"
                                     PreviewTextInput="NumericOnly_PreviewTextInput"/>

                            <TextBox x:Name="txtMinStock" 
                                     Grid.Column="2"
                                     materialDesign:HintAssist.Hint="Minimum Stock Level *"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"
                                     Text="10"
                                     PreviewTextInput="NumericOnly_PreviewTextInput"/>

                            <TextBox x:Name="txtPrice" 
                                     Grid.Column="4"
                                     materialDesign:HintAssist.Hint="Unit Price (₱) *"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     FontSize="14"
                                     PreviewTextInput="DecimalOnly_PreviewTextInput"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Expiry & Notes Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.06"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="EXPIRY &amp; NOTES" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,20"/>

                        <DatePicker x:Name="dpExpiryDate" 
                                    materialDesign:HintAssist.Hint="Expiry Date *"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                    FontSize="14"
                                    Margin="0,0,0,16"/>

                        <TextBox x:Name="txtNotes" 
                                 materialDesign:HintAssist.Hint="Notes (Optional)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 FontSize="14"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="80"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="120" 
                    Height="42"
                    Margin="0,0,12,0"
                    Click="BtnCancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>

            <Button x:Name="btnSave"
                    Content="Save Medicine" 
                    Width="140" 
                    Height="42"
                    Background="#2E7D32"
                    BorderBrush="#2E7D32"
                    Foreground="White"
                    Click="BtnSave_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>