<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:RosalEHealthcare.UI.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#F0F2F5"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
    </UserControl.Resources>

    <Grid>
        <Border x:Name="LoadingOverlay" 
                Background="#99FFFFFF" 
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Value="0"
                             Width="50"
                             Height="50"
                             Margin="0,0,0,16"
                             Foreground="{StaticResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Loading Users..." 
                           Foreground="{StaticResource PrimaryHueMidBrush}" 
                           FontSize="16" 
                           FontWeight="Medium"/>
            </StackPanel>
        </Border>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,24">
                <controls:SummaryCard x:Name="CardTotalUsers"
                                      Title="Total Users"
                                      Value="0"
                                      Icon="👥"
                                      TopColor="#4CAF50"
                                      IconBackground="#E8F5E9"
                                      TrendText="System Users"
                                      TrendColor="#4CAF50"
                                      Margin="0,0,16,0"/>

                <controls:SummaryCard x:Name="CardDoctors"
                                      Title="Doctors"
                                      Value="0"
                                      Icon="👨‍⚕️"
                                      TopColor="#2196F3"
                                      IconBackground="#E3F2FD"
                                      TrendText="Medical Staff"
                                      TrendColor="#2196F3"
                                      TrendIcon="🏥"
                                      Margin="0,0,16,0"/>

                <controls:SummaryCard x:Name="CardReceptionists"
                                      Title="Receptionists"
                                      Value="0"
                                      Icon="💼"
                                      TopColor="#FF9800"
                                      IconBackground="#FFF3E0"
                                      TrendText="Front Desk"
                                      TrendColor="#FF9800"
                                      TrendIcon="📋"
                                      Margin="0,0,16,0"/>

                <controls:SummaryCard x:Name="CardAdmins"
                                      Title="Administrators"
                                      Value="0"
                                      Icon="🔐"
                                      TopColor="#F44336"
                                      IconBackground="#FFEBEE"
                                      TrendText="System Admins"
                                      TrendColor="#F44336"
                                      TrendIcon="⚙️"
                                      Margin="0"/>
            </UniformGrid>

            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:ColorZone Mode="Standard" 
                                              Padding="8,4" 
                                              CornerRadius="8" 
                                              Panel.ZIndex="1"
                                              Margin="0,0,16,0"
                                              materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Magnify" Opacity=".56" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBox x:Name="txtSearch" 
                                     Grid.Column="1" 
                                     Margin="8,0,0,0"
                                     materialDesign:HintAssist.Hint="Search users..." 
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden" 
                                     BorderThickness="0" 
                                     MinWidth="250" 
                                     VerticalAlignment="Center"
                                     TextChanged="TxtSearch_TextChanged"/>
                        </Grid>
                    </materialDesign:ColorZone>

                    <ComboBox x:Name="cbRole"
                              materialDesign:HintAssist.Hint="Role"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="12,10"
                              MinWidth="150"
                              Margin="0,0,16,0"
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="All Roles" IsSelected="True"/>
                        <ComboBoxItem Content="Administrator"/>
                        <ComboBoxItem Content="Doctor"/>
                        <ComboBoxItem Content="Receptionist"/>
                    </ComboBox>

                    <ComboBox x:Name="cbStatus"
                              materialDesign:HintAssist.Hint="Status"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="12,10"
                              MinWidth="150"
                              Margin="0,0,8,0"
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="All Status" IsSelected="True"/>
                        <ComboBoxItem Content="Active"/>
                        <ComboBoxItem Content="Inactive"/>
                        <ComboBoxItem Content="Locked"/>
                    </ComboBox>

                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Clear Filters"
                            Click="BtnClearFilters_Click">
                        <materialDesign:PackIcon Kind="FilterOff" Opacity="0.6"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnAddUser"
                            Click="BtnAddUser_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            ToolTip="Add New User">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountPlus" Margin="0,0,8,0"/>
                            <TextBlock Text="Add User" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <materialDesign:Card Grid.Row="2" 
                                 Background="White" 
                                 UniformCornerRadius="8" 
                                 materialDesign:ShadowAssist.ShadowDepth="Depth1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="16">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.7"/>
                                <TextBlock Text="User List" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtResultCount"
                                       Text="Showing 0 users"
                                       HorizontalAlignment="Right"
                                       FontSize="12"
                                       Opacity="0.6"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <DataGrid x:Name="dgUsers"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserSortColumns="True"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#F0F0F0"
                              RowHeight="55"
                              Background="Transparent"
                              BorderThickness="0">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="User Info" Width="2.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:ColorZone Mode="Standard" Background="#E8F5E9" Width="40" Height="40" CornerRadius="20" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding Initials}" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center" 
                                                           FontWeight="Bold" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                            </materialDesign:ColorZone>

                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Email}" FontSize="12" Opacity="0.6"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="1.5*"/>

                            <DataGridTextColumn Header="User ID" Binding="{Binding UserCode}" Width="Auto" Foreground="#888"/>

                            <DataGridTemplateColumn Header="Role" Width="1.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding RoleBadgeBackground}" 
                                                CornerRadius="4" 
                                                Padding="8,4" 
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Role}" 
                                                       Foreground="{Binding RoleBadgeColor}" 
                                                       FontSize="12" 
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Status" Width="1.2*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="12,4" HorizontalAlignment="Left" MinWidth="80">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Inactive">
                                                            <Setter Property="Background" Value="#F5F5F5"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Locked">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" FontSize="12" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Inactive">
                                                                <Setter Property="Foreground" Value="#616161"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Locked">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Last Login" Binding="{Binding LastLoginFormatted}" Width="1.5*"/>

                            <DataGridTemplateColumn Header="Actions" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="View Details"
                                                    Width="30" Height="30"
                                                    Click="BtnView_Click" Tag="{Binding Id}">
                                                <materialDesign:PackIcon Kind="Eye" Width="16" Height="16" Foreground="#0288D1"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="Edit User"
                                                    Width="30" Height="30"
                                                    Click="BtnEdit_Click" Tag="{Binding Id}">
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Foreground="#FFA000"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="Delete User"
                                                    Width="30" Height="30"
                                                    Click="BtnDelete_Click" Tag="{Binding Id}">
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" Foreground="#D32F2F"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <TextBlock x:Name="txtPageInfo" Text="Page 1 of 1" VerticalAlignment="Center" Margin="0,0,16,0" Opacity="0.6"/>
                <Button x:Name="btnFirst" Click="BtnFirst_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="First Page">
                    <materialDesign:PackIcon Kind="PageFirst"/>
                </Button>
                <Button x:Name="btnPrevious" Click="BtnPrevious_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Previous">
                    <materialDesign:PackIcon Kind="ChevronLeft"/>
                </Button>
                <Button x:Name="btnNext" Click="BtnNext_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Next">
                    <materialDesign:PackIcon Kind="ChevronRight"/>
                </Button>
                <Button x:Name="btnLast" Click="BtnLast_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Last Page">
                    <materialDesign:PackIcon Kind="PageLast"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>