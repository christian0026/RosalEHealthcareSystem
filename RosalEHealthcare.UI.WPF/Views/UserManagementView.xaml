<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.UserManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F5F5F5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- SUMMARY CARDS -->
            <UniformGrid Columns="4" Margin="0,0,0,20">
                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Total Users" Foreground="Gray"/>
                        <TextBlock Text="18" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="↑8% from last month" Foreground="Green"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Doctors" Foreground="Gray"/>
                        <TextBlock Text="3" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="👨‍⚕️ Active Practitioners" Foreground="Blue"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Receptionists" Foreground="Gray"/>
                        <TextBlock Text="6" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="Front desk staff" Foreground="DarkOrange"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Administrators" Foreground="Gray"/>
                        <TextBlock Text="1" FontSize="26" FontWeight="Bold"/>
                        <TextBlock Text="System management" Foreground="Red"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- USER RECORDS HEADER -->
            <DockPanel Margin="0,0,0,10">
                <TextBlock Text="User Records" FontSize="18" FontWeight="Bold"
                           DockPanel.Dock="Left" VerticalAlignment="Center"/>
                <Button Content="➕ Add New User"
                        Background="#2E7D32" Foreground="White" Padding="10,6"
                        HorizontalAlignment="Right" DockPanel.Dock="Right"
                        Margin="0,0,0,0"/>
            </DockPanel>

            <!-- SEARCH & FILTER -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBox Width="220" Height="36" Margin="0,0,10,0"
                             VerticalAlignment="Center"
                             TextAlignment="Left"
                             ToolTip="Search by Name or User ID"
                             Text=""/>
                    <ComboBox Width="160" Height="36" VerticalAlignment="Center" Margin="0,0,10,0" SelectedIndex="0">
                        <ComboBoxItem Content="All Roles"/>
                        <ComboBoxItem Content="Administrator"/>
                        <ComboBoxItem Content="Doctor"/>
                        <ComboBoxItem Content="Receptionist"/>
                    </ComboBox>
                    <ComboBox Width="160" Height="36" VerticalAlignment="Center" Margin="0,0,10,0" SelectedIndex="0">
                        <ComboBoxItem Content="All Status"/>
                        <ComboBoxItem Content="Active"/>
                        <ComboBoxItem Content="Inactive"/>
                    </ComboBox>
                    <Button Content="Search" Background="#009688" Foreground="White" Padding="10,4" Width="100"/>
                </StackPanel>
            </Border>

            <!-- USERS LIST -->
            <Border Background="White" CornerRadius="8" Padding="16">
                <StackPanel>
                    <TextBlock Text="Users List" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                    <DataGrid x:Name="UsersDataGrid"
                              AutoGenerateColumns="False" HeadersVisibility="Column"
                              CanUserAddRows="False" IsReadOnly="True" Margin="0,10,0,0"
                              RowHeight="50">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="User Info" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="User ID" Binding="{Binding UserID}" Width="120"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="150"/>
                            <DataGridTextColumn Header="Contact" Binding="{Binding Email}" Width="200"/>
                            <DataGridTextColumn Header="Last Login" Binding="{Binding LastLogin}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="View" Background="#0288D1" Foreground="White" Margin="2" Padding="6,2"/>
                                            <Button Content="Edit" Background="#FFA000" Foreground="White" Margin="2" Padding="6,2"/>
                                            <Button Content="Delete" Background="#D32F2F" Foreground="White" Margin="2" Padding="6,2"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>


                    <!-- PAGINATION -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button Content="⏮" Margin="4"/>
                        <Button Content="1" Background="#2E7D32" Foreground="White" Margin="4"/>
                        <Button Content="2" Margin="4"/>
                        <Button Content="3" Margin="4"/>
                        <Button Content="..." Margin="4"/>
                        <Button Content="249" Margin="4"/>
                        <Button Content="⏭" Margin="4"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
