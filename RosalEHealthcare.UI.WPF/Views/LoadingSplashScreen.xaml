<Window x:Class="RosalEHealthcare.UI.WPF.Views.LoadingSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Loading"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="600"
        Height="400"
        Topmost="True">

    <Window.Resources>
        <!-- Fade In Animation -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="MainGrid"
                           Storyboard.TargetProperty="Opacity"
                           From="0"
                           To="1"
                           Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Pulse Animation for Icon -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="iconMedical"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1"
                           To="1.2"
                           Duration="0:0:0.8"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="iconMedical"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1"
                           To="1.2"
                           Duration="0:0:0.8"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Rotate Animation for Outer Ring -->
        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="outerRing"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0"
                           To="360"
                           Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource RotateAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border CornerRadius="20" Background="White">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid x:Name="MainGrid" Opacity="0">
            <!-- Background Gradient -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2E7D32" Offset="0"/>
                    <GradientStop Color="#43A047" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Center Content -->
            <StackPanel Grid.Row="0" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center">

                <!-- Animated Icon Container -->
                <Grid Width="120" Height="120" Margin="0,0,0,0">
                    <!-- Outer rotating ring -->
                    <Ellipse x:Name="outerRing"
                            Width="120" 
                            Height="120"
                            Stroke="White"
                            StrokeThickness="3"
                            StrokeDashArray="5,5"
                            Opacity="0.5"
                            RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>

                    <!-- Medical Icon with Pulse -->
                    <iconPacks:PackIconMaterial x:Name="iconMedical"
                                               Kind="MedicalBag"
                                               Width="60"
                                               Height="60"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               RenderTransformOrigin="0.5,0.5">
                        <iconPacks:PackIconMaterial.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </iconPacks:PackIconMaterial.RenderTransform>
                    </iconPacks:PackIconMaterial>
                </Grid>

                <!-- Title -->
                <TextBlock Text="ROSAL HEALTHCARE SYSTEM"
                          FontSize="28"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Medical Clinic Management System"
                          FontSize="14"
                          Foreground="White"
                          Opacity="0.9"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Loading Status Text -->
                <TextBlock x:Name="txtStatus"
                          Text="Initializing system..."
                          FontSize="13"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"
                          Opacity="0.8"/>
            </StackPanel>

            <!-- Progress Bar Container -->
            <StackPanel Grid.Row="1" 
                       Margin="80,0,80,40">

                <!-- Progress Bar Background -->
                <Border Height="6"
                       Background="White"
                       Opacity="0.3"
                       CornerRadius="3"/>

                <!-- Animated Progress Bar -->
                <Border x:Name="progressBar"
                       Height="6"
                       Background="White"
                       CornerRadius="3"
                       HorizontalAlignment="Left"
                       Margin="0,-6,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                    </Border.Effect>
                </Border>

                <!-- Percentage Text -->
                <TextBlock x:Name="txtPercentage"
                          Text="0%"
                          FontSize="12"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"
                          Opacity="0.8"/>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                <TextBlock Text="Version 1.0.0"
                          FontSize="11"
                          Foreground="White"
                          Opacity="0.6"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="© 2025 Rosal Medical Clinic. All rights reserved."
                          FontSize="10"
                          Foreground="White"
                          Opacity="0.5"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>