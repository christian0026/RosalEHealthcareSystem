<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.Settings.ApplicationSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900"
             Background="White">

    <UserControl.Resources>
        <!-- Section Card Style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Section Subtitle Style -->
        <Style x:Key="SectionSubtitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Info Row Style -->
        <Style x:Key="InfoRow" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Grid Width="50" Height="26">
                                <Border x:Name="track"
                                        Background="#E0E0E0"
                                        CornerRadius="13"
                                        Cursor="Hand"/>
                                <Border x:Name="thumb"
                                        Width="22" Height="22"
                                        CornerRadius="11"
                                        Background="White"
                                        HorizontalAlignment="Left"
                                        Margin="2,0,0,0"
                                        Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                    </Border.Effect>
                                </Border>
                            </Grid>
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock x:Name="text" 
                                   Text="{TemplateBinding Content}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="text" Property="Foreground" Value="#1565C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Setting Row Style -->
        <Style x:Key="SettingRow" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="24">
        <StackPanel>

            <!-- APPLICATION INFO Section -->
            <Border Style="{StaticResource SectionCard}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Logo -->
                    <Border Grid.Column="0" 
                            Width="100" Height="100" 
                            CornerRadius="16" 
                            Background="#E8F5E9"
                            Margin="0,0,24,0">
                        <iconPacks:PackIconMaterial Kind="HospitalBuilding" 
                                                    Width="50" Height="50" 
                                                    Foreground="#2E7D32"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                    </Border>

                    <!-- App Details -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="RosalE Healthcare System" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="#333"/>
                        <TextBlock Text="Clinic Management Software" 
                                   FontSize="14" 
                                   Foreground="#666"
                                   Margin="0,4,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <Border Background="#E3F2FD" 
                                    CornerRadius="4" 
                                    Padding="10,6" 
                                    Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="TagOutline" 
                                                                Width="14" Height="14" 
                                                                Foreground="#1976D2"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock x:Name="TxtVersion" 
                                               Text="Version 1.0.0" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"
                                               Foreground="#1976D2"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#F3E5F5" 
                                    CornerRadius="4" 
                                    Padding="10,6">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="CalendarClock" 
                                                                Width="14" Height="14" 
                                                                Foreground="#7B1FA2"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock x:Name="TxtBuildDate" 
                                               Text="Built: 2025" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"
                                               Foreground="#7B1FA2"
                                               Margin="6,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- SYSTEM REQUIREMENTS Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <iconPacks:PackIconMaterial Kind="MonitorShimmer" 
                                                    Width="20" Height="20" 
                                                    Foreground="#FF9800"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="System Information" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Current system and environment details" 
                               Style="{StaticResource SectionSubtitle}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Operating System -->
                        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="MicrosoftWindows" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Operating System" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtOperatingSystem" 
                                               Text="--" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- .NET Version -->
                        <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="DotNet" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text=".NET Framework" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtDotNetVersion" 
                                               Text="--" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Machine Name -->
                        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="DesktopClassic" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Machine Name" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtMachineName" 
                                               Text="--" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- User Name -->
                        <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Account" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Windows User" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtWindowsUser" 
                                               Text="--" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Memory Usage -->
                        <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Memory" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Memory Usage" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtMemoryUsage" 
                                               Text="--" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Application Path -->
                        <Border Grid.Column="2" Grid.Row="2" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="FolderOutline" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Application Path" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtAppPath" 
                                               Text="--" 
                                               FontSize="13" 
                                               FontWeight="Medium"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- HELP & SUPPORT Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <iconPacks:PackIconMaterial Kind="HelpCircleOutline" 
                                                    Width="20" Height="20" 
                                                    Foreground="#2196F3"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Help and Support" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Get help and support for the application" 
                               Style="{StaticResource SectionSubtitle}"/>

                    <WrapPanel>
                        <Button x:Name="BtnUserManual" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnUserManual_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="BookOpenPageVariant" Width="16" Height="16"/>
                                <TextBlock Text="User Manual" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnContactSupport" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnContactSupport_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="EmailOutline" Width="16" Height="16"/>
                                <TextBlock Text="Contact Support" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnReportBug" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnReportBug_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="BugOutline" Width="16" Height="16"/>
                                <TextBlock Text="Report a Bug" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnFeatureRequest" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnFeatureRequest_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="LightbulbOnOutline" Width="16" Height="16"/>
                                <TextBlock Text="Feature Request" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- DEVELOPER OPTIONS Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <iconPacks:PackIconMaterial Kind="CodeBraces" 
                                                    Width="20" Height="20" 
                                                    Foreground="#9C27B0"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Developer Options" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Advanced options for troubleshooting and development" 
                               Style="{StaticResource SectionSubtitle}"/>

                    <!-- Debug Mode -->
                    <Border Style="{StaticResource SettingRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Debug Mode" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333"/>
                                <TextBlock Text="Enable detailed error messages and logging" 
                                           FontSize="12" 
                                           Foreground="#888"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <CheckBox x:Name="ChkDebugMode" 
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="ChkDebugMode_Changed"
                                      Unchecked="ChkDebugMode_Changed"/>
                        </Grid>
                    </Border>

                    <!-- Enable Audit Logs -->
                    <Border Style="{StaticResource SettingRow}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="Enable Audit Logging" 
                                           FontSize="14" 
                                           FontWeight="Medium" 
                                           Foreground="#333"/>
                                <TextBlock Text="Log all user activities for audit purposes" 
                                           FontSize="12" 
                                           Foreground="#888"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            <CheckBox x:Name="ChkEnableAuditLogs" 
                                      Grid.Column="1"
                                      Style="{StaticResource ToggleSwitch}"
                                      Checked="ChkEnableAuditLogs_Changed"
                                      Unchecked="ChkEnableAuditLogs_Changed"/>
                        </Grid>
                    </Border>

                    <!-- Developer Actions -->
                    <TextBlock Text="Developer Actions" 
                               FontSize="13" 
                               FontWeight="SemiBold" 
                               Foreground="#555"
                               Margin="0,16,0,12"/>

                    <WrapPanel>
                        <Button x:Name="BtnViewErrorLogs" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnViewErrorLogs_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="FileDocumentOutline" Width="16" Height="16"/>
                                <TextBlock Text="View Error Logs" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnClearCache" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnClearCache_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Broom" Width="16" Height="16"/>
                                <TextBlock Text="Clear Cache" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnExportDiagnostics" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnExportDiagnostics_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Export" Width="16" Height="16"/>
                                <TextBlock Text="Export Diagnostics" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnResetAllSettings" 
                                Style="{StaticResource DangerButton}"
                                Margin="0,0,12,12"
                                Click="BtnResetAllSettings_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Restore" Width="16" Height="16"/>
                                <TextBlock Text="Reset All Settings" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- LICENSE & CREDITS Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <iconPacks:PackIconMaterial Kind="CertificateOutline" 
                                                    Width="20" Height="20" 
                                                    Foreground="#4CAF50"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="License and Credits" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Software license and acknowledgements" 
                               Style="{StaticResource SectionSubtitle}"/>

                    <Border Background="#F5F5F5" 
                            CornerRadius="8" 
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="RosalE Healthcare System" 
                                       FontWeight="SemiBold" 
                                       FontSize="14"/>
                            <TextBlock Text="Copyright © 2024 RosalE Medical Clinic. All rights reserved." 
                                       FontSize="12" 
                                       Foreground="#666"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="This software is licensed for use by authorized personnel only." 
                                       FontSize="12" 
                                       Foreground="#666"
                                       Margin="0,4,0,0"/>

                            <TextBlock Text="Third-Party Libraries:" 
                                       FontWeight="SemiBold" 
                                       FontSize="13"
                                       Margin="0,16,0,8"/>

                            <StackPanel Margin="0,0,0,4">
                                <TextBlock FontSize="12">
                                    <Run Text="•" Foreground="#888"/>
                                    <Run Text=" Entity Framework 6" Foreground="#333"/>
                                    <Run Text=" - Microsoft" Foreground="#888"/>
                                </TextBlock>
                                <TextBlock FontSize="12">
                                    <Run Text="•" Foreground="#888"/>
                                    <Run Text=" MahApps.Metro" Foreground="#333"/>
                                    <Run Text=" - MahApps Contributors" Foreground="#888"/>
                                </TextBlock>
                                <TextBlock FontSize="12">
                                    <Run Text="•" Foreground="#888"/>
                                    <Run Text=" Material Design In XAML" Foreground="#333"/>
                                    <Run Text=" - MaterialDesignInXAML Contributors" Foreground="#888"/>
                                </TextBlock>
                                <TextBlock FontSize="12">
                                    <Run Text="•" Foreground="#888"/>
                                    <Run Text=" LiveCharts" Foreground="#333"/>
                                    <Run Text=" - LiveCharts Contributors" Foreground="#888"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>