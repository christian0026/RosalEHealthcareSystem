<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.Settings.DatabaseSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="900"
             Background="White">

    <UserControl.Resources>
        <!-- Section Card Style -->
        <Style x:Key="SectionCard" TargetType="Border">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Section Subtitle Style -->
        <Style x:Key="SectionSubtitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Info Row Style -->
        <Style x:Key="InfoRow" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#EEEEEE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Warning Button Style -->
        <Style x:Key="WarningButton" TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FB8C00"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EF6C00"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Connected -->
        <Style x:Key="StatusBadgeConnected" TargetType="Border">
            <Setter Property="Background" Value="#E8F5E9"/>
            <Setter Property="BorderBrush" Value="#A5D6A7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>

        <!-- Status Badge Disconnected -->
        <Style x:Key="StatusBadgeDisconnected" TargetType="Border">
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="BorderBrush" Value="#EF9A9A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
        </Style>

        <!-- Table Header Style -->
        <Style x:Key="TableHeader" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="CornerRadius" Value="8,8,0,0"/>
        </Style>

        <!-- Table Row Style -->
        <Style x:Key="TableRow" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#F0F0F0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="24">
        <StackPanel>

            <!-- DATABASE INFORMATION Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Database" 
                                                        Width="20" Height="20" 
                                                        Foreground="#1976D2"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Database Information" 
                                       Style="{StaticResource SectionTitle}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- Connection Status Badge -->
                        <Border x:Name="ConnectionStatusBadge" 
                                Style="{StaticResource StatusBadgeConnected}"
                                HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="StatusIndicator" 
                                         Width="8" Height="8" 
                                         Fill="#4CAF50"
                                         VerticalAlignment="Center"/>
                                <TextBlock x:Name="TxtConnectionStatus" 
                                           Text="Connected" 
                                           FontSize="12" 
                                           FontWeight="SemiBold"
                                           Foreground="#2E7D32"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Database Info Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Server Name -->
                        <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="Server" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Server" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtServerName" 
                                               Text="--" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Database Name -->
                        <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="DatabaseOutline" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Database" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtDatabaseName" 
                                               Text="--" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Database Size -->
                        <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="ChartDonut" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Database Size" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtDatabaseSize" 
                                               Text="--" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- SQL Server Version -->
                        <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="InformationOutline" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="SQL Server Version" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtSqlVersion" 
                                               Text="--" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               TextTrimming="CharacterEllipsis"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Last Checked -->
                        <Border Grid.Column="0" Grid.Row="2" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="ClockOutline" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Last Checked" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtLastChecked" 
                                               Text="--" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Recovery Model -->
                        <Border Grid.Column="2" Grid.Row="2" Style="{StaticResource InfoRow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <iconPacks:PackIconMaterial Kind="ShieldCheck" 
                                                            Width="18" Height="18" 
                                                            Foreground="#888"
                                                            VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Recovery Model" FontSize="11" Foreground="#888"/>
                                    <TextBlock x:Name="TxtRecoveryModel" 
                                               Text="--" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Refresh Button -->
                    <Button x:Name="BtnTestConnection" 
                            Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Left"
                            Margin="0,16,0,0"
                            Click="BtnTestConnection_Click">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Refresh" Width="16" Height="16"/>
                            <TextBlock Text="Test Connection" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- TABLE STATISTICS Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Table" 
                                                        Width="20" Height="20" 
                                                        Foreground="#9C27B0"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Table Statistics" 
                                       Style="{StaticResource SectionTitle}"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                        <Button x:Name="BtnRefreshStats" 
                                Style="{StaticResource SecondaryButton}"
                                Padding="12,6"
                                HorizontalAlignment="Right"
                                Click="BtnRefreshStats_Click">
                            <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14"/>
                        </Button>
                    </Grid>

                    <!-- Table Stats Grid -->
                    <Border Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" Style="{StaticResource TableHeader}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Table Name" FontWeight="SemiBold" FontSize="12" Foreground="#555"/>
                                    <TextBlock Grid.Column="1" Text="Record Count" FontWeight="SemiBold" FontSize="12" Foreground="#555" HorizontalAlignment="Right"/>
                                    <TextBlock Grid.Column="2" Text="Size" FontWeight="SemiBold" FontSize="12" Foreground="#555" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>

                            <!-- Table Items -->
                            <ItemsControl x:Name="TableStatsList" Grid.Row="1">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TableRow}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <iconPacks:PackIconMaterial Kind="TableLarge" 
                                                                                Width="14" Height="14" 
                                                                                Foreground="#888"
                                                                                VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding TableName}" 
                                                               FontSize="13"
                                                               Margin="8,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding RecordCount, StringFormat='{}{0:N0}'}" 
                                                           FontSize="13"
                                                           Foreground="#555"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding SizeFormatted}" 
                                                           FontSize="13"
                                                           Foreground="#888"
                                                           HorizontalAlignment="Right"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- DATABASE MAINTENANCE Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <iconPacks:PackIconMaterial Kind="Wrench" 
                                                    Width="20" Height="20" 
                                                    Foreground="#FF9800"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Database Maintenance" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Perform maintenance tasks to optimize database performance" 
                               Style="{StaticResource SectionSubtitle}"/>

                    <!-- Maintenance Actions -->
                    <WrapPanel>
                        <Button x:Name="BtnOptimizeDatabase" 
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnOptimizeDatabase_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Speedometer" Width="16" Height="16"/>
                                <TextBlock Text="Optimize Database" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnCheckIntegrity" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnCheckIntegrity_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ShieldCheck" Width="16" Height="16"/>
                                <TextBlock Text="Check Integrity" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnShrinkDatabase" 
                                Style="{StaticResource WarningButton}"
                                Margin="0,0,12,12"
                                Click="BtnShrinkDatabase_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ArrowCollapse" Width="16" Height="16"/>
                                <TextBlock Text="Shrink Database" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnClearTempData" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnClearTempData_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Broom" Width="16" Height="16"/>
                                <TextBlock Text="Clear Temp Data" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>

                    <!-- Progress Panel -->
                    <Border x:Name="MaintenanceProgressPanel" 
                            Background="#F5F5F5" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,8,0,0"
                            Visibility="Collapsed">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <TextBlock x:Name="TxtMaintenanceProgress" 
                                           Text="Running maintenance..." 
                                           FontSize="14" 
                                           FontWeight="Medium"/>
                                <TextBlock x:Name="TxtMaintenancePercent" 
                                           Text="" 
                                           FontSize="14" 
                                           HorizontalAlignment="Right"/>
                            </Grid>
                            <ProgressBar x:Name="MaintenanceProgressBar" 
                                         Height="6" 
                                         IsIndeterminate="True"
                                         Foreground="#2E7D32"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- DATA MANAGEMENT Section -->
            <Border Style="{StaticResource SectionCard}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <iconPacks:PackIconMaterial Kind="DatabaseCog" 
                                                    Width="20" Height="20" 
                                                    Foreground="#F44336"
                                                    VerticalAlignment="Center"/>
                        <TextBlock Text="Data Management" 
                                   Style="{StaticResource SectionTitle}"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Manage old records and database cleanup (use with caution)" 
                               Style="{StaticResource SectionSubtitle}"/>

                    <!-- Warning -->
                    <Border Background="#FFF3E0" 
                            BorderBrush="#FFCC80" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="12" 
                            Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="AlertOutline" 
                                                        Width="18" Height="18" 
                                                        Foreground="#EF6C00"
                                                        VerticalAlignment="Center"/>
                            <TextBlock Text="These operations can permanently delete data. Make sure to create a backup before proceeding." 
                                       FontSize="12" 
                                       Foreground="#E65100"
                                       TextWrapping="Wrap"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Data Management Actions -->
                    <WrapPanel>
                        <Button x:Name="BtnCleanupLogs" 
                                Style="{StaticResource WarningButton}"
                                Margin="0,0,12,12"
                                Click="BtnCleanupLogs_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="DeleteClock" Width="16" Height="16"/>
                                <TextBlock Text="Cleanup Old Logs" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnArchiveRecords" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,12"
                                Click="BtnArchiveRecords_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Archive" Width="16" Height="16"/>
                                <TextBlock Text="Archive Old Records" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="BtnPurgeDeleted" 
                                Style="{StaticResource DangerButton}"
                                Margin="0,0,12,12"
                                Click="BtnPurgeDeleted_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="DeleteForever" Width="16" Height="16"/>
                                <TextBlock Text="Purge Deleted Records" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </WrapPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>