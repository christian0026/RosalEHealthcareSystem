<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.MedicineInventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
             Background="#F5F5F5"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" 
                Background="#80000000" 
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="Loading medicines..." 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">

                <!-- SUMMARY CARDS -->
                <UniformGrid Columns="4" Margin="0,0,0,24">
                    <controls:SummaryCard x:Name="cardTotalMedicines"
                                        Title="Total Medicines"
                                        Value="0"
                                        Icon="💊"
                                        TopColor="#4CAF50"
                                        IconBackground="#E8F5E9"
                                        TrendText="+8% from last month"
                                        TrendColor="#4CAF50"
                                        TrendIcon="▲"
                                        Margin="6"/>

                    <controls:SummaryCard x:Name="cardLowStock"
                                        Title="Low Stock Medicines"
                                        Value="0"
                                        Icon="⚠️"
                                        TopColor="#FF9800"
                                        IconBackground="#FFF3E0"
                                        TrendText="Requires Attention"
                                        TrendColor="#FF9800"
                                        TrendIcon="⚠"
                                        Margin="6"/>

                    <controls:SummaryCard x:Name="cardExpiring"
                                        Title="Expiring Soon"
                                        Value="0"
                                        Icon="📅"
                                        TopColor="#F44336"
                                        IconBackground="#FFEBEE"
                                        TrendText="Within 3 months"
                                        TrendColor="#F44336"
                                        TrendIcon="⚠"
                                        Margin="6"/>

                    <controls:SummaryCard x:Name="cardOutOfStock"
                                        Title="Out of Stock"
                                        Value="0"
                                        Icon="❌"
                                        TopColor="#D32F2F"
                                        IconBackground="#FFCDD2"
                                        TrendText="Immediate Restock Needed"
                                        TrendColor="#D32F2F"
                                        TrendIcon="⚠"
                                        Margin="6"/>
                </UniformGrid>

                <!-- MEDICINE RECORDS HEADER -->
                <DockPanel Margin="0,0,0,16">
                    <TextBlock Text="Medicine Records" 
                               FontSize="18" 
                               FontWeight="Bold"
                               DockPanel.Dock="Left" 
                               VerticalAlignment="Center"/>
                    <Button x:Name="btnAddMedicine"
                            Content="➕ Add New Medicine"
                            Background="#2E7D32" 
                            Foreground="White" 
                            Padding="16,10"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            HorizontalAlignment="Right" 
                            DockPanel.Dock="Right"
                            Click="BtnAddMedicine_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DockPanel>

                <!-- SEARCH & FILTER -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <Grid Grid.Column="0" Margin="0,0,12,0">
                            <TextBox x:Name="txtSearch"
                                     Height="40"
                                     Padding="12,10"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     BorderBrush="#E0E0E0"
                                     BorderThickness="1"
                                     TextChanged="TxtSearch_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                    Margin="10,0"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <TextBlock Text="🔍 Search by Name or Medicine ID"
                                       Foreground="#999999"
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"
                                       IsHitTestVisible="False"
                                       FontSize="14">
                                <TextBlock.Visibility>
                                    <Binding ElementName="txtSearch" Path="Text.IsEmpty">
                                        <Binding.Converter>
                                            <BooleanToVisibilityConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </TextBlock.Visibility>
                            </TextBlock>
                        </Grid>

                        <!-- Category Filter -->
                        <ComboBox x:Name="cbCategory" 
                                  Grid.Column="1"
                                  Height="40" 
                                  Margin="0,0,12,0"
                                  Padding="12,0"
                                  FontSize="14"
                                  VerticalContentAlignment="Center"
                                  BorderBrush="#E0E0E0"
                                  SelectionChanged="FilterChanged">
                            <ComboBoxItem Content="All Categories" IsSelected="True"/>
                        </ComboBox>

                        <!-- Status Filter -->
                        <ComboBox x:Name="cbStatus" 
                                  Grid.Column="2"
                                  Height="40" 
                                  Margin="0,0,12,0"
                                  Padding="12,0"
                                  FontSize="14"
                                  VerticalContentAlignment="Center"
                                  BorderBrush="#E0E0E0"
                                  SelectionChanged="FilterChanged">
                            <ComboBoxItem Content="All Status" IsSelected="True"/>
                            <ComboBoxItem Content="Available"/>
                            <ComboBoxItem Content="Low Stock"/>
                            <ComboBoxItem Content="Out of Stock"/>
                            <ComboBoxItem Content="Expiring Soon"/>
                        </ComboBox>

                        <!-- Search Button -->
                        <Button Grid.Column="3"
                                Content="Search" 
                                Background="#009688" 
                                Foreground="White" 
                                Padding="20,10"
                                BorderThickness="0"
                                Width="100"
                                Height="40"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Click="BtnSearch_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00796B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- MEDICINE LIST -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08"/>
                    </Border.Effect>

                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock Text="Medicine List" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       DockPanel.Dock="Left"/>
                            <TextBlock x:Name="txtResultCount"
                                       Text="Showing 0 medicines"
                                       Foreground="#666666"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       DockPanel.Dock="Right"/>
                        </DockPanel>

                        <DataGrid x:Name="dgMedicines"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  RowHeight="60"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  SelectionMode="Single"
                                  AlternatingRowBackground="#FAFAFA"
                                  FontSize="13">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Padding="{TemplateBinding Padding}" 
                                                        Background="{TemplateBinding Background}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <!-- Medicine Info with Avatar -->
                                <DataGridTemplateColumn Header="Medicine Info" Width="260">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="40" Height="40" 
                                                        Background="#E3F2FD" 
                                                        CornerRadius="20"
                                                        Margin="0,0,12,0">
                                                    <TextBlock Text="{Binding Initials}" 
                                                               Foreground="#1976D2" 
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontWeight="SemiBold"
                                                               FontSize="13"/>
                                                    <TextBlock Text="{Binding GenericName}" 
                                                               Foreground="#999999"
                                                               FontSize="11"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Medicine ID -->
                                <DataGridTextColumn Header="Medicine ID" 
                                                    Binding="{Binding MedicineId}" 
                                                    Width="110"/>

                                <!-- Category -->
                                <DataGridTextColumn Header="Category" 
                                                    Binding="{Binding Category}" 
                                                    Width="130"/>

                                <!-- Stock Level with Color -->
                                <DataGridTemplateColumn Header="Stock Level" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Stock}" 
                                                       FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding StockStatus}" Value="Critical">
                                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding StockStatus}" Value="Low">
                                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding StockStatus}" Value="Good">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Unit Price -->
                                <DataGridTextColumn Header="Unit Price" 
                                                    Binding="{Binding PriceFormatted}" 
                                                    Width="100"/>

                                <!-- Expiry Date with Color -->
                                <DataGridTemplateColumn Header="Expiry Date" Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ExpiryDateFormatted}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsExpiring}" Value="True">
                                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                                <Setter Property="Foreground" Value="#D32F2F"/>
                                                                <Setter Property="FontWeight" Value="Bold"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Status Badge -->
                                <DataGridTemplateColumn Header="Status" Width="130">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="12" Padding="12,4" HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Available">
                                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Expiring Soon">
                                                                <Setter Property="Background" Value="#FFF3E0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Expired">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status}" 
                                                           FontSize="11" 
                                                           FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Available">
                                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                                    <Setter Property="Foreground" Value="#F57C00"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Expiring Soon">
                                                                    <Setter Property="Foreground" Value="#F57C00"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Expired">
                                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Actions -->
                                <DataGridTemplateColumn Header="Actions" Width="220">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="👁️ View" 
                                                        Background="#0288D1" 
                                                        Foreground="White" 
                                                        Margin="3" 
                                                        Padding="8,4"
                                                        BorderThickness="0"
                                                        FontSize="11"
                                                        Cursor="Hand"
                                                        Click="BtnView_Click"
                                                        Tag="{Binding MedicineId}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="4"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#0277BD"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <Button Content="✏️ Edit" 
                                                        Background="#FFA000" 
                                                        Foreground="White" 
                                                        Margin="3" 
                                                        Padding="8,4"
                                                        BorderThickness="0"
                                                        FontSize="11"
                                                        Cursor="Hand"
                                                        Click="BtnEdit_Click"
                                                        Tag="{Binding MedicineId}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="4"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#FF8F00"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <Button Content="🗑️ Delete" 
                                                        Background="#D32F2F" 
                                                        Foreground="White" 
                                                        Margin="3" 
                                                        Padding="8,4"
                                                        BorderThickness="0"
                                                        FontSize="11"
                                                        Cursor="Hand"
                                                        Click="BtnDelete_Click"
                                                        Tag="{Binding MedicineId}">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                CornerRadius="4"
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                                            VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#C62828"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- PAGINATION -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,20,0,0"
                                    x:Name="paginationPanel">
                            <Button x:Name="btnFirst" 
                                    Content="⏮" 
                                    Width="40" 
                                    Height="40"
                                    Margin="4"
                                    Click="BtnFirst_Click"
                                    IsEnabled="False"/>

                            <Button x:Name="btnPrevious" 
                                    Content="◀" 
                                    Width="40" 
                                    Height="40"
                                    Margin="4"
                                    Click="BtnPrevious_Click"
                                    IsEnabled="False"/>

                            <TextBlock x:Name="txtPageInfo" 
                                       Text="Page 1 of 1" 
                                       VerticalAlignment="Center"
                                       Margin="12,0"
                                       FontSize="13"
                                       Foreground="#666666"/>

                            <Button x:Name="btnNext" 
                                    Content="▶" 
                                    Width="40" 
                                    Height="40"
                                    Margin="4"
                                    Click="BtnNext_Click"
                                    IsEnabled="False"/>

                            <Button x:Name="btnLast" 
                                    Content="⏭" 
                                    Width="40" 
                                    Height="40"
                                    Margin="4"
                                    Click="BtnLast_Click"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>