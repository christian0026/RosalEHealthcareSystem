<UserControl x:Class="RosalEHealthcare.UI.WPF.Views.MedicineInventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:RosalEHealthcare.UI.WPF.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:RosalEHealthcare.UI.WPF.Views"
             Background="#F0F2F5"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:BoolToArchiveStatusConverter x:Key="BoolToArchiveText"/>
        <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}"/>
    </UserControl.Resources>

    <Grid>
        <Border x:Name="LoadingOverlay" 
                Background="#99FFFFFF" 
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Value="0"
                             Width="50"
                             Height="50"
                             Margin="0,0,0,16"
                             Foreground="{StaticResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Loading Inventory..." 
                           Foreground="{StaticResource PrimaryHueMidBrush}" 
                           FontSize="16" 
                           FontWeight="Medium"/>
            </StackPanel>
        </Border>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,24">
                <controls:SummaryCard x:Name="cardTotalMedicines"
                                    Title="Total Medicines"
                                    Value="0"
                                    Icon="💊"
                                    TopColor="#4CAF50"
                                    IconBackground="#E8F5E9"
                                    TrendText="Inventory Count"
                                    TrendColor="#4CAF50"
                                    Margin="0,0,16,0"/>

                <controls:SummaryCard x:Name="cardLowStock"
                                    Title="Low Stock"
                                    Value="0"
                                    Icon="⚠️"
                                    TopColor="#FF9800"
                                    IconBackground="#FFF3E0"
                                    TrendText="Requires Restock"
                                    TrendColor="#FF9800"
                                    TrendIcon="⚠"
                                    Margin="0,0,16,0"/>

                <controls:SummaryCard x:Name="cardExpiring"
                                    Title="Expiring Soon"
                                    Value="0"
                                    Icon="📅"
                                    TopColor="#F44336"
                                    IconBackground="#FFEBEE"
                                    TrendText="Next 90 Days"
                                    TrendColor="#F44336"
                                    TrendIcon="⚠"
                                    Margin="0,0,16,0"/>

                <controls:SummaryCard x:Name="cardOutOfStock"
                                    Title="Out of Stock"
                                    Value="0"
                                    Icon="❌"
                                    TopColor="#D32F2F"
                                    IconBackground="#FFCDD2"
                                    TrendText="Critical Alert"
                                    TrendColor="#D32F2F"
                                    TrendIcon="⚠"
                                    Margin="0"/>
            </UniformGrid>

            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:ColorZone Mode="Standard" 
                                            Padding="8,4" 
                                            CornerRadius="8" 
                                            Panel.ZIndex="1"
                                            Margin="0,0,16,0"
                                            materialDesign:ShadowAssist.ShadowDepth="Depth1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Magnify" Opacity=".56" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBox x:Name="txtSearch" 
                                     Grid.Column="1" 
                                     Margin="8,0,0,0"
                                     materialDesign:HintAssist.Hint="Search medicines..." 
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden" 
                                     BorderThickness="0" 
                                     MinWidth="250" 
                                     VerticalAlignment="Center"
                                     TextChanged="TxtSearch_TextChanged"/>
                        </Grid>
                    </materialDesign:ColorZone>

                    <ComboBox x:Name="cbCategory"
                              materialDesign:HintAssist.Hint="Category"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="12,10"
                              MinWidth="180"
                              Margin="0,0,16,0"
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="All Categories" IsSelected="True"/>
                    </ComboBox>

                    <ComboBox x:Name="cbStatus"
                              materialDesign:HintAssist.Hint="Status"
                              materialDesign:TextFieldAssist.HasClearButton="True"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="12,10"
                              MinWidth="150"
                              Margin="0,0,8,0"
                              SelectionChanged="FilterChanged">
                        <ComboBoxItem Content="All Status" IsSelected="True"/>
                        <ComboBoxItem Content="Available"/>
                        <ComboBoxItem Content="Low Stock"/>
                        <ComboBoxItem Content="Out of Stock"/>
                        <ComboBoxItem Content="Expiring Soon"/>
                    </ComboBox>

                    <Button Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Clear Filters"
                            Click="BtnClearFilters_Click">
                        <materialDesign:PackIcon Kind="FilterOff" Opacity="0.6"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">

                    <CheckBox x:Name="chkShowArchived"
                              Content="Show Archived"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"
                              Checked="ChkShowArchived_Changed"
                              Unchecked="ChkShowArchived_Changed"/>

                    <materialDesign:PopupBox x:Name="btnExport" 
                                             ToolTip="Import / Export Tools"
                                             Margin="0,0,12,0"
                                             PlacementMode="BottomAndAlignRightEdges">
                        <materialDesign:PopupBox.ToggleContent>
                            <Border BorderThickness="1" 
                                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                    CornerRadius="4" 
                                    Padding="12,8"
                                    Background="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Tools" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.7"/>
                                    <TextBlock Text="Tools" VerticalAlignment="Center" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>
                        </materialDesign:PopupBox.ToggleContent>
                        <StackPanel>
                            <Button Click="BtnExportExcel_Click" ToolTip="Export to Excel">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileExcel" Margin="0,0,8,0" />
                                    <TextBlock Text="Export to Excel"/>
                                </StackPanel>
                            </Button>
                            <Button Click="BtnExportPdf_Click" ToolTip="Export to PDF">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FilePdfBox" Margin="0,0,8,0"/>
                                    <TextBlock Text="Export to PDF"/>
                                </StackPanel>
                            </Button>
                            <Separator/>
                            <Button Click="BtnImport_Click" ToolTip="Import Data">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Upload" Margin="0,0,8,0"/>
                                    <TextBlock Text="Import Data"/>
                                </StackPanel>
                            </Button>
                            <Button Click="BtnDownloadTemplate_Click" ToolTip="Get Excel Template">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDownload" Margin="0,0,8,0"/>
                                    <TextBlock Text="Download Template"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </materialDesign:PopupBox>

                    <Button x:Name="btnAddMedicine"
                            Click="BtnAddMedicine_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            ToolTip="Add New Medicine">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0"/>
                            <TextBlock Text="Add Medicine" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <materialDesign:Card Grid.Row="2" 
                                 Background="White" 
                                 UniformCornerRadius="8" 
                                 materialDesign:ShadowAssist.ShadowDepth="Depth1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1" Padding="16">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Pill" VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.7"/>
                                <TextBlock Text="Inventory List" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="txtResultCount"
                                       Text="Showing 0 medicines"
                                       HorizontalAlignment="Right"
                                       FontSize="12"
                                       Opacity="0.6"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <DataGrid x:Name="dgMedicines"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserSortColumns="True"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#F0F0F0"
                              RowHeight="55"
                              Background="Transparent"
                              BorderThickness="0">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="16,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Medicine Name" Width="2.5*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:ColorZone Mode="PrimaryLight" Width="40" Height="40" CornerRadius="20" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding Initials}" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center" 
                                                           FontWeight="Bold" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                            </materialDesign:ColorZone>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding GenericName}" FontSize="12" Opacity="0.6" Margin="0,0,8,0"/>
                                                    <Border Background="#EEE" CornerRadius="4" Padding="4,0" VerticalAlignment="Center"
                                                            Visibility="{Binding Brand, Converter={StaticResource BoolToVis}}">
                                                        <TextBlock Text="{Binding Brand}" FontSize="10" Opacity="0.8"/>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="ID" Binding="{Binding MedicineId}" Width="Auto" Foreground="#888"/>

                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="1.5*"/>

                            <DataGridTemplateColumn Header="Stock" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Stock}" HorizontalAlignment="Right" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding StockStatus}" Value="Critical">
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding StockStatus}" Value="Low">
                                                            <Setter Property="Foreground" Value="#FF9800"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding StockStatus}" Value="Good">
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Price" Binding="{Binding PriceFormatted}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Status" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Padding="12,4" HorizontalAlignment="Center" MinWidth="90">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Available">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Expiring Soon">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" FontSize="12" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Available">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Low Stock">
                                                                <Setter Property="Foreground" Value="#EF6C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Out of Stock">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Expiring Soon">
                                                                <Setter Property="Foreground" Value="#EF6C00"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Expiry" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ExpiryDateFormatted}" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Actions" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="View Details"
                                                    Width="30" Height="30"
                                                    Click="BtnView_Click" Tag="{Binding Id}">
                                                <materialDesign:PackIcon Kind="Eye" Width="16" Height="16" Foreground="#0288D1"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="Edit"
                                                    Width="30" Height="30"
                                                    Click="BtnEdit_Click" Tag="{Binding Id}">
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16" Foreground="#FFA000"/>
                                            </Button>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    ToolTip="{Binding IsActive, Converter={StaticResource BoolToArchiveText}}"
                                                    Width="30" Height="30"
                                                    Click="BtnDelete_Click" Tag="{Binding Id}">
                                                <materialDesign:PackIcon Kind="Archive" Width="16" Height="16" Foreground="#D32F2F"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <TextBlock x:Name="txtPageInfo" Text="Page 1 of 1" VerticalAlignment="Center" Margin="0,0,16,0" Opacity="0.6"/>
                <Button x:Name="btnFirst" Click="BtnFirst_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="First Page">
                    <materialDesign:PackIcon Kind="PageFirst"/>
                </Button>
                <Button x:Name="btnPrevious" Click="BtnPrevious_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Previous">
                    <materialDesign:PackIcon Kind="ChevronLeft"/>
                </Button>
                <Button x:Name="btnNext" Click="BtnNext_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Next">
                    <materialDesign:PackIcon Kind="ChevronRight"/>
                </Button>
                <Button x:Name="btnLast" Click="BtnLast_Click" Style="{StaticResource MaterialDesignIconButton}" ToolTip="Last Page">
                    <materialDesign:PackIcon Kind="PageLast"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>