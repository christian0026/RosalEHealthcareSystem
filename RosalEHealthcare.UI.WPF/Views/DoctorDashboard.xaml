<controls:MetroWindow x:Class="RosalEHealthcare.UI.WPF.Views.DoctorDashboard"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Doctor Dashboard"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize"
                      MinWidth="1200" MinHeight="750"
                      Background="#F5F5F5">

    <controls:MetroWindow.Resources>
        <!-- Sidebar button style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A8A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2F7D2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active nav button style -->
        <Style x:Key="SidebarButtonActive" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#3FA23F"/>
        </Style>

        <!-- Quick action button -->
        <Style x:Key="QuickActionBtn" TargetType="Button">
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </controls:MetroWindow.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#2E7D32">
            <DockPanel>
                <StackPanel Margin="16" DockPanel.Dock="Top">
                    <!-- Logo & Title -->
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,12">
                        <Ellipse Width="40" Height="40" Fill="White"/>
                        <TextBlock Text="ROSAL eHEALTHCARE" Foreground="White" FontWeight="Bold"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- User Info -->
                    <StackPanel Margin="0,10,0,0">
                        <Ellipse Width="48" Height="48" Fill="LightGray"/>
                        <TextBlock Text="Dr. Name" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,8,0,0"/>
                        <TextBlock Text="Doctor" Foreground="White" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel DockPanel.Dock="Top" Margin="8,30,8,0">
                    <Button Content="Dashboard" Style="{StaticResource SidebarButtonActive}" Margin="8"/>
                    <Button Content="Patient Records" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="Appointment Lists" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="Prescription Management" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="Medical Reports" Style="{StaticResource SidebarButton}" Margin="8"/>
                    <Button Content="System Settings" Style="{StaticResource SidebarButton}" Margin="8"/>
                </StackPanel>

                <!-- Logout -->
                <StackPanel DockPanel.Dock="Bottom" Margin="16,12">
                    <Button Content="Logout" Background="#A14747" Foreground="White" Padding="12"
                            Click="Logout_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <DockPanel Grid.Column="1">
            <!-- Topbar -->
            <Border DockPanel.Dock="Top" Height="60" Background="White" Margin="0,0,0,6">
                <Grid>
                    <TextBlock Text="Doctor Dashboard" FontSize="22" FontWeight="Bold"
                               Foreground="#2E7D32" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    <Button Content="🔔" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                            Background="Transparent" BorderBrush="Transparent" FontSize="18"/>
                </Grid>
            </Border>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">

                    <!-- Summary Cards -->
                    <UniformGrid Columns="4" Margin="0,0,0,20">
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Total Patients" Foreground="Gray"/>
                                <TextBlock Text="1,245" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="↑12% from last month" Foreground="Green"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Today's Appointments" Foreground="Gray"/>
                                <TextBlock Text="87" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="↑5% from yesterday" Foreground="Blue"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Low stock Medicines" Foreground="Gray"/>
                                <TextBlock Text="23" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="⚠ Requires attention" Foreground="OrangeRed"/>
                            </StackPanel>
                        </Border>
                        <Border Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Expiring Medicines" Foreground="Gray"/>
                                <TextBlock Text="45" FontSize="26" FontWeight="Bold"/>
                                <TextBlock Text="⚠ Expiring in 30 days" Foreground="Red"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <!-- Charts -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Common Illness -->
                        <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Common Illness" FontSize="16" FontWeight="Bold"/>
                                <Ellipse Width="120" Height="120" Fill="#2E7D32" HorizontalAlignment="Center" Margin="0,20"/>
                                <TextBlock Text="Line chart showing weekly patient visits with trend analysis"
                                           Foreground="Gray" FontSize="12" TextAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Appointment Status -->
                        <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="16" Margin="6">
                            <StackPanel>
                                <TextBlock Text="Appointment Status" FontSize="16" FontWeight="Bold"/>
                                <Ellipse Width="120" Height="120" Fill="#2E7D32" HorizontalAlignment="Center" Margin="0,20"/>
                                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                    <TextBlock Text="Confirmed (35%)" Foreground="Green"/>
                                    <TextBlock Text="Pending (20%)" Foreground="Orange"/>
                                    <TextBlock Text="Cancelled (20%)" Foreground="Red"/>
                                    <TextBlock Text="Completed (25%)" Foreground="Blue"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recent Consultations -->
                    <Border Background="White" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Recent Patient Consultations" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Latest medical consultations and diagnoses"
                                       Foreground="Gray" FontSize="12" Margin="0,0,0,10"/>
                            <DataGrid AutoGenerateColumns="False" HeadersVisibility="Column"
                                      CanUserAddRows="False" IsReadOnly="True" Margin="0,10,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="150"/>
                                    <DataGridTextColumn Header="Patient Name" Binding="{Binding Name}" Width="200"/>
                                    <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="100"/>
                                    <DataGridTextColumn Header="Primary Diagnosis" Binding="{Binding Diagnosis}" Width="200"/>
                                    <DataGridTextColumn Header="Treatment" Binding="{Binding Treatment}" Width="200"/>
                                    <DataGridTextColumn Header="Follow-up" Binding="{Binding FollowUp}" Width="150"/>
                                    <DataGridTemplateColumn Header="Action" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="View Record" Background="#2E7D32" Foreground="White" Padding="6,2"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</controls:MetroWindow>
