<UserControl x:Class="RosalEHealthcare.UI.WPF.Controls.AppointmentCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="520"
             Margin="10">

    <Border Background="White"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="#E0E0E0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Status Bar -->
            <Border x:Name="StatusBar"
                    Grid.Row="0"
                    Height="6"
                    Background="#FFA000"
                    CornerRadius="12,12,0,0"/>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar -->
                    <Border Grid.Column="0"
                            Width="50"
                            Height="50"
                            CornerRadius="25"
                            Background="#4CAF50"
                            Margin="0,0,15,0">
                        <TextBlock x:Name="txtInitials"
                                   Text="JD"
                                   Foreground="White"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Name & ID -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="txtPatientName"
                                   Text="Juan Dela Cruz"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#333"/>
                        <TextBlock FontSize="12" Foreground="#999" Margin="0,2,0,0">
                            <Run Text="ID:"/>
                            <Run x:Name="txtAppointmentId" Text="APT-2025-001"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Status Chip -->
                    <Border x:Name="StatusChip"
                            Grid.Column="2"
                            Background="#FFF3E0"
                            CornerRadius="12"
                            Padding="12,6"
                            VerticalAlignment="Top">
                        <TextBlock x:Name="txtStatus"
                                   Text="PENDING"
                                   Foreground="#FFA000"
                                   FontSize="11"
                                   FontWeight="Bold"/>
                    </Border>
                </Grid>

                <!-- Appointment Details -->
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <!-- Date & Time -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="CalendarClock"
                                                 Width="16"
                                                 Height="16"
                                                 Foreground="#666"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1"
                                   x:Name="txtDateTime"
                                   Text="January 15, 2025 - 10:00 AM"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#333"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Type -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="ClipboardText"
                                                 Width="16"
                                                 Height="16"
                                                 Foreground="#666"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1">
                            <Run Text="Type:" Foreground="#999"/>
                            <Run x:Name="txtType" Text="General Consultation" Foreground="#333" FontWeight="SemiBold"/>
                        </TextBlock>
                    </Grid>

                    <!-- Chief Complaint -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Stethoscope"
                                                 Width="16"
                                                 Height="16"
                                                 Foreground="#666"
                                                 VerticalAlignment="Top"
                                                 Margin="0,2,8,0"/>
                        <TextBlock Grid.Column="1" TextWrapping="Wrap">
                            <Run Text="Complaint:" Foreground="#999"/>
                            <Run x:Name="txtCondition" Text="Fever and cough" Foreground="#333"/>
                        </TextBlock>
                    </Grid>

                    <!-- Contact -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="Phone"
                                                 Width="16"
                                                 Height="16"
                                                 Foreground="#666"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1">
                            <Run Text="Contact:" Foreground="#999"/>
                            <Run x:Name="txtContact" Text="+63 912 345 6789" Foreground="#333"/>
                        </TextBlock>
                    </Grid>

                    <!-- Age & Gender -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0"
                                                 Kind="AccountCircle"
                                                 Width="16"
                                                 Height="16"
                                                 Foreground="#666"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="1">
                            <Run x:Name="txtAge" Text="28 years old" Foreground="#333"/>
                            <Run Text="•" Foreground="#999"/>
                            <Run x:Name="txtGender" Text="Male" Foreground="#333"/>
                        </TextBlock>
                    </Grid>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="2" x:Name="ActionButtons" Orientation="Horizontal" HorizontalAlignment="Left"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>