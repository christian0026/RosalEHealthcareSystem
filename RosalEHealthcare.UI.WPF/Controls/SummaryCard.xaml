<UserControl x:Class="RosalEHealthcare.UI.WPF.Controls.SummaryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="300">
    <Border x:Name="CardBorder"
            Background="White" 
            CornerRadius="12" 
            Cursor="Hand"
            MouseEnter="CardBorder_MouseEnter"
            MouseLeave="CardBorder_MouseLeave">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="2" Opacity="0.08"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Color Bar -->
            <Border x:Name="TopBorder"
                    Grid.Row="0"
                    Height="5"
                    Background="#4CAF50"
                    CornerRadius="12,12,0,0"/>

            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="20,16,20,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Text Content -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <!-- Title -->
                    <TextBlock x:Name="TitleTextBlock"
                               Text="Total Patients" 
                               Foreground="#757575" 
                               FontSize="14"
                               FontWeight="Normal"/>

                    <!-- Value -->
                    <TextBlock x:Name="ValueTextBlock"
                               Text="0" 
                               FontSize="36" 
                               FontWeight="Bold" 
                               Foreground="#333" 
                               Margin="0,6,0,0"/>

                    <!-- Trend Indicator -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,8,0,0"
                                x:Name="TrendStackPanel"
                                Visibility="Visible">
                        <TextBlock x:Name="TrendIconTextBlock"
                                   Text="✓" 
                                   Foreground="#4CAF50" 
                                   FontWeight="Bold" 
                                   FontSize="13"
                                   Margin="0,0,6,0"/>
                        <TextBlock x:Name="TrendTextBlock"
                                   Text="+12% from last month" 
                                   Foreground="#4CAF50" 
                                   FontSize="13"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right Side - Icon -->
                <Border x:Name="IconBorder"
                        Grid.Column="1"
                        Background="#E8F5E9" 
                        Width="56" 
                        Height="56" 
                        CornerRadius="28"
                        VerticalAlignment="Top">
                    <TextBlock x:Name="IconTextBlock"
                               Text="👥" 
                               FontSize="26" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
