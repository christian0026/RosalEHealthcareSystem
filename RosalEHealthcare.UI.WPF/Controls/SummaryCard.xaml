<UserControl x:Class="RosalEHealthcare.UI.WPF.Controls.SummaryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="280">
    <Border x:Name="CardBorder"
            Background="White" 
            CornerRadius="10" 
            Padding="20" 
            Cursor="Hand"
            MouseEnter="CardBorder_MouseEnter"
            MouseLeave="CardBorder_MouseLeave">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Top Color Bar -->
            <Border x:Name="TopBorder"
                    Grid.Row="0"
                    Height="4"
                    Background="#4CAF50"
                    CornerRadius="2"
                    Margin="0,0,0,15"/>
            <!-- Content -->
            <Grid Grid.Row="1">
                <StackPanel VerticalAlignment="Center">
                    <!-- Title -->
                    <TextBlock x:Name="TitleTextBlock"
                               Text="Total Patients" 
                               Foreground="#757575" 
                               FontSize="13"
                               FontWeight="Normal"/>
                    <!-- Value -->
                    <TextBlock x:Name="ValueTextBlock"
                               Text="0" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#333" 
                               Margin="0,8,0,0"/>
                </StackPanel>
                <!-- Icon -->
                <Border x:Name="IconBorder"
                        Background="#E8F5E9" 
                        Width="60" 
                        Height="60" 
                        CornerRadius="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-10,0,0">
                    <TextBlock x:Name="IconTextBlock"
                               Text="👥" 
                               FontSize="28" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>
            <!-- Trend Indicator -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        Margin="0,8,0,0"
                        x:Name="TrendStackPanel"
                        Visibility="Visible">
                <TextBlock x:Name="TrendIconTextBlock"
                           Text="▲" 
                           Foreground="#4CAF50" 
                           FontWeight="Bold" 
                           FontSize="12"
                           Margin="0,0,4,0"/>
                <TextBlock x:Name="TrendTextBlock"
                           Text="+12% from last month" 
                           Foreground="#4CAF50" 
                           FontSize="12"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>